<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:custom="sap.ui.yesco.control">
    <Dialog id= "EmployeeSearch" title="{i18n>LABEL_00207}" contentWidth="800px" contentHeight="400px">
        <beginButton>
            <Button text="{i18n>LABEL_00112}" icon="sap-icon://accept" press=".EmployeeSearch.onSelectClick" class="cancel" />
        </beginButton>
        <endButton>
            <Button text="{i18n>LABEL_00115}" icon="sap-icon://decline" press=".EmployeeSearch.onCloseClick" class="cancel" />
        </endButton>
        <content>
            <table:Table id="groupTable" width="100%" rows="{EmployeeModel>/empList}" visibleRowCount="1" rowHeight="45" columnHeaderHeight="45" columnHeaderVisible="false">
                <table:extension>
                    <HBox>
                        <Label text="{i18n>LABEL_00259}" />
                        <custom:DatePicker dateValue="{ path: '/FormData/Begda', type: 'sap.ui.yesco.mvc.model.type.Date' }" width="250px" editable="{= !${/FormData/ZappStatAl} }" />
                        <Label text="{i18n>LABEL_00201}" />
                        <Input value="{EmployeeModel>/Search}"/>
                        <Button icon="sap-icon://search" text="{i18n>LABEL_00101}" />
                    </HBox>
                </table:extension>
                <table:columns>
                    <table:Column width="auto" sortProperty="Zname" filterProperty="Zname">
                        <Label text="{i18n>LABEL_00227}"/>
                        <table:template>
                            <Text text="{Zname}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="200px" sortProperty="Famtx" filterProperty="Famtx">
                        <Label text="{i18n>LABEL_00230}"/>
                        <table:template>
                            <Text text="{Famtx}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </content>
    </Dialog>
</core:FragmentDefinition>