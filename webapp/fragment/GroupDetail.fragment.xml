<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:custom="sap.ui.yesco.control">
    <Dialog id= "EmployeeSearch" title="{i18n>LABEL_00207}" contentWidth="800px" contentHeight="410px" busyIndicatorDelay="0" busy="{/employeeModel/org/busy}">
        <beginButton>
            <Button text="{i18n>LABEL_00112}" press=".EmployeeSearch.onOrgClick" type="Emphasized" />
        </beginButton>
        <endButton>
            <Button text="{i18n>LABEL_00115}" press=".EmployeeSearch.onCloseClick" />
        </endButton>
        <content>
            <VBox class="hCardBox sapUiSmallMarginBottom">
                <HBox class="form-bar" justifyContent="Start" alignItems="Center">
                    <Label text="{i18n>LABEL_00259}" />
                    <custom:DatePicker dateValue="{ path: '/employeeModel/org/Date', type: 'sap.ui.yesco.mvc.model.type.Date' }" width="200px" />
                    <Label text="{i18n>LABEL_00201}" />
                    <Input value="{/employeeModel/org/Word}" width="200px" submit=".EmployeeSearch.onOrgList" />
                    <Button icon="asset/image/icon_search03.png" text="{i18n>LABEL_00101}" press=".EmployeeSearch.onOrgList" class="icon-button" />
                </HBox>
            </VBox>
            <VBox class="hCardBox">
                <table:Table id="orgTable" rows="{/employeeModel/org/orgList}" rowSelectionChange=".EmployeeSearch.onOrgListRowSelection" visibleRowCount="{/employeeModel/org/orgListLength}" rowHeight="44" columnHeaderHeight="45">
                    <table:columns>
                        <table:Column width="auto" sortProperty="Stext" filterProperty="Stext">
                            <Label text="{i18n>LABEL_00227}"/>
                            <table:template>
                                <Text text="{Stext}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="200px" sortProperty="EnameM" filterProperty="EnameM">
                            <Label text="{i18n>LABEL_00230}"/>
                            <table:template>
                                <Text text="{EnameM}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>