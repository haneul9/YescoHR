<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:custom="sap.ui.yesco.control">
    <Dialog id= "EmployeeSearch" title="{i18n>LABEL_00207}" contentWidth="800px" contentHeight="400px" busyIndicatorDelay="0" busy="{/employeeModel/org/busy}">
        <beginButton>
            <Button text="{i18n>LABEL_00112}" icon="sap-icon://accept" press=".EmployeeSearch.onOrgClick" class="cancel" />
        </beginButton>
        <endButton>
            <Button text="{i18n>LABEL_00115}" icon="sap-icon://decline" press=".EmployeeSearch.onCloseClick" class="cancel" />
        </endButton>
        <content>
            <table:Table id="orgTable" rows="{/employeeModel/org/orgList}" rowSelectionChange=".EmployeeSearch.onOrgListRowSelection" visibleRowCount="{/employeeModel/org/orgList/length}" rowHeight="44" columnHeaderHeight="45" columnHeaderVisible="false">
                <table:extension>
                    <HBox>
                        <Label text="{i18n>LABEL_00259}" />
                        <custom:DatePicker dateValue="{ path: '/employeeModel/org/Date', type: 'sap.ui.yesco.mvc.model.type.Date' }" width="250px" />
                        <Label text="{i18n>LABEL_00201}" />
                        <Input value="{/employeeModel/org/Word}"/>
                        <Button icon="sap-icon://search" text="{i18n>LABEL_00101}" press=".EmployeeSearch.onOrgList" />
                    </HBox>
                </table:extension>
                <table:columns>
                    <table:Column width="auto" sortProperty="Stext" filterProperty="Stext">
                        <Label text="{i18n>LABEL_00227}"/>
                        <table:template>
                            <Text text="{Stext}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="200px" sortProperty="EnameM" filterProperty="EnameM">
                        <Label text="{i18n>LABEL_00230}"/>
                        <table:template>
                            <Text text="{EnameM}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </content>
    </Dialog>
</core:FragmentDefinition>