<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:table="sap.ui.table">
    <Dialog id= "EmployeeSearch" title="{i18n>LABEL_00205}" contentWidth="1500px" contentHeight="650px" busyIndicatorDelay="0" busy="{/employeeModel/busy}">
        <beginButton>
            <Button text="{i18n>LABEL_00112}" press=".EmployeeSearch.onSelectClick" type="Emphasized" />
        </beginButton>
        <endButton>
            <Button text="{i18n>LABEL_00115}" press=".EmployeeSearch.onCloseClick" />
        </endButton>
        <content>
            <HBox width="100%">
                <VBox width="20%" class="sapUiMediumMarginEnd">
                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="search-head">
                        <HBox>
                            <!-- <core:Icon src="sap-icon://filter" /> -->
                            <Label text="{i18n>LABEL_00203}" />
                        </HBox>
                        <Button press=".EmployeeSearch.onEmpSearch" class="icon-button search" />
                    </HBox>
                    <grid:CSSGrid gridTemplateRows="1fr 2fr" gridGap="6px 0px" class="form-grid type-d">
                        <Label text="{i18n>LABEL_00237}" />
                        <VBox>
                            <ComboBox items="{/employeeModel/PersArea}" selectedKey="{/employeeModel/Search/Persa}" width="100%">
                                <core:Item text="{Pbtxt}" key="{Werks}" />
                            </ComboBox>
                        </VBox>
                        <Label text="{i18n>LABEL_00211}" />
                        <VBox>
                            <Input value="{/employeeModel/Search/Ename}"/>
                        </VBox>
                        <Label text="{i18n>LABEL_00226}" />
                        <VBox>
                            <Input value="{/employeeModel/Search/Pbtxt}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".EmployeeSearch.onGroupDetail" />
                        </VBox>
                        <Label text="{i18n>LABEL_00240}" />
                        <VBox>
                            <ComboBox items="{/employeeModel/WorkType}" selectedKey="{/employeeModel/Search/Stat2}" width="100%">
                                <core:Item text="{Ztext}" key="{Zcode}" />
                            </ComboBox>
                        </VBox>
                        <Label text="{i18n>LABEL_00238}" />
                        <VBox>
                            <ComboBox items="{/employeeModel/EmpGroup}" selectedKey="{/employeeModel/Search/Persg}" change=".EmployeeSearch.onSubEmpCode" width="100%">
                                <core:Item text="{Ztext}" key="{Zcode}" />
                            </ComboBox>
                        </VBox>
                        <Label text="{i18n>LABEL_00327}" />
                        <VBox>
                            <ComboBox items="{/employeeModel/SubEmpGroup}" selectedKey="{/employeeModel/Search/Persk}" width="100%">
                                <core:Item text="{Ztext}" key="{Zcode}" />
                            </ComboBox>
                        </VBox>
                    </grid:CSSGrid>
                </VBox>
                <VBox width="80%">
                    <table:Table id="empTable" rows="{/employeeModel/empList}" rowSelectionChange=".EmployeeSearch.onRowSelection" visibleRowCount="{/employeeModel/empList/length}" rowHeight="44" columnHeaderHeight="45" columnHeaderVisible="false">
                        <table:extension>
                            <OverflowToolbar>
                                <!-- <core:Icon src="sap-icon://table-chart" /> -->
                                <Label text="{i18n>LABEL_00204}" />
                            </OverflowToolbar>
                        </table:extension>
                        <table:columns>
                            <table:Column width="100px" sortProperty="Pernr" filterProperty="Pernr">
                                <Label text="{i18n>LABEL_00209}"/>
                                <table:template>
                                    <Text text="{Pernr}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="auto" sortProperty="Ename" filterProperty="Ename">
                                <Label text="{i18n>LABEL_00210}"/>
                                <table:template>
                                    <Text text="{Ename}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="auto" sortProperty="Context" filterProperty="Context">
                                <Label text="{i18n>LABEL_00227}"/>
                                <table:template>
                                    <Text text="{Context}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="auto" sortProperty="Stetx" filterProperty="Stetx">
                                <Label text="{i18n>LABEL_00219}"/>
                                <table:template>
                                    <Text text="{Stetx}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="100px" sortProperty="Zzjikgbt" filterProperty="Zzjikgbt">
                                <Label text="{i18n>LABEL_00215}"/>
                                <table:template>
                                    <Text text="{Zzjikgbt}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="100px" sortProperty="Postx" filterProperty="Postx">
                                <Label text="{i18n>LABEL_00213}"/>
                                <table:template>
                                    <Text text="{Postx}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="100px" sortProperty="Zzjikcht" filterProperty="Zzjikcht">
                                <Label text="{i18n>LABEL_00217}"/>
                                <table:template>
                                    <Text text="{Zzjikcht}" textAlign="End" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="90px" sortProperty="Text1" filterProperty="Text1">
                                <Label text="{i18n>LABEL_00234}"/>
                                <table:template>
                                    <Text text="{Text1}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="100px" sortProperty="Stat2tx" filterProperty="Stat2tx">
                                <Label text="{i18n>LABEL_00240}"/>
                                <table:template>
                                    <Text text="{Stat2tx}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="100px" sortProperty="Entda" filterProperty="Entda">
                                <Label text="{i18n>LABEL_00235}"/>
                                <table:template>
                                    <Text text="{
                                    path: 'Entda',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                        pattern: 'yyyy.MM.dd'
                                    }
                                }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                            <table:Column width="100px" sortProperty="Retdt" filterProperty="Retdt">
                                <Label text="{i18n>LABEL_00236}"/>
                                <table:template>
                                    <Text text="{
                                    path: 'Retdt',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                        pattern: 'yyyy.MM.dd'
                                    }
                                }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                                </table:template>
                            </table:Column>
                        </table:columns>
                    </table:Table>
                </VBox>
            </HBox>
        </content>
    </Dialog>
</core:FragmentDefinition>