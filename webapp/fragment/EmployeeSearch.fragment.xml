<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:table="sap.ui.table">
  <Dialog id= "EmployeeSearch" title="{i18n>LABEL_00205}" contentWidth="1500px" contentHeight="665px" busyIndicatorDelay="0" busy="{/employeeModel/busy}">
    <beginButton>
      <Button text="{i18n>LABEL_00112}" press=".EmployeeSearch.onSelectClick" type="Emphasized" />
    </beginButton>
    <endButton>
      <Button text="{i18n>LABEL_00115}" press=".EmployeeSearch.onCloseClick" />
    </endButton>
    <content>
      <HBox width="100%" class="dialog-content">
        <VBox width="20%" class="hCardBox sapUiSmallMarginEnd">
          <HBox justifyContent="SpaceBetween" alignItems="Center" class="search-head pb-10-px">
            <!-- <core:Icon src="sap-icon://filter" /> -->
            <Label text="{i18n>LABEL_00203}" />
            <Button press=".EmployeeSearch.onEmpSearch" class="icon-button search" />
          </HBox>
          <grid:CSSGrid gridTemplateRows="1fr 2fr" gridGap="6px 0px" class="form-grid type-d">
            <Label text="{i18n>LABEL_00237}" />
            <VBox>
              <ComboBox items="{/employeeModel/PersArea}" selectedKey="{/employeeModel/Search/Persa}" width="100%">
                <core:Item text="{Pbtxt}" key="{Werks}" />
              </ComboBox>
            </VBox>
            <Label text="{i18n>LABEL_00211}" />
            <VBox>
              <Input value="{/employeeModel/Search/Ename}" submit=".EmployeeSearch.onEmpSearch" />
            </VBox>
            <Label text="{i18n>LABEL_00226}" />
            <VBox>
              <Input value="{/employeeModel/Search/Pbtxt}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".EmployeeSearch.onGroupDetail" />
            </VBox>
            <Label text="{i18n>LABEL_00240}" />
            <VBox>
              <ComboBox items="{/employeeModel/WorkType}" selectedKey="{/employeeModel/Search/Stat2}" width="100%" enabled="{/employeeModel/Enabled/Stat2}">
                <core:Item text="{Ztext}" key="{Zcode}" />
              </ComboBox>
            </VBox>
            <Label text="{i18n>LABEL_00238}" />
            <VBox>
              <ComboBox items="{/employeeModel/EmpGroup}" selectedKey="{/employeeModel/Search/Persg}" change=".EmployeeSearch.onSubEmpCode" width="100%">
                <core:Item text="{Ztext}" key="{Zcode}" />
              </ComboBox>
            </VBox>
            <Label text="{i18n>LABEL_00327}" />
            <VBox>
              <ComboBox items="{/employeeModel/SubEmpGroup}" selectedKey="{/employeeModel/Search/Persk}" width="100%">
                <core:Item text="{Ztext}" key="{Zcode}" />
              </ComboBox>
            </VBox>
          </grid:CSSGrid>
        </VBox>
        <VBox width="80%" height="635px" class="hCardBox">
          <HBox height="46px" justifyContent="SpaceBetween" class="table-toolbar">
            <Title level="H3" text="{i18n>LABEL_00204}" class="title pb-15-px" />
          </HBox>
          <table:Table id="empTable" rows="{/employeeModel/empList}" rowSelectionChange=".EmployeeSearch.onRowSelection" visibleRowCount="{/employeeModel/empListLength}" rowHeight="34" columnHeaderHeight="35">
            <table:columns>
              <table:Column width="100px" sortProperty="Pernr" filterProperty="Pernr">
                <Label text="{i18n>LABEL_00209}"/>
                <table:template>
                  <Text text="{Pernr}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text"/>
                </table:template>
              </table:Column>
              <table:Column width="150px" sortProperty="Ename" filterProperty="Ename">
                <Label text="{i18n>LABEL_00210}"/>
                <table:template>
                  <Text text="{Ename}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                </table:template>
              </table:Column>
              <table:Column width="auto" sortProperty="Fulln" filterProperty="Fulln">
                <Label text="{i18n>LABEL_00227}"/>
                <table:template>
                  <Text text="{Fulln}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
                </table:template>
              </table:Column>
              <table:Column width="120px" sortProperty="Zzjikgbt" filterProperty="Zzjikgbt">
                <Label text="{i18n>LABEL_00215}"/>
                <table:template>
                  <Text text="{Zzjikgbt}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                </table:template>
              </table:Column>
              <table:Column width="120px" sortProperty="Zzjikcht" filterProperty="Zzjikcht">
                <Label text="{i18n>LABEL_00217}"/>
                <table:template>
                  <Text text="{Zzjikcht}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                </table:template>
              </table:Column>
              <table:Column width="130px" sortProperty="Stat2tx" filterProperty="Stat2tx">
                <Label text="{i18n>LABEL_00240}"/>
                <table:template>
                  <Text text="{Stat2tx}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                </table:template>
              </table:Column>
              <table:Column width="130px" sortProperty="Entda" filterProperty="Entda" visible="{= !!${/employeeModel/visibleEntda} }">
                <Label text="{i18n>LABEL_00235}"/>
                <table:template>
                  <Text text="{
                                    path: 'Entda',
                                    type: 'sap.ui.yesco.mvc.model.type.Date',
                                    formatOptions: {
                                        pattern: 'yyyy.MM.dd'
                                    }
                                }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                </table:template>
              </table:Column>
              <table:Column width="130px" sortProperty="Retdt" filterProperty="Retdt" visible="{= !!${/employeeModel/visibleRetdt} }">
                <Label text="{i18n>LABEL_00236}"/>
                <table:template>
                  <Text text="{
                                    path: 'Retdt',
                                    type: 'sap.ui.yesco.mvc.model.type.Date',
                                    formatOptions: {
                                        pattern: 'yyyy.MM.dd'
                                    }
                                }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                </table:template>
              </table:Column>
            </table:columns>
          </table:Table>
        </VBox>
      </HBox>
    </content>
  </Dialog>
</core:FragmentDefinition>