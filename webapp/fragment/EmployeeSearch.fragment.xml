<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">
    <Dialog id= "EmployeeSearch" title="{i18n>LABEL_00205}" contentWidth="1500px" contentHeight="600px">
        <beginButton>
            <Button text="{i18n>LABEL_00112}" icon="sap-icon://accept" press=".EmployeeSearch.onSelectClick" class="cancel" />
        </beginButton>
        <endButton>
            <Button text="{i18n>LABEL_00115}" icon="sap-icon://decline" press=".EmployeeSearch.onCloseClick" class="cancel" />
        </endButton>
        <content>
            <HBox width="100%">
                <VBox width="auto">
                    <HBox justifyContent="SpaceBetween">
                        <HBox>
                            <core:Icon src="sap-icon://filter" />
                            <Label text="{i18n>LABEL_00203}" />
                        </HBox>
                        <Button icon="sap-icon://search" text="{i18n>LABEL_00101}" />
                    </HBox>
                    <VBox>
                        <Label text="{i18n>LABEL_00237}" />
                        <VBox>
                            <ComboBox items="{EmployeeModel>/PersArea}" selectedKey="{EmployeeModel>/Search/Conresn}" change="">
                                <core:Item text="{Ztext}" key="{Zcode}" />
                            </ComboBox>
                        </VBox>
                        <Label text="{i18n>LABEL_00211}" />
                        <VBox>
                            <Input value="{EmployeeModel>/Search}"/>
                        </VBox>
                        <Label text="{i18n>LABEL_00226}" />
                        <VBox>
                            <Input value="{EmployeeModel>/Search}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".EmployeeSearch.onGroupDetail" />
                        </VBox>
                        <Label text="{i18n>LABEL_00240}" />
                        <VBox>
                            <ComboBox items="{/EmployeeModel>/Search}" selectedKey="{EmployeeModel>/Search/Conresn}" change="">
                                <core:Item text="{Ztext}" key="{Zcode}" />
                            </ComboBox>
                        </VBox>
                        <Label text="{i18n>LABEL_00238}" />
                        <VBox>
                            <ComboBox items="{EmployeeModel>/Search}" selectedKey="{EmployeeModel>/Search/Conresn}" change="">
                                <core:Item text="{Ztext}" key="{Zcode}" />
                            </ComboBox>
                        </VBox>
                        <Label text="{i18n>LABEL_00327}" />
                        <VBox>
                            <ComboBox items="{EmployeeModel>/Search}" selectedKey="{EmployeeModel>/Search/Conresn}" change="">
                                <core:Item text="{Ztext}" key="{Zcode}" />
                            </ComboBox>
                        </VBox>
                    </VBox>
                </VBox>
                <table:Table id="empTable" width="75%" rows="{EmployeeModel>/empList}" visibleRowCount="1" rowHeight="45" columnHeaderHeight="45" columnHeaderVisible="false">
                    <table:extension>
                        <OverflowToolbar>
                            <core:Icon src="sap-icon://table-chart" />
                            <Label text="{i18n>LABEL_00204}" />
                        </OverflowToolbar>
                    </table:extension>
                    <table:columns>
                        <table:Column width="100px" sortProperty="Zname" filterProperty="Zname">
                            <Label text="{i18n>LABEL_00209}"/>
                            <table:template>
                                <Text text="{Zname}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="auto" sortProperty="Famtx" filterProperty="Famtx">
                            <Label text="{i18n>LABEL_00210}"/>
                            <table:template>
                                <Text text="{Famtx}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="auto" sortProperty="Context" filterProperty="Context">
                            <Label text="{i18n>LABEL_00227}"/>
                            <table:template>
                                <Text text="{Context}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="auto" sortProperty="Conretx" filterProperty="Conretx">
                            <Label text="{i18n>LABEL_00219}"/>
                            <table:template>
                                <Text text="{Conretx}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="100px" sortProperty="Conddate" filterProperty="Conddate">
                            <Label text="{i18n>LABEL_00215}"/>
                            <table:template>
                                <Text text="{Conddate}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="100px" sortProperty="Conrdate" filterProperty="Conrdate">
                            <Label text="{i18n>LABEL_00213}"/>
                            <table:template>
                                <Text text="{Conrdate}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="100px" sortProperty="ZpayBetT" filterProperty="ZpayBetT">
                            <Label text="{i18n>LABEL_00217}"/>
                            <table:template>
                                <Text text="{ZpayBetT}" textAlign="End" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="90px">
                            <Label text="{i18n>LABEL_00234}"/>
                            <table:template>
                                <Text text="{Appda}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="100px" sortProperty="Appda" filterProperty="Appda">
                            <Label text="{i18n>LABEL_00240}"/>
                            <table:template>
                                <Text text="{Appda}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="100px" sortProperty="Sgnda" filterProperty="Sgnda">
                            <Label text="{i18n>LABEL_00235}"/>
                            <table:template>
                                <Text text="{
                                path: 'Sgnda',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'yyyy.MM.dd'
                                }
                            }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="100px" sortProperty="Paydt" filterProperty="Paydt">
                            <Label text="{i18n>LABEL_00236}"/>
                            <table:template>
                                <Text text="{
                                path: 'Paydt',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'yyyy.MM.dd'
                                }
                            }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
            </HBox>
        </content>
    </Dialog>
</core:FragmentDefinition>