<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox>
        <HBox justifyContent="SpaceBetween">
            <Title text="{i18n>LABEL_00128}" level="H2" />
            <Button type="Transparent" icon="sap-icon://employee-approvals" visible="{= !${/TargetInfo/Hide}}" />
        </HBox>
        <HBox>
            <Image src="{/TargetInfo/Photo}" height="100px" width="100px" />
            <VBox>
                <Text text="{/TargetInfo/Ename}"/>
                <HBox>
                    <Text text="{
                        path: '/TargetInfo/Zzjikgbt',
                        formatter: '.formatter.getPosition'
                    }"/>
                </HBox>
                <HBox>
                    <Text text="{/TargetInfo/Pbtxt}"/>
                    <Text text="{/TargetInfo/Btrtx}"/>
                </HBox>
                <Text text="{/TargetInfo/Orgtx}"/>
            </VBox>
        </HBox>
    </VBox>
</core:FragmentDefinition>