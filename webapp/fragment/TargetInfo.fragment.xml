<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox sapUiMediumMarginEnd" width="33%">
        <VBox>
            <HBox justifyContent="SpaceBetween">
                <Title text="{i18n>LABEL_00128}" level="H2" />
                <Button type="Transparent" icon="sap-icon://employee-approvals" visible="{= ${targetModel>/isChangeButtonShow}}" class="icon-button" />
            </HBox>
            <HBox class="my-info">
                <VBox width="30%" alignItems="Start" class="member-picture">
                    <Image src="{targetModel>/Photo}" />
                </VBox>
                <VBox class="my-info-detail">
                    <Text text="{targetModel>/Ename}" class="name" />
                    <HBox>
                        <Text text="{targetModel>/Zzjikgbt} / {targetModel>/Zzjiktlt}"/>
                    </HBox>
                    <HBox>
                        <Text text="{targetModel>/Pbtxt}"/>
                        <Text text="{targetModel>/Btrtx}"/>
                    </HBox>
                    <Text text="{targetModel>/Orgtx}"/>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>