<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <HBox id="InfoMegBox" justifyContent="SpaceBetween" class="vCardBox" visible="{= !!${/InfoMessage} ? true : false}">
        <HBox>
            <core:Icon src="sap-icon://travel-request"/>
            <Text text="{/InfoMessage}"/>
        </HBox>
        <Button press=".formatter.onInfoMsgClose" type="Transparent" icon="sap-icon://decline" />
    </HBox>
</core:FragmentDefinition>