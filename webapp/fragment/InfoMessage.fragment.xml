<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <HBox id="InfoMegBox" justifyContent="SpaceBetween" class="vCardBox info-area sapUiMediumMarginBottom" visible="{= !!${/InfoMessage} ? true : false}">
        <HBox>
            <core:Icon src="sap-icon://travel-request"/>
            <Text text="{/InfoMessage}"/>
        </HBox>
        <Button press=".FragmentEvent.onInfoMsgClose" type="Transparent" class="icon-button close"/>
    </HBox>
</core:FragmentDefinition>