<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid">
	<VBox class="vCardBox" visible="{= !!${/ApprovalDetails/ZappStatAl} }">
		<HBox>
			<Title text="{i18n>LABEL_00139}" level="H2" />
		</HBox>
		<grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
			<Label text="{i18n>LABEL_00138}"/>
			<Text text="{
				path: '/ApprovalDetails/Docno',
				formatter: '.TextUtils.getDocnoTxt'
			}"/>
			<Label text="{i18n>LABEL_00140}"/>
			<Text text="{/ApprovalDetails/ZappStxtAl}"/>
			<Label text="{i18n>LABEL_00141}"/>
			<Text text="{/ApprovalDetails/Sgnda}"/>
			<Label visible="{= ${/ApprovalDetails/ZappStatAl} === '45' || ${/ApprovalDetails/ZappStatAl} === '65' || !!${/ApprovalDetails/ZappResn}}" text="{i18n>LABEL_00142}" />
			<Text visible="{= ${/ApprovalDetails/ZappStatAl} === '45' || ${/ApprovalDetails/ZappStatAl} === '65' || !!${/ApprovalDetails/ZappResn}}" text="{/ApprovalDetails/ZappResn}" />
		</grid:CSSGrid>
	</VBox>
</core:FragmentDefinition>