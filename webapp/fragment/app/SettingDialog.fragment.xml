
<core:FragmentDefinition  
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
	xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <Dialog id="settingDialog" title="개인메뉴 설정" contentWidth="500px" contentHeight="300px">
        <beginButton>
            <Button text="취소" press=".onClick" />
        </beginButton>
        <endButton>
            <Button type="Emphasized" text="확인" press=".onClick" />
        </endButton>
        <content>
            <VBox class="personal-menu-setting">
            <grid:CSSGrid id="grid1" gridTemplateRows="1fr 1fr" gridTemplateColumns="repeat(2,1fr)" gridGap="10px 20px">
                <grid:items>
                    <CheckBox text="근태정보" selected="true"/>
                    <CheckBox text="성과관리" selected="true"/>
                    <CheckBox text="오늘팀원 현황" selected="true" />
                    <CheckBox text="인원현황" selected="true"/>
                    <CheckBox text="공지사항" selected="true"/>
                    <CheckBox text="즐겨찾기 메뉴"/>
                    <CheckBox text="팀달력" selected="true" />
                    <CheckBox text="인원현황"/>
                </grid:items>
            </grid:CSSGrid>            
        </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>