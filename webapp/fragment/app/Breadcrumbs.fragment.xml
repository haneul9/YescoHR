<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<HBox justifyContent="Start">
		<Breadcrumbs currentLocationText="{menuModel>/breadcrumbs/currentLocationText}" separatorStyle="GreaterThan">
			<Link enabled="false" subtle="true" text="{menuModel>/breadcrumbs/name1}" visible="{= !!${menuModel>/breadcrumbs/show1} }" />
			<Link enabled="false" subtle="true" text="{menuModel>/breadcrumbs/name2}" visible="{= !!${menuModel>/breadcrumbs/show2} }" />
			<Link enabled="false" subtle="true" text="{menuModel>/breadcrumbs/name3}" visible="{= !!${menuModel>/breadcrumbs/show3} }" />
		</Breadcrumbs>
		<ToggleButton type="Transparent" icon="sap-icon://favorite" press="onPress" pressed="true" class="icon-button favorite" />
	</HBox>
</core:FragmentDefinition>