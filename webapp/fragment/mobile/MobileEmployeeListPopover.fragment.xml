<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <Popover modal="true" placement="Top" showArrow="false" showHeader="false" horizontalScrolling="false" verticalScrolling="false" resizable="{resizable}" class="half-popover employee-list-popover" busy="{busy}" busyIndicatorDelay="0">
    <content>
      <HBox class="search-field-container">
        <SearchField value="{terms}" placeholder="{i18n>LABEL_00211}" liveChange=".onLiveChange" />
      </HBox>
      <ScrollContainer horizontal="false" vertical="true">
        <content>
          <custom:MobileEmployeeList items="{employees}" photo="Photo" name="Ename" rank="Zzjikgbt" duty="Zzjikcht" department="Fulln" itemPress=".navToProfile">
            <CustomListItem>
              <!-- 돋보기 아이콘 -->
              <Link visible="{= ${Navigable} === 'O' }" class="icon-search" press=".navToProfile">
                <customData>
                  <core:CustomData key="navigable" value="{Navigable}" writeToDom="true" />
                </customData>
                <layoutData>
                  <FlexItemData styleClass="icon-link" />
                </layoutData>
              </Link>
            </CustomListItem>
          </custom:MobileEmployeeList>
        </content>
      </ScrollContainer>
    </content>
  </Popover>
</core:FragmentDefinition>