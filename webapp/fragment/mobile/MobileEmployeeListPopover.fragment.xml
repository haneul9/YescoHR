<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Popover modal="true" placement="Top" showArrow="false" showHeader="false" horizontalScrolling="false" verticalScrolling="false" resizable="{resizable}" class="half-popover" busy="{busy}" busyIndicatorDelay="0">
    <content>
      <HBox class="px-20-px">
        <SearchField value="{terms}" width="100%" placeholder="{i18n>LABEL_00211}" liveChange=".liveChange">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
        </SearchField>
      </HBox>
      <ScrollContainer horizontal="false" vertical="true" width="100%" height="calc(100% - 55px)" class="sapUiNativeScrollbars mt-15-px">
        <content>
          <List items="{ path: 'employees', templateShareable: false }" rememberSelections="false" showSeparators="None" noDataText="{i18n>MSG_00001}" class="emp-search-list">
            <CustomListItem>
              <HBox alignItems="Center" class="lh-30-px">
                <!-- 사진 -->
                <Image src="{Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="24px" height="24px" press="{= ${IconMode} === 'Profile' ? '.navToProfile' : '.noop' }">
                  <layoutData>
                    <FlexItemData baseSize="30px" maxWidth="30px" styleClass="h-24-px" />
                  </layoutData>
                </Image>
                <!-- 성명 -->
                <Link text="{Ename}" subtle="true" width="100%" class="name" press="{= ${IconMode} === 'Profile' ? '.navToProfile' : '.noop' }">
                  <layoutData>
                    <FlexItemData baseSize="70px" maxWidth="70px" />
                  </layoutData>
                </Link>
                <!-- 직급/직책 -->
                <Link text="{Zzjikgbt}/{Zzjikcht}" subtle="true" width="100%" press="{= ${IconMode} === 'Profile' ? '.navToProfile' : '.noop' }">
                  <layoutData>
                    <FlexItemData baseSize="90px" maxWidth="90px" />
                  </layoutData>
                </Link>
                <!-- 부서명 -->
                <Link text="{Fulln}" subtle="true" width="100%" press="{= ${IconMode} === 'Profile' ? '.navToProfile' : '.noop' }">
                  <layoutData>
                    <FlexItemData growFactor="1" maxWidth="calc(100% - 213px)" styleClass="pr-4-px" />
                  </layoutData>
                </Link>
                <Link visible="{= ${IconMode} === 'Profile' }" subtle="true" width="20px" class="icon-search" press="{= ${IconMode} === 'Profile' ? '.navToProfile' : '.noop' }" />
                <Link visible="{= ${IconMode} === 'Telephone' }" subtle="true" width="20px" class="icon-telephone" enabled="{= !!${Phone} }" href="tel:{Phone}" />
              </HBox>
            </CustomListItem>
          </List>
        </content>
      </ScrollContainer>
    </content>
  </Popover>
</core:FragmentDefinition>