<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="search-box">
    <SegmentedButton width="100%" selectedKey="{/search/dateRange}" selectionChange=".onMobileSearchList" class="type-c">
      <items>
        <SegmentedButtonItem text="{i18n>LABEL_00190}" key="1w" visible="{= ${/listInfo/view1wButton} !== false }"/>
        <SegmentedButtonItem text="{= ${/listInfo/view1wButton} !== false ? ${i18n>LABEL_00191} : ${i18n>LABEL_00198} }" key="1m" />
        <SegmentedButtonItem text="{i18n>LABEL_00192}" key="3m" />
        <SegmentedButtonItem text="{i18n>LABEL_00193}" key="6m" />
        <SegmentedButtonItem text="{i18n>LABEL_00194}" key="12m" />
        <SegmentedButtonItem text="â‹¯" key="0" />
      </items>
    </SegmentedButton>
    <custom:DateRangeSelection dateValue="{
        path: '/search/date', type: 'sap.ui.yesco.mvc.model.type.Date'
      }" secondDateValue="{
        path: '/search/secondDate', type: 'sap.ui.yesco.mvc.model.type.Date'
      }" visible="{/search/dateBox}" change=".onSearchRange" placeholder="Calendar" class="sapIcon_Date calendar-popover" />
    <custom:SingleComboBox width="100%" items="{/search/entry/select1}" selectedKey="{/search/select1}" visible="{= !!${/search/visible/select1} }" selectionChange=".onChangeSelect1">
      <custom:layoutData>
        <FlexItemData styleClass="mt-8-px" growFactor="1" />
      </custom:layoutData>
      <core:Item key="{code}" text="{text}" />
    </custom:SingleComboBox>
    <custom:SingleComboBox width="100%" items="{/search/entry/select2}" selectedKey="{/search/select2}" visible="{= !!${/search/visible/select2} }" selectionChange=".onChangeSelect2">
      <custom:layoutData>
        <FlexItemData styleClass="mt-8-px" growFactor="1" />
      </custom:layoutData>
      <core:Item key="{code}" text="{text}" />
    </custom:SingleComboBox>
  </VBox>
  <HBox justifyContent="SpaceBetween" class="header-wrap">
    <HBox class="header">
      <Title level="H3" text="{= !!${/listInfo/Title} ? ${/listInfo/Title} : ${i18n>LABEL_00129} }">
        <layoutData>
          <FlexItemData styleClass="header-title" />
        </layoutData>
      </Title>
      <Text text="total { path: '/listInfo/totalCount', type: 'sap.ui.yesco.mvc.model.type.Currency' }">
        <layoutData>
          <FlexItemData styleClass="header-count" />
        </layoutData>
      </Text>
      <Link text="{/listInfo/infoMessage}" visible="{= !!${/listInfo/infoMessage} }" class="desc-txt" subtle="true" press=".onPressMobileInfoMessage">
        <layoutData>
          <FlexItemData maxWidth="50%" />
        </layoutData>
      </Link>
    </HBox>
    <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_tooltip.svg" press=".openMobileCommonListStatusPop" visible="{/listInfo/Popover}" width="16px" height="16px" mode="Background" backgroundPosition="center center" backgroundSize="auto">
      <layoutData>
        <FlexItemData styleClass="header-info-icon" />
      </layoutData>
    </Image>
  </HBox>
</core:FragmentDefinition>