<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox appointee-info-box">
        <HBox justifyContent="SpaceBetween" class="title">
            <Title text="{i18n>LABEL_00128}" level="H2" />
            <Button type="Transparent" icon="asset/css/images/icon_me.png" visible="{appointeeModel>/showChangeButton}" class="icon-button" />
        </HBox>
        <HBox class="my-info">
            <VBox class="member-picture" width="38%">
                <Image src="{appointeeModel>/Photo}" mode="Background" backgroundPosition="center center" width="9.13rem" height="9.13rem" />
            </VBox>
            <VBox justifyContent="Center" class="my-info-detail" height="100%">
                <Text text="{appointeeModel>/Ename}" class="name" />
                <Text text="{appointeeModel>/Zzjikgbt} / {appointeeModel>/Zzjiktlt}" />
                <Text text="{appointeeModel>/Pbtxt} {appointeeModel>/Btrtx}" />
                <Text text="{appointeeModel>/Orgtx}" />
            </VBox>
        </HBox>
    </VBox>
</core:FragmentDefinition>