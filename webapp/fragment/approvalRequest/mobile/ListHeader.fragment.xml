<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="search-box" binding="{/search}">
    <SegmentedButton width="100%" selectedKey="{periodKey}" selectionChange=".onSelectionChangeSearchPeriodKey" class="type-c">
      <items>
        <SegmentedButtonItem text="{i18n>LABEL_00190}" key="1w" visible="{= ${use1wButton} !== false }"/>
        <SegmentedButtonItem text="{= ${use1wButton} !== false ? ${i18n>LABEL_00191} : ${i18n>LABEL_00198} }" key="1m" />
        <SegmentedButtonItem text="{i18n>LABEL_00192}" key="3m" />
        <SegmentedButtonItem text="{i18n>LABEL_00193}" key="6m" />
        <SegmentedButtonItem text="{i18n>LABEL_00194}" key="12m" />
        <SegmentedButtonItem text="â‹¯" key="0" />
      </items>
    </SegmentedButton>
    <custom:DateRangeSelection dateValue="{
      path: 'Apbeg', type: 'sap.ui.yesco.mvc.model.type.Date'
    }" secondDateValue="{
      path: 'Apend', type: 'sap.ui.yesco.mvc.model.type.Date'
    }" visible="{showDateRangeSelection}" change=".onChangeSearchDateRange" placeholder="Calendar" class="sapIcon_Date calendar-popover" />
  </VBox>
  <HBox justifyContent="SpaceBetween" class="header-wrap" binding="{/search/approvalRequestListInfo}">
    <HBox class="header">
      <Title level="H3" text="{title}">
        <layoutData>
          <FlexItemData styleClass="header-title" />
        </layoutData>
      </Title>
      <Text text="total { path: 'count/total', type: 'sap.ui.yesco.mvc.model.type.Currency' }">
        <layoutData>
          <FlexItemData styleClass="header-count" />
        </layoutData>
      </Text>
      <Link text="{description}" visible="{= !!${description} }" class="desc-txt" subtle="true" press=".onPressMobileApprovalRequestListDescription">
        <layoutData>
          <FlexItemData maxWidth="50%" />
        </layoutData>
      </Link>
    </HBox>
    <Image press=".onPressMobileApprovalRequestListStatusLegendPopover" visible="{statusVisible/legendPopover}" src="/sap/public/bc/ui2/zui5_yescohr/images/icon_tooltip.svg" width="16px" height="16px" mode="Background" backgroundPosition="center center" backgroundSize="auto">
      <layoutData>
        <FlexItemData styleClass="header-info-icon" />
      </layoutData>
    </Image>
  </HBox>
</core:FragmentDefinition>