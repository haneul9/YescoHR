<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control">
    <HBox justifyContent="SpaceBetween">
        <Title text="{i18n>LABEL_00202}" level="H2" />
        <Button type="Transparent" press=".onSearch" icon="sap-icon://search" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr" gridGap="8px">
        <Label text="{i18n>LABEL_00266}" design="Bold" />
        <custom:DateRangeSelection dateValue="{/searchDate/secondDate}" secondDateValue="{/searchDate/date}" class="sapIcon_DateRange" />
    </grid:CSSGrid>
</core:FragmentDefinition>