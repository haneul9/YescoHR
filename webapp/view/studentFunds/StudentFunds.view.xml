<mvc:View controllerName="sap.ui.yesco.controller.studentFunds.StudentFunds"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page showHeader="false">
		<content>
			<VBox>
				<HBox justifyContent="SpaceBetween">
					<Breadcrumbs currentLocationText="{i18n>LABEL_03001}" separatorStyle="GreaterThan">
						<Link text="{i18n>LABEL_00145}"/>
					</Breadcrumbs>
					<HBox>
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onClick" />
						<Button icon="sap-icon://print" press=".formatter.onPagePrint" type="Transparent" text="{i18n>LABEL_00131}" />
						<Button icon="sap-icon://sys-help" type="Transparent" text="{i18n>LABEL_00132}" />
					</HBox>
				</HBox>
				<HBox justifyContent="SpaceAround">
					<VBox class="hCardBox" width="33%">
						<core:Fragment fragmentName="sap.ui.yesco.fragment.TargetInfo" type="XML" />
					</VBox>
					<VBox width="33%"/>
					<VBox class="hCardBox" width="33%">
						<core:Fragment fragmentName="sap.ui.yesco.view.studentFunds.fragment.SearchCondition" type="XML" />
					</VBox>
				</HBox>
				<VBox class="vCardBox">
					<core:Fragment fragmentName="sap.ui.yesco.fragment.OverviewTableHeader" type="XML" />
					<core:Fragment fragmentName="sap.ui.yesco.view.studentFunds.fragment.ApplyListTable" type="XML" />
				</VBox>
			</VBox>
		</content>
	</Page>
</mvc:View>