<mvc:View
	controllerName="sap.ui.yesco.controller.ApprovalDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
>
	<VBox>
		<items>
			<HBox>
				<items>
					<Title
						text="결재내역"
						level="H2"
					/>
				</items>
			</HBox>
			<grid:CSSGrid
				gridTemplateColumns="1fr 3fr 1fr 3fr"
				gridGap="8px"
			>
				<Label text="결재문서번호"/>
				<Text text="{/FormData/Docno}"/>
				<Label text="결재상태"/>
				<Text text="{/FormData/ZappStxtAl}"/>
				<Label text="담당자 결재일시"/>
				<Text text="{/FormData/Stfdt}"/>
				<Label
					visible="{= ${/FormData/ZappStatAl} === '45' || ${/FormData/ZappStatAl} === '65' || !!${/FormData/ZappResn}}"
					text="반려사유"
				/>
				<Text
					visible="{= ${/FormData/ZappStatAl} === '45' || ${/FormData/ZappStatAl} === '65' || !!${/FormData/ZappResn}}"
					text="{/FormData/ZappResn}"
				/>
			</grid:CSSGrid>
		</items>
	</VBox>
</mvc:View>