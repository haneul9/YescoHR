<mvc:View controllerName="sap.ui.yesco.controller.congulatulation.CongDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid">
	<Page showHeader="false">
		<content>
			<VBox>
				<HBox justifyContent="SpaceBetween">
					<HBox>
						<core:Icon src="sap-icon://nav-back" press=".onNavBack"/>
						<Text text="복리후생 > 경조금"/>
					</HBox>
					<HBox>
						<Button text="재작성" type="Emphasized" press=".onRewriteBtn" visible="{= ${/FormData/ZappStatAl} === '45' }" />
						<Button text="임시저장" type="Emphasized" press=".onSaveBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Button text="신청" type="Emphasized" press=".onApplyBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Button text="취소" press=".onCancelBtn" visible="{= ${/FormData/ZappStatAl} === '20' }" />
						<Button text="삭제" type="Reject" press=".onDeleteBtn" visible="{= ${/FormData/ZappStatAl} === '10' || ${/FormData/ZappStatAl} === '45' }" />
						<Button icon="sap-icon://action" type="Transparent" text="프린트" />
						<Button icon="sap-icon://action" type="Transparent" text="도움말" />
					</HBox>
				</HBox>
				<core:Fragment fragmentName="sap.ui.yesco.fragment.DetailTargetInfo" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.InfoMessage" type="XML" />
				<VBox>
					<HBox>
						<Title level="H2" text="신청내역" />
						<Text text="경조사유별 대상자 중복(성명/생년월일 비교)
							시 신청불가"/>
					</HBox>
					<grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
						<Label text="경조유형"/>
						<Select id="BenefitType" items="{/BenefitType}" selectedKey="{/FormData/Concode}" width="200px" change="onTypeChange" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
							<core:Item text="{Ztext}" key="{Zcode}" />
						</Select>
						<Label text="대상자 생년월일"/>
						<DatePicker dateValue="{/FormData/Zbirthday}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Label text="경조사유"/>
						<Select id="BenefitCause" items="{/BenefitCause}" selectedKey="{/FormData/Conresn}" width="200px" change=".onCauseChange" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
							<core:Item text="{Ztext}" key="{Zcode}" />
						</Select>
						<Label text="증빙상 경조일"/>
						<DatePicker dateValue="{/FormData/Conddate}" change=".onBenefitChangeDate" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Label text="대상자 관계"/>
						<Select id="BenefitRelation" items="{/BenefitRelation}" selectedKey="{/FormData/Kdsvh}" width="200px" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
							<core:Item text="{Ztext}" key="{Zcode}" />
						</Select>
						<Label text="실재 경조일"/>
						<DatePicker dateValue="{/FormData/Conrdate}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Label text="대상자 성명"/>
						<HBox>
							<Input value="{/FormData/Zname}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
							<Button text="선택" press=".onTargetDialog" enabled="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						</HBox>
						<Label text="행사장소"/>
						<Input value="{/FormData/Zeloc}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Label text="기본급(원)"/>
						<Text text="{/FormData/ZbacBetT}"/>
						<Label text="지급율"/>
						<Text text="{/FormData/PayrtT}"/>
						<Label text="지급액(원)"/>
						<Text text="{/FormData/ZpayBetT}"/>
						<Label text="화환여부(Y/N)"/>
						<Text text="{/FormData/Zflower}"/>
					</grid:CSSGrid>
				</VBox>
				<HBox>
					<!-- <mvc:XMLView viewName="sap.ui.yesco.view.CommonAttachFile"/> -->
					<!-- <core:Fragment fragmentName="sap.ui.yesco.fragment.Applicant" type="XML" /> -->
				</HBox>
				<HBox>
					<core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
				</HBox>
				<HBox visible="{= ${/FormData/ZappStatAl} !== '' }">
					<core:Fragment fragmentName="sap.ui.yesco.fragment.PaymentDetails" type="XML" />
				</HBox>
			</VBox>
		</content>
	</Page>
</mvc:View>