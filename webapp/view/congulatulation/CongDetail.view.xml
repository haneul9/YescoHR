<mvc:View
	controllerName="sap.ui.yesco.controller.congulatulation.CongDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid"
>
	<Panel>
		<VBox>
			<items>
				<HBox justifyContent="SpaceBetween">
					<items>
						<HBox>
							<items>
								<Text text="복리후생 > 경조금"/>
							</items>
						</HBox>
						<HBox>
							<items>
								<Button
									text="재작성"
									type="Emphasized"
									press=".onRewriteBtn"
									visible="{= ${FormData>/ZappStatAl} === '45' }"
								/>
								<Button
									text="임시저장"
									type="Emphasized"
									press=".onSaveBtn"
									visible="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
								/>
								<Button
									text="신청"
									type="Emphasized"
									press=".onApplyBtn"
									visible="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
								/>
								<Button
									text="취소"
									press=".onCancelBtn"
									visible="{= ${FormData>/ZappStatAl} === '20' }"
								/>
								<Button
									text="삭제"
									type="Reject"
									press=".onDeleteBtn"
									visible="{= ${FormData>/ZappStatAl} === '10' || ${FormData>/ZappStatAl} === '45' }"
								/>
								<Button
									icon="sap-icon://action"
									type="Transparent"
									text="프린트"
								/>
								<Button
									icon="sap-icon://action"
									type="Transparent"
									text="도움말"
								/>
							</items>
						</HBox>
					</items>
				</HBox>
				<HBox justifyContent="SpaceBetween">
					<HBox>
						<Image
							src="https://i1.wp.com/jejuhydrofarms.com/wp-content/uploads/2020/05/blank-profile-picture-973460_1280.png?ssl=1"
							height="35px"
							width="35px"
						/>
						<Text text="홍길동"/>
						<Text text="부장/팀장"/>
						<Text text="예스코홀딩스 인사기획팀"/>
						<Text text="경영관리직/12345"/>
					</HBox>
					<Button
						type="Transparent"
						icon="sap-icon://employee-approvals"
					/>
				</HBox>
				<HBox justifyContent="SpaceBetween">
					<HBox>
						<core:Icon src="sap-icon://travel-request"/>
						<Text text="안내를 위한 공간입니다."/>
					</HBox>
					<Button
						type="Transparent"
						icon="sap-icon://decline"
					/>
				</HBox>
				<VBox>
					<items>
						<HBox>
							<items>
								<Title
									level="H2"
									text="신청내역"
								/>
								<Text text="경조사유별 대상자 중복(성명/생년월일 비교)
									시 신청불가"/>
							</items>
						</HBox>
						<grid:CSSGrid
							gridTemplateColumns="1fr 3fr 1fr 3fr"
							gridGap="8px"
						>
							<Label text="경조유형"/>
							<Select
								id="BenefitType"
								selectedKey="{FormData>/Concode}"
								items="{/BenefitType}"
								width="200px"
								change="onTypeChange"
								editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
							>
								<core:Item
									text="{Ztext}"
									key="{Zcode}"
								/>
							</Select>
							<Label text="대상자 생년월일"/>
							<DatePicker
								dateValue="{FormData>/Zbirthday}"
								editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
							/>
							<Label text="경조사유"/>
							<Select
								id="BenefitCause"
								selectedKey="{FormData>/Conresn}"
								items="{/BenefitCause}"
								width="200px"
								change=".onCauseChange"
								editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
							>
								<core:Item
									text="{Ztext}"
									key="{Zcode}"
								/>
							</Select>
							<Label text="증빙상 경조일"/>
							<DatePicker
								dateValue="{FormData>/Conddate}"
								change=".onBenefitChangeDate"
								editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
							/>
							<Label text="대상자 관계"/>
							<Select
								id="BenefitRelation"
								selectedKey="{FormData>/Kdsvh}"
								items="{/BenefitRelation}"
								width="200px"
								editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
							>
								<core:Item
									text="{Ztext}"
									key="{Zcode}"
								/>
							</Select>
							<Label text="실재 경조일"/>
							<DatePicker
								dateValue="{FormData>/Conrdate}"
								editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
							/>
							<Label text="대상자 성명"/>
							<HBox>
								<items>
									<Input
										value="{FormData>/Zname}"
										editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
									/>
									<Button
										text="선택"
										press=".onTargetDialog"
										enabled="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
									/>
								</items>
							</HBox>
							<Label text="행사장소"/>
							<Input
								value="{FormData>/Zeloc}"
								editable="{= ${FormData>/ZappStatAl} === '10' || !${FormData>/ZappStatAl} }"
							/>
							<Label text="기본급(원)"/>
							<Text text="{FormData>/ZbacBetT}"/>
							<Label text="지급율"/>
							<Text text="{FormData>/PayrtT}"/>
							<Label text="지급액(원)"/>
							<Text text="{FormData>/ZpayBetT}"/>
							<Label text="화환여부(Y/N)"/>
							<Text text="{FormData>/Zflower}"/>
						</grid:CSSGrid>
					</items>
				</VBox>
				<HBox>
					<items>
						<core:Fragment
							fragmentName="sap.ui.yesco.fragment.Applicant"
							type="XML"
						/>
					</items>
				</HBox>
				<HBox visible="{= ${FormData>/ZappStatAl} !== '' }">
					<items>
						<core:Fragment
							fragmentName="sap.ui.yesco.fragment.ApprovalDetails"
							type="XML"
						/>
					</items>
				</HBox>
			</items>
		</VBox>
	</Panel>
</mvc:View>