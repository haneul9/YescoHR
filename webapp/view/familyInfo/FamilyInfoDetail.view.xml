<mvc:View controllerName="sap.ui.yesco.controller.familyInfo.FamilyInfoDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:core="sap.ui.core">
	<Page showHeader="false">
		<content>
			<VBox>
				<HBox justifyContent="SpaceBetween">
					<HBox>
						<Breadcrumbs currentLocationText="{i18n>LABEL_00134}" separatorStyle="GreaterThan">
							<Link text="{i18n>LABEL_00160}"/>
							<Link text="{i18n>LABEL_05001}"/>
						</Breadcrumbs>
					</HBox>
					<HBox>
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onApplyBtn" visible="{= !${/FormData/ZappStatAl} }" />
						<Button text="{i18n>LABEL_00110}" type="Reject" press=".onDeleteBtn" visible="{= !!${/FormData/ZappStatAl} }" />
						<Button text="{i18n>LABEL_00146}" press=".onNavBack" />
						<Button icon="sap-icon://print" press=".FragmentEvent.onPagePrint" type="Transparent" text="{i18n>LABEL_00131}" />
						<Button icon="sap-icon://sys-help" type="Transparent" text="{i18n>LABEL_00132}" />
					</HBox>
				</HBox>
				<core:Fragment fragmentName="sap.ui.yesco.fragment.DetailTargetInfo" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.InfoMessage" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.view.familyInfo.fragment.DetailForm" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
				<VBox class="vCardBox" busyIndicatorDelay="0" busy="{/busy}" visible="{= !!${/FormData/ZappStatAl} }" >
					<grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
						<Label text="{i18n>LABEL_00266}" />
						<Text text="{
							path: '/FormData/ZreqDate',
							type: 'sap.ui.model.type.Date'
						}" />
						<Label text="{i18n>LABEL_05003}" />
						<Text text="{
							path: '/FormData/ZappDate',
							type: 'sap.ui.model.type.Date'
						}" />
					</grid:CSSGrid>
				</VBox>
			</VBox>
		</content>
	</Page>
</mvc:View>