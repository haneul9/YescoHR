<mvc:View controllerName="sap.ui.yesco.controller.attendance.Detail"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <Page showHeader="false">
        <VBox>
            <HBox justifyContent="SpaceBetween">
                <core:Fragment fragmentName="sap.ui.yesco.fragment.Navigation" type="XML" />
                <HBox>
                    <Button text="{i18n>LABEL_00104}" width="117px" type="Emphasized" enabled="{= ${/form/hasRow}}" busyIndicatorDelay="0" busy="{/busy}" press=".onPressSave" />
                    <Button text="{i18n>LABEL_00121}" width="117px" type="Emphasized" enabled="{= ${/form/hasRow}}" busyIndicatorDelay="0" busy="{/busy}" press=".onPressApproval" />
                    <Button text="{i18n>LABEL_00146}" width="117px" press=".onNavBack" />
                </HBox>
            </HBox>
            <core:Fragment fragmentName="sap.ui.yesco.fragment.DetailTargetInfo" type="XML" />
            <VBox class="vCardBox" visible="{= ${/type} !== 'B'}">
                <HBox justifyContent="SpaceBetween">
                    <Title level="H2" text="{i18n>LABEL_00129}" />
                    <HBox>
                        <Button icon="sap-icon://add" text="{i18n>LABEL_00107}" press=".onPressAddBtn" />
                        <Button icon="sap-icon://less" text="{i18n>LABEL_00110}" press=".onPressDelBtn" enabled="{= ${/form/hasRow}}" />
                    </HBox>
                </HBox>
                <HBox>
                    <core:Fragment fragmentName="sap.ui.yesco.view.attendance.fragment.SingleTable" type="XML" />
                </HBox>
            </VBox>
            <VBox class="vCardBox" visible="{= ${/type} === 'B'}">
                <HBox justifyContent="SpaceBetween">
                    <Title level="H2" text="{i18n>LABEL_00129}" />
                    <HBox>
                        <Button icon="sap-icon://edit" text="{i18n>LABEL_00109}" press=".onPressChangeBtn" enabled="{= ${/form/hasRow}}" />
                    </HBox>
                </HBox>
                <HBox>
                    <core:Fragment fragmentName="sap.ui.yesco.view.attendance.fragment.MultipleTable" type="XML" />
                </HBox>
            </VBox>
            <core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
            <core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
        </VBox>
    </Page>
</mvc:View>