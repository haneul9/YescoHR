<core:FragmentDefinition xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <table:Table id="approveSingleTable" width="100%" rows="{/form/list}" visibleRowCount="{/form/rowCount}" noData="{i18n>MSG_00001}">
        <table:columns>
            <table:Column width="15%">
                <Label text="근태유형" />
                <table:template>
                    <Text text="{Atext}" width="100%" textAlign="Center" />
                </table:template>
            </table:Column>
            <table:Column width="15%">
                <Label text="시작일" />
                <table:template>
                    <Text text="{BegdaTxt}" width="100%" textAlign="Center" />
                </table:template>
            </table:Column>
            <table:Column width="15%">
                <Label text="종료일" />
                <table:template>
                    <Text text="{EnddaTxt}" width="100%" textAlign="Center" />
                </table:template>
            </table:Column>
            <table:Column width="15%">
                <Label text="기간" />
                <table:template>
                    <Text text="{Abrtg}" width="100%" textAlign="Center" />
                </table:template>
            </table:Column>
            <table:Column width="40%">
                <Label text="사유" />
                <table:template>
                    <Text text="{Tmrsn}" width="100%" textAlign="Center" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</core:FragmentDefinition>