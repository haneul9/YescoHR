<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <HBox justifyContent="SpaceBetween">
        <Title level="H2" text="{i18n>LABEL_04005}" />
        <Button type="Transparent" icon="sap-icon://detail-view" />
    </HBox>
    <HBox visible="{= !!${/quota/10}}">
        <Label text="{i18n>LABEL_04006}" design="Bold" />
        <VBox width="80%">
            <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{/quota/10/Rate}" displayValue="{/quota/10/Usecnt}" showValue="true" state="Information" width="100%" />
            <HBox justifyContent="SpaceBetween">
                <Text text="0" />
                <Text text="{/quota/10/Crecnt}" />
            </HBox>
        </VBox>
    </HBox>
    <HBox visible="{= !!${/quota/20}}">
        <Label text="{i18n>LABEL_04007}" design="Bold" />
        <VBox width="80%">
            <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{/quota/20/Rate}" displayValue="{/quota/20/Usecnt}" showValue="true" state="Error" width="100%" />
            <HBox justifyContent="SpaceBetween">
                <Text text="0" />
                <Text text="{/quota/20/Crecnt}" />
            </HBox>
        </VBox>
    </HBox>
    <HBox visible="{= !!${/quota/30}}">
        <Label text="{i18n>LABEL_04008}" design="Bold" />
        <VBox width="80%">
            <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{/quota/30/Rate}" displayValue="{/quota/30/Usecnt}" showValue="true" state="Success" width="100%" />
            <HBox justifyContent="SpaceBetween">
                <Text text="0" />
                <Text text="{/quota/30/Crecnt}" />
            </HBox>
        </VBox>
    </HBox>
</core:FragmentDefinition>