<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control">
    <HBox justifyContent="SpaceBetween">
        <Title text="{i18n>LABEL_00202}" level="H2" />
        <Button type="Transparent" icon="sap-icon://search" press=".onPressSearch" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr" gridGap="8px">
        <Label text="{i18n>LABEL_00266}" design="Bold" />
        <custom:DateRangeSelection width="90%" class="sapIcon_Date" dateValue="{ path: '/search/Apbeg', type: '.type.ODataDate' }" secondDateValue="{ path: '/search/Apend', type: '.type.ODataDate' }" />
        <Label text="대상자" design="Bold" />
        <Input autocomplete="false" showSuggestion="true" filterSuggests="false" suggest=".onSuggest" suggestionItemSelected=".onSelectSuggest">
            <SuggestionItem text="{Ename}" description="{Fulln}" key="{Pernr}" />
        </Input>
    </grid:CSSGrid>
</core:FragmentDefinition>