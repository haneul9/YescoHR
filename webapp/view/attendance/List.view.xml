<mvc:View controllerName="sap.ui.yesco.controller.attendance.List"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<VBox>
			<HBox justifyContent="SpaceBetween">
				<core:Fragment fragmentName="sap.ui.yesco.fragment.Navigation" type="XML" />
				<HBox>
					<Button type="Emphasized" text="신규신청" press=".onPressNewApprBtn" busyIndicatorDelay="0" busy="{/busy}" />
					<Button type="Emphasized" text="변경신청" press=".onPressModApprBtn" busyIndicatorDelay="0" busy="{/busy}" />
					<Button type="Emphasized" text="취소신청" press=".onPressCancApprBtn" busyIndicatorDelay="0" busy="{/busy}" />
				</HBox>
			</HBox>
			<HBox justifyContent="SpaceAround">
				<VBox class="hCardBox" width="33%">
					<core:Fragment fragmentName="sap.ui.yesco.fragment.TargetInfo" type="XML" />
				</VBox>
				<VBox class="hCardBox" width="33%">
					<core:Fragment fragmentName="sap.ui.yesco.view.attendance.fragment.VacationOverview" type="XML" />
				</VBox>
				<VBox class="hCardBox" width="33%" busyIndicatorDelay="0" busy="{/busy}">
					<core:Fragment fragmentName="sap.ui.yesco.view.attendance.fragment.OverviewSearchCondition" type="XML" />
				</VBox>
			</HBox>
			<VBox class="vCardBox">
				<core:Fragment fragmentName="sap.ui.yesco.fragment.OverviewTableHeader" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.view.attendance.fragment.OverviewTable" type="XML" />
			</VBox>
		</VBox>
	</Page>
</mvc:View>