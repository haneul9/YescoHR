<mvc:View controllerName="sap.ui.yesco.controller.employee.Employee"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <Page showHeader="false">
        <VBox>
            <HBox justifyContent="SpaceBetween">
                <core:Fragment fragmentName="sap.ui.yesco.fragment.Navigation" type="XML" />
                <HBox>
                    <Button type="Transparent" icon="sap-icon://crm-service-manager" text="인사기록부 출력" />
                    <Button type="Transparent" icon="sap-icon://print" text="프린트" />
                    <Button type="Transparent" icon="sap-icon://sys-help" text="도움말" />
                </HBox>
            </HBox>
            <HBox>
                <VBox class="customBox" width="{= ${/sideNavigation/width}}">
                    <HBox justifyContent="SpaceBetween">
                        <SearchField width="320px" value="{/sideNavigation/search/searchText}" placeholder="사번 또는 성명" visible="{= ${/sideNavigation/isShow}}" search=".onPressEmployeeSearch" />
                        <Switch state="true" customTextOn="닫기" customTextOff="열기" change=".onToggleNavigation"/>
                    </HBox>
                    <IconTabBar selectedKey="list" expandable="false" visible="{= ${/sideNavigation/isShow}}" select=".onSelectSideTab">
                        <layoutData>
                            <FlexItemData growFactor="1"/>
                        </layoutData>
                        <items>
                            <core:Fragment fragmentName="sap.ui.yesco.view.employee.fragment.SideList" type="XML" />
                            <core:Fragment fragmentName="sap.ui.yesco.view.employee.fragment.SideTree" type="XML" />
                        </items>
                    </IconTabBar>
                </VBox>
                <VBox id="profileBody" height="900px" width="{= ${/employee/width}}" busyIndicatorDelay="0" busy="{/employee/busy}">
                    <core:Fragment fragmentName="sap.ui.yesco.view.employee.fragment.ProfileOverview" type="XML" />
                    <core:Fragment fragmentName="sap.ui.yesco.view.employee.fragment.ProfileTab" type="XML" />
                </VBox>
            </HBox>
        </VBox>
    </Page>
</mvc:View>