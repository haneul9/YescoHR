<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">
    <VBox class="customBox">
        <HBox justifyContent="SpaceBetween">
            <Title level="H2" text="주소정보"/>
            <HBox>
                <Button type="Transparent" icon="sap-icon://edit" text="수정" press=".openModifyAddressDialog" />
                <Button type="Transparent" icon="sap-icon://add" text="추가" press=".openAddressDialog" />
                <Button type="Transparent" icon="sap-icon://less" text="삭제" press=".onDeleteAddress" />
            </HBox>
        </HBox>
        <table:Table id="addressTable" class="data-algin-center" width="100%" visibleRowCount="{/employee/personal/rowcount}" rows="{/employee/personal/list}" columns="{path: '/employee/personal/listheader'}">
            <table:columns>
                <table:Column width="{width}" filterProperty="{property}" sortProperty="{property}" template="{property}">
                    <Label text="{label}"/>
                </table:Column>
            </table:columns>
        </table:Table>
    </VBox>
</core:FragmentDefinition>