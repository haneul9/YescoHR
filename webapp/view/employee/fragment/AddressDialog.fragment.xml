<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid">
    <Dialog id="addressDialog" showHeader="false" contentWidth="700px">
        <buttons>
            <Button type="Emphasized" text="{/employee/address/actionText}" press=".onSaveAddress"/>
            <Button text="{i18n>LABEL_00115}" press=".onAddressDialogClose"/>
        </buttons>
        <Panel expanded="true" headerText="{i18n>LABEL_00283}">
            <content>
                <grid:CSSGrid gridTemplateColumns="1fr 4fr" gridGap="8px">
                    <Label text="{i18n>LABEL_00270}" />
                    <ComboBox width="250px" selectedKey="{/employee/address/form/Subty}" items="{ path: '/employee/address/typeList' }">
                        <core:Item key="{Zcode}" text="{Ztext}" />
                    </ComboBox>
                    <Label text="{i18n>LABEL_00271}" />
                    <DatePicker width="250px" dateValue="{/employee/address/form/Begda}" class="sapIcon_Date" />
                    <Label text="{i18n>LABEL_00272}" />
                    <ComboBox width="250px" selectedKey="{/employee/address/form/State}" items="{ path: '/employee/address/sidoList' }">
                        <core:Item key="{State}" text="{Bezei}" />
                    </ComboBox>
                    <Label text="{i18n>LABEL_00273}" />
                    <HBox width="100%">
                        <Input width="185px" value="{/employee/address/form/Pstlz}" editable="false" />
                        <Button text="{i18n>LABEL_00101}" press=".openSearchZipCodePopup"/>
                    </HBox>
                    <Label text="{i18n>LABEL_00152}" />
                    <Input width="500px" value="{/employee/address/form/Zzaddr1}" editable="false" />
                    <Label text="{i18n>LABEL_00274}" />
                    <Input width="500px" value="{/employee/address/form/Zzaddr2}" />
                </grid:CSSGrid>
            </content>
        </Panel>
    </Dialog>
</core:FragmentDefinition>