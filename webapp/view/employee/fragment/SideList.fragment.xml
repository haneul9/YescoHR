<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <IconTabFilter text="사원리스트" key="list">
        <SegmentedButton width="100%" selectedKey="{/sideNavigation/search/selectedState}" selectionChange=".onChangeStat">
            <items>
                <SegmentedButtonItem text="전체" key="" />
                <SegmentedButtonItem text="재직자" key="3" />
                <SegmentedButtonItem text="퇴직자" key="0" />
            </items>
        </SegmentedButton>
        <ScrollContainer height="700px" horizontal="false" vertical="true">
            <List id="sideEmployeeList" items="{path: '/sideNavigation/search/results'}">
                <CustomListItem type="Active" press=".onClickEmployeeCard">
                    <HBox class="customBox">
                        <VBox width="20%" justifyContent="Center" alignItems="Center">
                            <Image src="{Photo}" height="60px" width="60px" />
                        </VBox>
                        <VBox>
                            <HBox justifyContent="SpaceBetween">
                                <Text text="{Ename} {Zzjikgbt}/{Zzjikcht}" />
                                <core:Icon visible="{= !!${Manager}}" src="sap-icon://manager" />
                            </HBox>
                            <HBox>
                                <Label text="소속" />
                                <Label text="{Pbtxt} {Fulln}" />
                            </HBox>
                            <HBox>
                                <Label text="근속" />
                                <Label text="{Text1}" />
                            </HBox>
                            <HBox>
                                <Label text="직무" />
                                <Label text="{Text2}" />
                            </HBox>
                        </VBox>
                    </HBox>
                </CustomListItem>
            </List>
        </ScrollContainer>
    </IconTabFilter>
</core:FragmentDefinition>