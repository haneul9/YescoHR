<core:FragmentDefinition xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <VBox class="vCardBox" visible="{= ${/FormData/Lnsta} === '45' || ${/FormData/Lnsta} === '50' }">
