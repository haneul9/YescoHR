<mvc:View controllerName="sap.ui.yesco.controller.congratulation.CongDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid">
	<Page showHeader="false">
		<content>
			<VBox>
				<HBox justifyContent="SpaceBetween">
					<HBox>
						<core:Icon src="sap-icon://nav-back" press=".onNavBack"/>
						<Breadcrumbs currentLocationText="{i18n>LABEL_00134}" separatorStyle="GreaterThan">
							<Link text="복리후생"/>
							<Link text="{i18n>LABEL_02001}"/>
						</Breadcrumbs>
					</HBox>
					<HBox>
						<Button text="{i18n>LABEL_00120}" type="Emphasized" press=".onRewriteBtn" visible="{= ${/FormData/ZappStatAl} === '45' }" />
						<Button text="{i18n>LABEL_00104}" type="Emphasized" press=".onSaveBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onApplyBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Button text="{i18n>LABEL_00118}" press=".onCancelBtn" visible="{= ${/FormData/ZappStatAl} === '20' }" />
						<Button text="{i18n>LABEL_00110}" type="Reject" press=".onDeleteBtn" visible="{= ${/FormData/ZappStatAl} === '10' || ${/FormData/ZappStatAl} === '45' }" />
						<Button icon="sap-icon://print" press=".formatter.onPagePrint" type="Transparent" text="{i18n>LABEL_00131}" />
						<Button icon="sap-icon://sys-help" type="Transparent" text="{i18n>LABEL_00132}" />
					</HBox>
				</HBox>
				<core:Fragment fragmentName="sap.ui.yesco.fragment.DetailTargetInfo" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.InfoMessage" type="XML" />
				<VBox class="vCardBox" busyIndicatorDelay="0" busy="{/busy}">
					<HBox>
						<Title level="H2" text="{i18n>LABEL_00129}" />
						<Text text="{i18n>MSG_02005}"/>
					</HBox>
					<grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
						<Label text="{i18n>LABEL_02013}"/>
						<Select id="BenefitType" valueState="Warning" items="{/BenefitType}" selectedKey="{/FormData/Concode}" width="250px" change="onTypeChange" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
							<core:Item text="{Ztext}" key="{Zcode}" />
						</Select>
						<Label text="{i18n>LABEL_02014}"/>
						<DatePicker id='BirthDatePicker' class="sapIcon_Date" valueState="Warning" dateValue="{/FormData/Zbirthday}" width="250px" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Label text="{i18n>LABEL_02008}"/>
						<Select id="BenefitCause" valueState="Warning" items="{/BenefitCause}" selectedKey="{/FormData/Conresn}" width="250px" change=".onCauseChange" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
							<core:Item text="{Ztext}" key="{Zcode}" />
						</Select>
						<Label text="{i18n>LABEL_02009}"/>
						<DatePicker class="sapIcon_Date" valueState="Warning" dateValue="{/FormData/Conddate}" width="250px" change=".onBenefitChangeDate" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Label text="{i18n>LABEL_02015}"/>
						<Select id="BenefitRelation" change=".onRelationChange" valueState="Warning" items="{/BenefitRelation}" selectedKey="{/FormData/Kdsvh}" width="250px" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
							<core:Item text="{Ztext}" key="{Zcode}" />
						</Select>
						<Label text="{i18n>LABEL_02016}"/>
						<Input valueState="Warning" value="{/FormData/Zeloc}" class="LongInputBase" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<!-- <Label text="실재 경조일"/>
						<DatePicker dateValue="{/FormData/Conrdate}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" /> -->
						<Label text="{i18n>LABEL_02017}"/>
						<HBox class="mb-0 ">
							<Input id="RelationTxt" valueState="Warning" class="SmallInput" value="{/FormData/Zname}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
							<Button id="RelationBtn" class="InputinnerButton" text="{i18n>LABEL_00112}" press=".onTargetDialog" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						</HBox>
						<HBox ></HBox>
						<HBox ></HBox>
						<Label text="{i18n>LABEL_02018}"/>
						<Text text="{/FormData/ZbacBetT}"/>
						<Label text="{i18n>LABEL_02019}"/>
						<Text text="{/FormData/PayrtT}"/>
						<Label text="{i18n>LABEL_02020}"/>
						<Text text="{/FormData/ZpayBetT}"/>
						<Label text="{i18n>LABEL_02021}"/>
						<Text text="{
							path: '/FormData/Zflower',
							formatter: '.formatFlowerTxt'
						}"/>
					</grid:CSSGrid>
				</VBox>
				<core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
				<!-- <mvc:XMLView viewName="sap.ui.yesco.view.CommonAttachFile"/> -->
				<!-- <core:Fragment fragmentName="sap.ui.yesco.fragment.Applicant" type="XML" /> -->
				<core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.ApprovalDetails" type="XML" />
			</VBox>
		</content>
	</Page>
</mvc:View>