<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">

    <Dialog id= "targetSettingsDialog" title= '대상자 선택' contentWidth= '500px' contentHeight= '200px'
	>
<beginButton>
<Button text="Close" press=".onClick" />
</beginButton>
<content>
    <table:Table id= "targetTable" width="100%" rows="{/TargetList}" visibleRowCount="1" selectionMode="None" rowHeight= "37" columnHeaderHeight= "38" columnHeaderVisible= "false" cellClick= '.TargetClick'
            >
<table:columns>
<table:Column width="20%">
        <table:template>
            <Text text="{Atext}" wrapping="false" />
        </table:template>
    </table:Column>
    <table:Column width="30%">
        <table:template>
            <Text text="{Zname}" wrapping="false" />
        </table:template>
    </table:Column>
    <table:Column width="auto">
        <table:template>
            <Text text="{Regno}" wrapping="false" />
        </table:template>
    </table:Column>
</table:columns>
</table:Table>
</content>
</Dialog>
</core:FragmentDefinition>