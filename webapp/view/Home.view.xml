		</customHeader>
		<content>
			<ScrollContainer
				height="100%"
				vertical="true">

				<ToggleButton
					id="reveal-grid-button"
					text="Reveal Grid"
					press="onRevealGrid"
					class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom" />

				<HBox justifyContent="Center">
					<f:GridContainer
						id="personalization-grid"
						class="sapUiSmallMarginTopBottom mx-auto"
						snapToRow="true">
						<f:layout>
							<f:GridContainerSettings rowSize="150px" columns="4" columnSize="372px" gap="30px" />
						</f:layout>
						<f:layoutXL><!-- 1440px ~ -->
							<f:GridContainerSettings rowSize="150px" columns="4" columnSize="372px" gap="30px" />
						</f:layoutXL>
						<f:layoutL><!-- 1023px ~ 1439px -->
							<f:GridContainerSettings rowSize="150px" columns="3" columnSize="372px" gap="30px" />
						</f:layoutL>
						<f:layoutM><!-- 600px ~ 1023px -->
							<f:GridContainerSettings rowSize="150px" columns="2" columnSize="372px" gap="30px" />
						</f:layoutM>
						<f:layoutS><!-- 375px ~ 599px -->
							<f:GridContainerSettings rowSize="150px" columns="1" columnSize="372px" gap="30px" />
						</f:layoutS>
						<f:layoutXS><!-- 0 ~ 374px -->
							<f:GridContainerSettings rowSize="150px" columns="1" columnSize="372px" gap="30px" />
						</f:layoutXS>

						<GenericTile header="Sales Fulfillment Application Title" subheader="Subtitle" width="100%">
							<layoutData>
								<f:GridContainerItemLayoutData minRows="2" columns="1" />
							</layoutData>
							<TileContent unit="EUR" footer="Current Quarter">
								<ImageContent src="sap-icon://home-share" />
							</TileContent>
						</GenericTile>

						<w:Card manifest="{manifests>/listContent/largeList}">
							<w:layoutData>
								<f:GridContainerItemLayoutData minRows="2" columns="2" />
							</w:layoutData>
						</w:Card>

						<f:Card>
							<f:layoutData>
								<f:GridContainerItemLayoutData minRows="3" columns="1" />
							</f:layoutData>
							<f:header>
								<card:Header title="My Team Calendar" />
							</f:header>
							<f:content>
								<HBox width="100%" justifyContent="Center">
									<VBox>
										<u:Calendar id="team-calendar" legend="team-calendar-legend" showWeekNumbers="false" class="px-0" />
										<ToggleButton text="Special Days" press="handleShowSpecialDays" class="sapUiSmallMarginBottom sapUiNoPadding" />
										<u:CalendarLegend id="team-calendar-legend" columnWidth="100px" standardItems="{= 'Today,Selected,WorkingDay,NonWorkingDay'.split(',') }" class="sapUiNoPadding" />
									</VBox>
								</HBox>
							</f:content>
						</f:Card>

						<w:Card manifest="{manifests>/listContent/smallList}">
							<w:layoutData>
								<f:GridContainerItemLayoutData minRows="2" columns="1" />
							</w:layoutData>
						</w:Card>

						<w:Card manifest="{manifests>/listContent/mediumList}">
							<w:layoutData>
								<f:GridContainerItemLayoutData minRows="3" columns="1" />
							</w:layoutData>
						</w:Card>

						<GenericTile header="Cumulative Totals" subheader="Subtitle" width="100%">
							<layoutData>
								<f:GridContainerItemLayoutData minRows="2" columns="1" />
							</layoutData>
							<TileContent unit="Unit" footer="Footer Text">
								<NumericContent value="12" />
							</TileContent>
						</GenericTile>

						<GenericTile header="Travel and Expenses" subheader="Access Concur" width="100%">
							<layoutData>
								<f:GridContainerItemLayoutData minRows="2" columns="1" />
							</layoutData>
							<TileContent>
								<ImageContent src="sap-icon://travel-expense" />
							</TileContent>
						</GenericTile>

						<GenericTile header="Success Map" subheader="Access Success Map" width="100%">
							<layoutData>
								<f:GridContainerItemLayoutData minRows="2" columns="1" />
							</layoutData>
							<TileContent unit="EUR" footer="Current Quarter">
								<ImageContent src="sap-icon://map-3" />
							</TileContent>
						</GenericTile>
					</f:GridContainer>
				</HBox>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>
