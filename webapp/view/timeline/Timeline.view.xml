			</m:Select>
-->
		</m:content>
	</m:OverflowToolbar>
<!--
			groupBy="HireDate"
-->
	<Timeline
			id="idTimeline"
			axisOrientation="Horizontal"
			enableDoubleSided="false"
			growingThreshold="0"
			enableModelFilter="false"
			showItemFilter="false"
			showSearch="false"
			showSort="false"
			showSuggestion="false"
			showTimeFilter="false"
			sort="true"
			sortOldestFirst="true"
			content="{/Employees}"
			class="yescoUi">
		<content>
			<TimelineItem
					id="idTemplateItem"
					icon="{Icon}"
					userPicture="{Photo}"
					userName="{Name}"
					text="{HireDate}"
					dateTime="{HireDateTime}">
			</TimelineItem>
			<!--
					filterValue="{JobTitle}"
					title="{HireDate}"
					title="{JobTitle}"
					text="{JobResponsibilities}"
					userNameClickable="true"
