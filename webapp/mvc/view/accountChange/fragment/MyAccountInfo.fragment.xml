<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox summary-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <HBox justifyContent="SpaceBetween" class="title">
        <Title level="H2" text="{i18n>LABEL_26007}" />
      </HBox>
      <Text text="{i18n>LABEL_26002}" class="sapUiSmallMarginBottom" />
      <HBox>
        <VBox class="summary-info">
          <HBox>
            <Label design="Bold" text="{i18n>LABEL_26003}" />
            <ObjectStatus text="{/MyAcc/Banka}" state="Indication05" />
          </HBox>
          <HBox>
            <Label design="Bold" text="{i18n>LABEL_26004}" />
            <ObjectStatus text="{/MyAcc/Bankn}" state="Indication05" />
          </HBox>
          <HBox>
            <Label design="Bold" text="{i18n>LABEL_00271}" />
            <ObjectStatus text="{
                path: '/MyAcc/Begda',
                type: 'sap.ui.model.type.Date',
                formatOptions: {
                    pattern: 'yyyy.MM.dd'
                }
            }" state="Indication05" />
          </HBox>
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>