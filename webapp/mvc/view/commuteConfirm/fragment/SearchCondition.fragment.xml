<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core">
  <VBox class="vCardBox search-box">
    <grid:CSSGrid gridTemplateColumns="1fr 2fr 1fr 3fr 1fr" gridGap="8px">
      <Label text="{i18n>LABEL_00328}" design="Bold" />
      <DatePicker displayFormat="yyyy.MM" valueFormat="yyyyMM" value="{/search/date}" />
      <Label text="{i18n>LABEL_00227}" design="Bold" />
      <ComboBox items="{/OrgList}" selectedKey="{/search/dept}">
        <core:Item text="{Ztext}" key="{Zcode}" />
      </ComboBox>
      <Button type="Transparent" press=".onSearch" class="icon-button search" />
    </grid:CSSGrid>
  </VBox>
</core:FragmentDefinition>