<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core">
  <VBox class="vCardBox">
    <grid:CSSGrid gridTemplateColumns="1fr 2fr 1fr 3fr 1fr" gridGap="10px" width="60%">
      <Label text="{i18n>LABEL_00328}" design="Bold" />
      <VBox class="vContentBox">
        <DatePicker displayFormat="yyyy.MM" valueFormat="yyyyMM" value="{/search/date}" width="200px" />
      </VBox>
      <Label text="{i18n>LABEL_00227}" design="Bold" />
      <VBox class="vContentBox">
        <ComboBox items="{/OrgList}" selectedKey="{/search/dept}">
          <core:Item text="{Ztext}" key="{Zcode}" />
        </ComboBox>
      </VBox>
      <Button icon="asset/image/icon_search03.png" text="{i18n>LABEL_00100}" press=".onSearch" class="icon-button" />
    </grid:CSSGrid>
  </VBox>
</core:FragmentDefinition>