<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:u="sap.ui.unified"
  xmlns:core="sap.ui.core">
  <VBox class="vCardBox sapUiMediumMarginBottom" visible="{/Hass}">
    <HBox alignItems="Center" class="table-toolbar">
      <Title level="H2" text="{/FormData/title}"/>
      <Button text="{i18n>LABEL_29002}" type="Emphasized" press=".onManagerBtn" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px 0px" class="form-grid">
      <Label text="{i18n>LABEL_01008}" />
      <VBox>
        <Text text="{/FormData/MenuRoute}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_29003}"/>
      <VBox>
        <Text text="{/FormData/ZchPernr}"/>
      </VBox>
      <Label text="{i18n>LABEL_08003}" />
      <VBox>
        <Text text="{/FormData/ChangeDate}"/>
      </VBox>
      <Label text="{i18n>LABEL_29004}" />
      <VBox>
        <TextArea placeholder="{i18n>MSG_29002}" editable="{/UserFixed}" rows="5" width="100%" value="{/FormData/HeadZcomment}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_29009}" />
      <HBox>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
        <Label text="{i18n>LABEL_08002}" />
        <Input value="{/FormData/Url1t}" editable="{/UserFixed}"/>
        <Label text="{i18n>LABEL_29011}" />
        <Input value="{/FormData/Url1}" editable="{/UserFixed}">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
        </Input>
      </HBox>
      <Label text="{i18n>LABEL_29010}" />
      <HBox>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
        <Label text="{i18n>LABEL_08002}" />
        <Input value="{/FormData/Url2t}" editable="{/UserFixed}"/>
        <Label text="{i18n>LABEL_29011}" />
        <Input value="{/FormData/Url2}" editable="{/UserFixed}">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
        </Input>
      </HBox>
      <Label text="{i18n>LABEL_29005}" />
      <HBox justifyContent="SpaceBetween" width="100%" class="file-uploader-wrap">
        <u:FileUploader fileType="pdf" change=".onFileChange" icon="sap-icon://add" buttonText="{i18n>LABEL_00107}" width="100%" visible="{/UserFixed}" />
        <Button icon="sap-icon://less" text="{i18n>LABEL_00110}" press=".onDeleteAttachFile" visible="{/UserFixed}" />
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </HBox>
      <Label text="{i18n>LABEL_29006}" />
      <VBox>
        <TextArea placeholder="{i18n>MSG_29002}" rows="5" editable="{/UserFixed}" width="100%" value="{/FormData/MidZcomment}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_29007}" />
      <VBox>
        <TextArea placeholder="{i18n>MSG_29002}" rows="5" editable="{/UserFixed}" width="100%" value="{/FormData/BotZcomment}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_29005}" />
      <VBox>
        <Text text="{i18n>MSG_29001}"/>
        <HBox>
          <ComboBox items="{/MenuIdList}" selectedKey="{/FormData/Menid1}" enabled="{/UserFixed}" class="mr-20-px">
            <core:Item text="{Mentx}" key="{Menid}" />
          </ComboBox>
          <ComboBox items="{/MenuIdList}" selectedKey="{/FormData/Menid2}" enabled="{/UserFixed}" class="mr-20-px">
            <core:Item text="{Mentx}" key="{Menid}" />
          </ComboBox>
          <ComboBox items="{/MenuIdList}" selectedKey="{/FormData/Menid3}" enabled="{/UserFixed}">
            <core:Item text="{Mentx}" key="{Menid}" />
          </ComboBox>
        </HBox>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
    </grid:CSSGrid>
  </VBox>
</core:FragmentDefinition>