<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core">
  <VBox class="vCardBox sapUiMediumMarginBottom" visible="{= !${/Hass} }">
    <HBox alignItems="Center" class="table-toolbar">
      <Title level="H2" text="{/FormData/title}"/>
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px 0px" class="form-grid">
      <Label text="{i18n>LABEL_01008}" />
      <VBox>
        <Text text="{/FormData/MenuRoute}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_29004}" />
      <VBox>
        <TextArea placeholder="{i18n>MSG_29002}" editable="false" rows="5" width="100%" value="{/FormData/HeadZcomment}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_29009}" />
      <HBox>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
        <Link target="_blank" href="{/FormData/Url1}" text="{/FormData/Url1t}"/>
      </HBox>
      <Label text="{i18n>LABEL_29010}" />
      <HBox>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
        <Link target="_blank" href="{/FormData/Url2}" text="{/FormData/Url2t}"/>
      </HBox>
      <Label text="{i18n>LABEL_29005}" />
      <HBox width="100%">
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
        <PDFViewer source="{/FormData/Fileuri}" showDownloadButton="false" class="my-15-px">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
        </PDFViewer>
      </HBox>
      <Label text="{i18n>LABEL_29006}" />
      <VBox>
        <TextArea placeholder="{i18n>MSG_29002}" rows="5" editable="false" width="100%" value="{/FormData/MidZcomment}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_29007}" />
      <VBox>
        <TextArea placeholder="{i18n>MSG_29002}" rows="5" editable="false" width="100%" value="{/FormData/BotZcomment}"/>
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
    </grid:CSSGrid>
  </VBox>
</core:FragmentDefinition>