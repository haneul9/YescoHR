<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox summary-box" busyIndicatorDelay="0" busy="{/busy}">
        <VBox>
            <HBox justifyContent="SpaceBetween" class="title">
                <Title level="H2" text="{i18n>LABEL_31002}" />
            </HBox>
            <Text text="{
                path: '/Total/Zyear',
                formatter: '.thisYear'
            }" class="sapUiSmallMarginBottom" />
            <HBox class="mt-50-px">
                <VBox width="20%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_31006}" />
                    <ObjectStatus text="{
                        path: '/Total/Ccnt',
                        formatter: '.formatNumber'
                    }" state="Indication05" />
                </VBox>
                <VBox width="40%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_31007}" />
                    <HBox alignItems="Baseline">
                        <ObjectStatus text="{
                            path: '/Total/Bet01',
                            formatter: '.formatNumber'
                        }" state="Indication04" />
                    </HBox>
                </VBox>
                <VBox class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_31008}" />
                    <HBox alignItems="Baseline">
                        <ObjectStatus text="{
                            path: '/Total/Bet02',
                            formatter: '.formatNumber'
                        }" state="Indication05" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>