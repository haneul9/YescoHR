<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="hCardBox overview-box" busyIndicatorDelay="0" busy="{/busy}">
    <custom:HeaderTitleCountMessage title="{i18n>LABEL_05002}" class="title" />
    <HBox class="desc">
      <Text text="{i18n>MSG_05001}" />
      <ObjectStatus text="{ path: '/Total/Famcnt', formatter: '.formatNumber' }" state="Indication05" class="sapUiSmallMarginBottom" />
      <Text text="{i18n>MSG_05007}" />
    </HBox>
    <HBox class="desc pt-16-px" visible="{/Total/isVisible}">
      <Text text="{i18n>MSG_05003}"/>
      <ObjectStatus text="{ path: '/Total/Famamt', formatter: '.formatPay' }" state="Indication05" class="font-30-px"/>
      <Text text="{i18n>MSG_05002}"/>
    </HBox>
    <Text text="{i18n>MSG_05004}" class="col-j pt-18-px" visible="{/Total/isVisible}" />
  </VBox>
</core:FragmentDefinition>