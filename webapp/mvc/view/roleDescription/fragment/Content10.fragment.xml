<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">
    <table:Table width="100%" selectionMode="None" columnHeaderHeight="45" rowHeight="44" rows="{/data/role8/list}" visibleRowCount="{/data/role8/rowCount}" noData="{i18n>MSG_00001}" visible="{/Define/isLoaded}">
        <table:columns>
            <table:Column width="8%" resizable="false">
                <Label text="No." />
                <table:template>
                    <Text text="{Number}" width="100%" textAlign="Center" />
                </table:template>
            </table:Column>
            <table:Column width="auto" resizable="false">
                <Label text="{i18n>LABEL_22047}" />
                <table:template>
                    <Text text="{Skknl}" width="100%" textAlign="Center" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</core:FragmentDefinition>