<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core"
  xmlns:rte="sap.ui.richtexteditor">
  <VBox class="vCardBox" busyIndicatorDelay="0" busy="{/busy}">
    <HBox alignItems="Center" class="table-toolbar">
      <Title level="H2" text="{i18n>LABEL_00129}" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px 0" class="form-grid form-search">
      <Label text="{i18n>LABEL_46020}" />
      <VBox class="p-5-px">
        <rte:RichTextEditor id="editor2" value="{/Data/Testc1}" ready=".editorReady" width="99.8%" height="250px" showGroupFont="true" showGroupInsert="true" editable="true" buttonGroups="{/ButtonGroups}" />
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_46021}" />
      <VBox class="p-5-px">
        <rte:RichTextEditor id="editor3" value="{/Data/Testc2}" ready=".editorReady" width="99.8%" height="250px" showGroupFont="true" showGroupInsert="true" editable="true" buttonGroups="{/ButtonGroups}" />
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
    </grid:CSSGrid>
  </VBox>
  
  <VBox class="vCardBox" busyIndicatorDelay="0" busy="{/busy}">
    <HBox alignItems="Center" class="table-toolbar">
      <Title level="H2" text="{i18n>LABEL_46022}" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px 0" class="form-grid form-search">
      <Label text="{i18n>LABEL_46023}" />
      <VBox>
        <TextArea value="{/Data/Prgno}" editable="true" width="100%" growing="true" rows="1" />
      </VBox>
      <Label text="{i18n>LABEL_46024}" />
      <VBox>
        <TextArea value="{/Data/Ctsno}" editable="true" width="100%" growing="true" rows="1" />
      </VBox>
      <Label text="{i18n>LABEL_46025}" />
      <VBox>
        <Input value="{/Data/Wrktm}" editable="true" />
      </VBox>
      <Label text="" />
      <VBox />
    </grid:CSSGrid>
  </VBox>

</core:FragmentDefinition>