<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core"
  xmlns:rte="sap.ui.richtexteditor">
  <VBox class="vCardBox" busyIndicatorDelay="0" busy="{/busy}" visible="{= ${/Data/Prstg} !== '10' }">
    <HBox alignItems="Center" class="table-toolbar">
      <Title level="H2" text="{i18n>LABEL_46036}" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px 0" class="form-grid form-search">
      <Label text="{i18n>LABEL_46020}" />
      <VBox class="p-5-px">
        <rte:RichTextEditor id="csrEditor2" value="{/Data/Testc1Html}" width="99.8%" height="250px" showGroupFont="true" showGroupInsert="true" sanitizeValue="false" buttonGroups="{/ButtonGroups}" />
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
      <Label text="{i18n>LABEL_46021}" />
      <VBox class="p-5-px">
        <rte:RichTextEditor id="csrEditor3" value="{/Data/Testc2Html}" width="99.8%" height="250px" showGroupFont="true" showGroupInsert="true" sanitizeValue="false" buttonGroups="{/ButtonGroups}" />
        <layoutData>
          <grid:GridItemLayoutData gridColumn="2 / 5"/>
        </layoutData>
      </VBox>
    </grid:CSSGrid>
  </VBox>

  <VBox class="vCardBox" busyIndicatorDelay="0" busy="{/busy}" visible="{= ${/Data/Prstg} !== '10' }">
    <HBox alignItems="Center" class="table-toolbar">
      <Title level="H2" text="{i18n>LABEL_46022}" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px 0" class="form-grid form-search">
      <Label text="{i18n>LABEL_46023}" />
      <VBox>
        <TextArea value="{/Data/Prgno}" editable="{= ${/auth} === 'H' }" width="100%" growing="true" rows="1" />
      </VBox>
      <Label text="{i18n>LABEL_46024}" />
      <VBox>
        <TextArea value="{/Data/Ctsno}" editable="{= ${/auth} === 'H' }" width="100%" growing="true" rows="1" />
      </VBox>
      <Label text="{i18n>LABEL_46025}(Abap/Web)" />
      <HBox>
        <Input width="80px" value="{/Data/Wrktm}" editable="false" />
        <Text text="(" class="mr-8-px" />
        <Input width="80px" value="{/Data/Abaptm}" editable="{= ${/auth} === 'H' }" liveChange=".onChangeWorkTime" />
        <Text text="/" class="mx-8-px" />
        <Input width="80px" value="{/Data/Webtm}" editable="{= ${/auth} === 'H' }" liveChange=".onChangeWorkTime" />
        <Text text=")" class="ml-8-px" />
      </HBox>
      <Label text="" />
      <VBox />
    </grid:CSSGrid>
  </VBox>

</core:FragmentDefinition>