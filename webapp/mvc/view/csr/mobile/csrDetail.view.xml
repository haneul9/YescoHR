<mvc:View controllerName="sap.ui.yesco.mvc.controller.csr.mobile.csrDetail"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page showFooter="{= ${/form/Appryn} === 'X' }" title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <VBox class="contents">
      <mobile:ScrollContainer>
        <VBox class="wrap">
          <custom:Title text="{i18n>LABEL_00129}" />
          <mobile:DetailCSSGrid gridTemplateColumns="2fr 3fr">
            <Label text="{i18n>LABEL_00129}"/>
            <VBox>
              <Text text="{/form/Apttl}" />
            </VBox>
            <Label text="{i18n>LABEL_46005}"/>
            <VBox>
              <Text text="{/form/Csrtytx}" />
            </VBox>
            <Label text="{i18n>LABEL_46045}"/>
            <VBox>
              <Text text="{/form/ReqdatFormatted}" />
            </VBox>
            <Label text="{i18n>LABEL_46018}"/>
            <VBox>
              <Text text="{ path: '/form/Clsda', type: 'sap.ui.yesco.mvc.model.type.Date' }" />
            </VBox>
          </mobile:DetailCSSGrid>
          <custom:Title text="{i18n>LABEL_46046}" />
          <core:HTML content="{/form/Apcnt}" class="editor-view mb-8-px" />
          <custom:Title text="{i18n>LABEL_46020}" visible="{= ${/form/Prstg} !== '10' }" />
          <core:HTML content="{/form/Testc1}" class="editor-view mb-8-px" visible="{= ${/form/Prstg} !== '10' }" />
          <custom:Title text="{i18n>LABEL_46021}" visible="{= ${/form/Prstg} !== '10' }" />
          <core:HTML content="{/form/Testc2}" class="editor-view mb-8-px" visible="{= ${/form/Prstg} !== '10' }" />
          <custom:Title text="{i18n>LABEL_46047}" visible="{= ${/form/Prstg} !== '10' }" />
          <mobile:DetailCSSGrid gridTemplateColumns="2fr 3fr" visible="{= ${/form/Prstg} !== '10' }">
            <Label text="{i18n>LABEL_46023}"/>
            <VBox>
              <Text text="{/form/Prgno}" />
            </VBox>
            <Label text="{i18n>LABEL_46024}"/>
            <VBox>
              <Text text="{/form/Ctsno}" />
            </VBox>
            <Label text="{i18n>LABEL_46025}"/>
            <VBox>
              <Text text="{/form/Wrktm}" />
            </VBox>
          </mobile:DetailCSSGrid>
          <core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
          <custom:Title text="{i18n>LABEL_46028}" />
          <grid:CSSGrid items="{/approval}" gridTemplateColumns="3fr 3fr 5fr" gridGap="6px 0" class="form-grid">
            <Text text="{label}" wrapping="false" />
          </grid:CSSGrid>
        </VBox>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <OverflowToolbar>
        <Button text="{i18n>LABEL_00123}" type="Emphasized" press=".onPressApproval" />
        <Button text="{i18n>LABEL_00124}" type="Reject" press=".onPressReject" />
      </OverflowToolbar>
    </mobile:footer>
  </mobile:Page>
</mvc:View>