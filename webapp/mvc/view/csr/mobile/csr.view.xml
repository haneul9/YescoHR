<mvc:View controllerName="sap.ui.yesco.mvc.controller.csr.mobile.csr"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" class="sapUiSmallMarginBottom"/>
      <mobile:ScrollContainer id="listScrollContainer">
        <mobile:layoutData>
          <FlexItemData styleClass="mobile-list-scroll-box search-row-3" />
        </mobile:layoutData>
        <mobile:List items="{path: '/list'}">
          <mobile:CustomListItem press=".onSelectRow">
            <mobile:ApprovalRequestListItemBox>
              <mobile:ListCSSGrid gridTemplateColumns="40px 1fr 1fr 1fr">
                <CheckBox selected="{rowChecked}" editable="{= ${Appryn} === 'X' }">
                  <layoutData>
                    <grid:GridItemLayoutData gridRow="span 2" />
                  </layoutData>
                </CheckBox>
                <Text text="{Apttl}" wrapping="false" class="font-16-px font-bold">
                  <layoutData>
                    <grid:GridItemLayoutData gridColumn="span 2" />
                  </layoutData>
                </Text>
                <HBox width="100%" justifyContent="End" class="pr-4-px">
                  <Image src="{CompanyIcon}" width="30px" height="16px" />
                </HBox>
                <Text text="{Prstatx}" wrapping="false">
                  <customData>
                    <core:CustomData key="text-hilight" value="step{Prstg}" writeToDom="true" />
                  </customData>
                </Text>
                <Text text="{Csrtytx}" wrapping="false">
                  <customData>
                    <core:CustomData key="text-hilight" value="step{Prstg}" writeToDom="true" />
                  </customData>
                </Text>
                <Text text="{ReqdatFormatted}" wrapping="false">
                  <customData>
                    <core:CustomData key="text-hilight" value="step{Prstg}" writeToDom="true" />
                  </customData>
                </Text>
              </mobile:ListCSSGrid>
            </mobile:ApprovalRequestListItemBox>
          </mobile:CustomListItem>
        </mobile:List>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <OverflowToolbar>
        <Button text="{i18n>LABEL_00123}" type="Emphasized" width="100%" press=".onPressApproval" />
        <Button text="{i18n>LABEL_00124}" type="Reject" width="100%" press=".onPressReject" />
      </OverflowToolbar>
    </mobile:footer>
  </mobile:Page>
</mvc:View>