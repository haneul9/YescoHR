<mvc:View controllerName="sap.ui.yesco.mvc.controller.documentTemplateMng.Detail"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control">
  <Page showHeader="false" busyIndicatorDelay="0" busy="{/contentsBusy/page}">
    <VBox class="contents-header">
      <HBox justifyContent="SpaceBetween" class="breadcrumbs">
        <custom:Breadcrumbs />
        <HBox class="button-group">
          <Button text="{i18n>LABEL_47005}" busyIndicatorDelay="0" busy="{/contentsBusy/button}" press=".onPreview" />
          <Button text="{i18n>LABEL_00103}" type="Emphasized" busyIndicatorDelay="0" busy="{/contentsBusy/button}" press=".onSave" />
          <Button text="{i18n>LABEL_00146}" press=".onNavBack" />
          <Button icon="sap-icon://print" text="{i18n>LABEL_00131}" press=".onPagePrint" />
          <Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" press=".onPressHelp" visible="{= !!${menuModel>/current/showHelp} }" />
        </HBox>
      </HBox>
    </VBox>
    <HBox class="contents">
      <VBox class="vCardBox" width="70%">
        <HBox alignItems="Center" class="table-toolbar">
          <custom:HeaderTitleCountMessage titlePath="i18n>LABEL_47007" class="title" />
        </HBox>
        <HBox width="100%" height="100%" justifyContent="Center" busyIndicatorDelay="0" busy="{/contentsBusy/editor}">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
          <custom:Editor id="hrDocRTE" class="required" width="calc(210mm - 62px)" height="100%" value="{/form/TempHrdochtml}" showGroupFont="true" showGroupInsert="true" showGroupLink="true" showGroupUndo="true" ready=".onReadyEditor" beforeEditorInit=".onBeforeEditorInit">
            <custom:layoutData>
              <FlexItemData minHeight="270mm" maxHeight="270mm" />
            </custom:layoutData>
          </custom:Editor>
        </HBox>
      </VBox>
      <VBox width="auto" class="mt-0">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
        <VBox width="100%" class="vCardBox sticky-box top-80-px sapUiTinyMarginBegin">
          <HBox alignItems="Center" class="table-toolbar">
            <custom:HeaderTitleCountMessage titlePath="i18n>LABEL_47006" class="title" />
          </HBox>
          <HBox>
            <grid:CSSGrid gridTemplateColumns="1fr 3fr" gridGap="1px 0px" class="form-grid" busyIndicatorDelay="0" busy="{/contentsBusy/input}">
              <Label text="{i18n>LABEL_47001}" />
              <HBox>
                <Input width="100%" class="required" value="{/form/Hrdoctx}" maxLength="40">
                  <layoutData>
                    <FlexItemData growFactor="1" />
                  </layoutData>
                </Input>
              </HBox>
              <Label text="{i18n>LABEL_47009}" />
              <HBox>
                <custom:DateRangeSelection width="100%" class="sapIcon_Date required" dateValue="{ path: '/form/Begda', type: 'sap.ui.yesco.mvc.model.type.Date' }" secondDateValue="{ path: '/form/Endda', type: 'sap.ui.yesco.mvc.model.type.Date' }">
                  <custom:layoutData>
                    <FlexItemData growFactor="1" />
                  </custom:layoutData>
                </custom:DateRangeSelection>
              </HBox>
            </grid:CSSGrid>
          </HBox>
        </VBox>
        <VBox class="vCardBox sticky-box top-290-px sapUiTinyMarginBegin sapUiTinyMarginTop" width="100%" height="{/editorBoxHeight}">
          <HBox alignItems="Center" class="table-toolbar">
            <custom:HeaderTitleCountMessage titlePath="i18n>LABEL_47008" class="title" />
          </HBox>
          <ScrollContainer width="100%" height="calc(100% - 55px)" vertical="true" busyIndicatorDelay="0" busy="{/contentsBusy/tree}">
            <Tree id="InputFieldsTree" class="employee-tree input-data-tree" mode="SingleSelectMaster" items="{path: '/templates'}" selectionChange=".onSelectTreeItem">
              <layoutData>
                <FlexItemData growFactor="1" />
              </layoutData>
              <CustomTreeItem>
                <HBox>
                  <Text text="{label}" />
                </HBox>
              </CustomTreeItem>
            </Tree>
          </ScrollContainer>
        </VBox>
      </VBox>
    </HBox>
  </Page>
</mvc:View>