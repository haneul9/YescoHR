<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <HBox alignItems="Center" class="individual-appointee-box">
    <!-- 사진 -->
    <Image src="{/appointee/Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="36px" height="36px" />
    <!-- 성명 -->
    <Link text="{/appointee/Ename}" subtle="true" class="name" />
    <!-- 직급/직책 -->
    <Link text="{/appointee/Zzjikgbt}/{/appointee/Zzjikcht}" subtle="true" />
    <!-- 부서명 -->
    <Link text="{/appointee/Fulln}" subtle="true" />
  </HBox>
</core:FragmentDefinition>