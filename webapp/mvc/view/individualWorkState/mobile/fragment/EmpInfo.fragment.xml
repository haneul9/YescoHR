<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <HBox alignItems="Center" class="lh-30-px">
    <!-- 사진 -->
    <Image src="{Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="24px" height="24px" press=".navToProfile">
      <layoutData>
        <FlexItemData baseSize="30px" maxWidth="30px" styleClass="h-24-px" />
      </layoutData>
    </Image>
    <!-- 성명 -->
    <Link text="{Ename}" subtle="true" width="100%" class="name" press=".navToProfile">
      <layoutData>
        <FlexItemData baseSize="70px" maxWidth="70px" />
      </layoutData>
    </Link>
    <!-- 직급/직책 -->
    <Link text="{Zzjikgbt}/{Zzjikcht}" subtle="true" width="100%" press=".navToProfile">
      <layoutData>
        <FlexItemData baseSize="90px" maxWidth="90px" />
      </layoutData>
    </Link>
    <!-- 부서명 -->
    <Link text="{Fulln}" subtle="true" width="100%" press=".navToProfile">
      <layoutData>
        <FlexItemData growFactor="1" maxWidth="calc(100% - 213px)" styleClass="pr-4-px" />
      </layoutData>
    </Link>
    <Link visible="{= ${IconMode} === 'Profile' &amp;&amp; ${ProfileView} === 'O' }" subtle="true" width="20px" class="icon-search" press=".navToProfile">
      <customData>
        <core:CustomData key="profile-view" value="{ProfileView}" writeToDom="true" />
      </customData>
    </Link>
    <Link visible="{= ${IconMode} === 'Telephone' }" subtle="true" width="20px" class="icon-telephone" enabled="{= !!${Phone} }" href="tel:{Phone}" />
  </HBox>
</core:FragmentDefinition>