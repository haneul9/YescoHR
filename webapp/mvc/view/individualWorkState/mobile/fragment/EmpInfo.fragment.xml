<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <HBox alignItems="Center" class="lh-30-px">
    <!-- 사진 -->
    <Image src="{/appointee/Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="24px" height="24px">
      <layoutData>
        <FlexItemData baseSize="30px" maxWidth="30px" styleClass="h-24-px" />
      </layoutData>
    </Image>
    <!-- 성명 -->
    <Link text="{/appointee/Ename}" subtle="true" width="100%" class="name">
      <layoutData>
        <FlexItemData baseSize="70px" maxWidth="70px" />
      </layoutData>
    </Link>
    <!-- 직급/직책 -->
    <Link text="{/appointee/Zzjikgbt}/{/appointee/Zzjikcht}" subtle="true" width="100%">
      <layoutData>
        <FlexItemData baseSize="90px" maxWidth="90px" />
      </layoutData>
    </Link>
    <!-- 부서명 -->
    <Link text="{/appointee/Fulln}" subtle="true" width="100%">
      <layoutData>
        <FlexItemData growFactor="1" maxWidth="calc(100% - 213px)" styleClass="pr-4-px" />
      </layoutData>
    </Link>
  </HBox>
</core:FragmentDefinition>