<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox width="100%" class="vCardBox small">
    <HBox justifyContent="SpaceBetween" class="table-toolbar">
      <HBox class="title">
        <Title level="H2" text="{i18n>LABEL_18021}" />
        <Text text="{/FullYear}" class="desc-txt" />
      </HBox>
      <ComboBox width="200px" items="{/WorkTypeUseList}" selectedKey="{/WorkTypeUse}" change=".onWorkTypeUse">
        <core:Item text="{Atext}" key="{Awart}" />
      </ComboBox>
    </HBox>
    <core:HTML content='&lt;div id="chart-combination-container"&gt;&lt;/div&gt;' />
  </VBox>
</core:FragmentDefinition>