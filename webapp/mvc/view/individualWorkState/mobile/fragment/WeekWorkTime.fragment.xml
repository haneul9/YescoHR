<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="vCardBox small MultiBoxmobile">
    <HBox justifyContent="SpaceBetween" class="title">
      <Title level="H2" text="{i18n>LABEL_18015}" />
      <custom:DatePicker dateValue="{ path: '/WeekWorkDate', type: 'sap.ui.yesco.mvc.model.type.Date' }" width="200px" change=".onWeekWorkTime" />
    </HBox>
    <VBox class="week-Work-summary">
      <custom:VacationIndicator width="100%" total="{/WeekWork/Grp03}" used="{/WeekWork/Grp01}" used2="{/WeekWork/Grp02}" chartOnly="true" showTotal="true" usedType="WeekTime">
        <custom:layoutData>
          <FlexItemData growFactor="1" />
        </custom:layoutData>
      </custom:VacationIndicator>
      <grid:CSSGrid gridTemplateColumns="1fr 3fr" gridGap="4px">
        <Label text="{i18n>LABEL_18016}"/>
        <VBox>
          <Text text="{= ${/WeekWork/Wkrultx} }"/>
        </VBox>
        <Label text="{i18n>LABEL_18020}" />
        <VBox>
          <Text text="{/WeekWork/WorkTime}"/>
        </VBox>
        <Label text="{i18n>LABEL_18017}" />
        <VBox>
          <Text text="{/WeekWork/Tottime}{i18n>LABEL_00330}"/>
        </VBox>
        <Label text="{i18n>LABEL_18018}" />
        <VBox>
          <Text text="{/WeekWork/Bastime}{i18n>LABEL_00330}"/>
        </VBox>
        <Label text="{i18n>LABEL_18019}" />
        <VBox>
          <Text text="{/WeekWork/Ottime}{i18n>LABEL_00330}"/>
        </VBox>
      </grid:CSSGrid>
    </VBox>
  </VBox>
</core:FragmentDefinition>