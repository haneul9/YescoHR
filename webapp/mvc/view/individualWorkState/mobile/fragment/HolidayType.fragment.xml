<core:FragmentDefinition xmlns="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:core="sap.ui.core">
	<VBox class="vCardBox small MultiBoxmobile">
		<HBox class="title">
			<Title level="H2" text="{i18n>LABEL_18006}" />
			<Text text="{/FullYear}" class="desc-txt" />
		</HBox>
		<table:Table rows="{/VacaTypeList}" visibleRowCount="{/VacaTypeRowCount}" width="100%" selectionMode="None" columnHeaderHeight="45" rowHeight="44" noData="{i18n>MSG_00001}">
			<table:Column width="auto" sortProperty="Kotxt" filterProperty="Kotxt">
				<Label text="{i18n>LABEL_18007}" textAlign="Begin" />
				<table:template>
					<Text text="{Kotxt}" textAlign="Left" wrapping="false" width="100%" class="tableRow_Text"/>
				</table:template>
			</table:Column>
			<table:Column width="60px" sortProperty="Crecnt" filterProperty="Crecnt">
				<Label text="{i18n>LABEL_18008}"/>
				<table:template>
					<Text text="{Crecnt}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
				</table:template>
			</table:Column>
			<table:Column width="60px" sortProperty="Usecnt" filterProperty="Usecnt">
				<Label text="{i18n>LABEL_18009}"/>
				<table:template>
					<Text text="{Usecnt}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
				</table:template>
			</table:Column>
			<table:Column width="60px" sortProperty="Balcnt" filterProperty="Balcnt">
				<Label text="{i18n>LABEL_18010}"/>
				<table:template>
					<Text text="{Balcnt}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
				</table:template>
			</table:Column>
		</table:Table>
	</VBox>
</core:FragmentDefinition>