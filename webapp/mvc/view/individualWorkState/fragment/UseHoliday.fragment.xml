<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:viz="sap.viz.ui5.controls"
  xmlns:viz.data="sap.viz.ui5.data"
  xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
  <VBox width="100%" class="vCardBox small">
    <HBox justifyContent="SpaceBetween" class="table-toolbar">
      <HBox class="title">
        <Title level="H2" text="{i18n>LABEL_18021}" />
        <Text text="{/FullYear}" class="desc-txt" />
      </HBox>
      <ComboBox width="80px" items="{/WorkTypeUseList}" selectedKey="{/WorkTypeUse}" change=".onWorkTypeUse">
        <core:Item text="{Atext}" key="{Awart}" />
      </ComboBox>
    </HBox>
    <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}" height='100%' width="100%" vizType='combination'>
      <viz:dataset>
        <viz.data:FlattenedDataset data="{/UseTimeGraph}">
          <viz.data:dimensions>
            <viz.data:DimensionDefinition name="Week" value="{Zyymm}" />
          </viz.data:dimensions>
          <viz.data:measures>
            <viz.data:MeasureDefinition name="Revenue" value="{Cumuse}" />
            <viz.data:MeasureDefinition name="Cost" value="{Monuse}" />
          </viz.data:measures>
        </viz.data:FlattenedDataset>
      </viz:dataset>

      <viz:feeds>
        <viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Revenue" />
        <viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Cost" />
        <viz.feeds:FeedItem id="feedCategoryAxis" uid="categoryAxis" type="Dimension" values="Week" />
      </viz:feeds>
    </viz:VizFrame>
  </VBox>
</core:FragmentDefinition>