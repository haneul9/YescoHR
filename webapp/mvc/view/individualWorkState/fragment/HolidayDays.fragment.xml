<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:microchart="sap.suite.ui.microchart"
  xmlns:grid="sap.ui.layout.cssgrid">
  <VBox width="50%" class="vCardBox sapUiMediumMarginEnd">
    <HBox>
      <Title level="H2" text="{i18n>LABEL_18005}" />
      <Text text="{/FullYear}"/>
    </HBox>
    <HBox>
      <microchart:InteractiveDonutChart class="w-auto h-auto" selectionEnabled="false">
        <microchart:layoutData>
          <FlexItemData growFactor="1"/>
        </microchart:layoutData>
        <microchart:segments>
          <microchart:InteractiveDonutChartSegment label="{i18n>LABEL_18002}" value="{/vacationChart/pUsed}" displayedValue="{/vacationChart/dUsed}{i18n>LABEL_00254} {/vacationChart/pUsed}%" />
          <microchart:InteractiveDonutChartSegment label="{i18n>LABEL_18003}" value="{/vacationChart/pPlan}" displayedValue="{/vacationChart/dPlan}{i18n>LABEL_00254} {/vacationChart/pPlan}%" />
          <microchart:InteractiveDonutChartSegment label="{i18n>LABEL_18004}" value="{/vacationChart/pUnPlan}" displayedValue="{/vacationChart/dUnPlan}{i18n>LABEL_00254} {/vacationChart/pUnPlan}%" />
        </microchart:segments>
      </microchart:InteractiveDonutChart>
