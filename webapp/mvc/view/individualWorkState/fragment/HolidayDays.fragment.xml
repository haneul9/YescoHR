<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:microchart="sap.suite.ui.microchart"
  xmlns:grid="sap.ui.layout.cssgrid">
  <VBox width="50%" class="vCardBox sapUiMediumMarginEnd">
    <HBox>
      <Title level="H2" text="{i18n>LABEL_18005}" />
      <Text text="{/FullYear}"/>
    </HBox>
    <HBox>
      <microchart:InteractiveDonutChart class="w-auto h-auto" selectionEnabled="false">
        <microchart:layoutData>
          <FlexItemData growFactor="1"/>
        </microchart:layoutData>
        <microchart:segments>
          <microchart:InteractiveDonutChartSegment value="{/vacationChart/pUsed}"/>
          <microchart:InteractiveDonutChartSegment value="{/vacationChart/pPlan}"/>
          <microchart:InteractiveDonutChartSegment value="{/vacationChart/pUnPlan}"/>
        </microchart:segments>
      </microchart:InteractiveDonutChart>
      <grid:CSSGrid gridTemplateColumns="3fr 1fr 1fr" gridGap="8px 0" class="form-grid status-wrap year-plan">
        <Text text="{i18n>LABEL_18002}" class="type02" />
        <Text text="{/vacationChart/dUsed}{i18n>LABEL_00254}"/>
        <Text text="{/vacationChart/pPlan}%"/>
        <Text text="{i18n>LABEL_18003}" class="type03" />
        <Text text="{/vacationChart/dPlan}{i18n>LABEL_00254}"/>
        <Text text="{/vacationChart/pUnPlan}%"/>
        <Text text="{i18n>LABEL_18004}" class="type07" />
        <Text text="{/vacationChart/dUnPlan}{i18n>LABEL_00254}"/>
        <Text text="{/vacationChart/pUnPlan}%"/>
      </grid:CSSGrid>
    </HBox>
    <!-- <grid:CSSGrid gridTemplateColumns="1fr 1fr" gridTemplateRows="110px 156px" gridGap="0" class="form-grid">
        <VBox>
          <Text text="{/vacationChart/dUsed}{i18n>LABEL_00254}"/>
          <Text text="{/vacationChart/dPlan}{i18n>LABEL_00254}"/>
          <Text text="{/vacationChart/dUnPlan}{i18n>LABEL_00254}"/>
        </VBox>
      </grid:CSSGrid> -->
  </VBox>
</core:FragmentDefinition>