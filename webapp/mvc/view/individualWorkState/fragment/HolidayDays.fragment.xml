<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:microchart="sap.suite.ui.microchart">
  <VBox width="50%" class="vCardBox small sapUiMediumMarginEnd">
    <HBox class="table-toolbar">
      <HBox class="title">
        <Title level="H2" text="{i18n>LABEL_18005}" />
        <Text text="{/FullYear}" class="desc-txt" />
      </HBox>
    </HBox>
    <HBox height="160px">
      <microchart:InteractiveDonutChart class="w-85" selectionEnabled="false">
        <microchart:layoutData>
          <FlexItemData growFactor="0.8"/>
        </microchart:layoutData>
        <microchart:segments>
          <microchart:InteractiveDonutChartSegment label="{i18n>LABEL_18002}" value="{/vacationChart/pUsed}" displayedValue="{/vacationChart/dUsed}{i18n>LABEL_00254}" />
          <microchart:InteractiveDonutChartSegment label="{i18n>LABEL_18003}" value="{/vacationChart/pPlan}" displayedValue="{/vacationChart/dPlan}{i18n>LABEL_00254}" />
          <microchart:InteractiveDonutChartSegment label="{i18n>LABEL_18004}" value="{/vacationChart/pUnPlan}" displayedValue="{/vacationChart/dUnPlan}{i18n>LABEL_00254}" />
        </microchart:segments>
      </microchart:InteractiveDonutChart>
      <VBox>
        <Text text="{/vacationChart/pPlan}%"/>
        <Text text="{/vacationChart/pUnPlan}%"/>
        <Text text="{/vacationChart/pUnPlan}%"/>
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>