<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:grid="sap.ui.layout.cssgrid">
  <!-- Mobile MSS 인재육성위원회 메뉴 - 인재육성위원회 목록 - 대상자 목록 - 상세 popup -->
  <!-- Mobile MSS 사원프로파일 메뉴 - 인재육성위원회 tab - 상세 popup -->
  <Popover placement="Top" horizontalScrolling="false" verticalScrolling="false" class="full-popover" busy="{/busy}" busyIndicatorDelay="0" modal="true">
    <customHeader>
      <Bar>
        <contentLeft>
          <Button type="Back" press=".onPressPopoverClose" class="nav-back-in-popover" />
        </contentLeft>
        <contentMiddle>
          <Title text="{i18n>LABEL_42001}" />
        </contentMiddle>
      </Bar>
    </customHeader>
    <content>
      <VBox class="contents">
        <VBox class="wrap" binding="{/header}">
          <grid:CSSGrid gridTemplateColumns="1fr 6fr" class="member-detail" gridGap="4px 20px">
            <VBox justifyContent="Center" alignItems="Center">
              <layoutData>
                <grid:GridItemLayoutData gridRow="span 2" />
              </layoutData>
              <Image src="{profilePath}" class="member-photo" mode="Background" width="88px" height="88px" />
            </VBox>
            <HBox justifyContent="SpaceBetween">
              <Label text="{name}" class="name" />
              <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_captain.svg" width="1.2rem" alt="Captain" visible="{= !!${chief} }" />
            </HBox>
            <grid:CSSGrid items="{baseInfo}" gridTemplateColumns="1fr">
              <Label text="{data}">
                <customData>
                  <core:CustomData key="type" value="{labelOrText}" writeToDom="true" />
                </customData>
              </Label>
            </grid:CSSGrid>
          </grid:CSSGrid>
        </VBox>
        <VBox class="emp-profile-talent-dev" height="calc(100% - 114px)" binding="{/detail}">
          <grid:CSSGrid gridAutoRows="40px" gridTemplateColumns="2fr 3fr">
            <Label text="{i18n>LABEL_43003}" />
            <FlexBox>
              <Text text="{Gjahr}{i18n>LABEL_42002} ({Zseqnrtx}{i18n>LABEL_42003})" />
            </FlexBox>
            <Label text="{i18n>LABEL_42005}" />
            <FlexBox>
              <Text text="{Zstattx}" />
            </FlexBox>
            <Label text="{i18n>LABEL_42008}" />
            <FlexBox>
              <Text text="{ path: 'Mdate', type: 'sap.ui.yesco.mvc.model.type.Date' }" />
            </FlexBox>
            <Label text="{i18n>LABEL_42006}" />
            <FlexBox>
              <Link href="{File2}" visible="{= !!${File2} }" subtle="true" target="_blank" width="1rem">
                <customData>
                  <core:CustomData key="download-icon-content" value="" writeToDom="true" />
                </customData>
              </Link>
            </FlexBox>
            <Label text="{i18n>LABEL_42004}" visible="{= ${File1Hide} !== 'X' }" />
            <FlexBox visible="{= ${File1Hide} !== 'X' }" class="bg-white">
              <Link href="{File1}" visible="{= !!${File1} }" subtle="true" target="_blank" width="1rem">
                <customData>
                  <core:CustomData key="download-icon-content" value="" writeToDom="true" />
                </customData>
              </Link>
            </FlexBox>
          </grid:CSSGrid>
          <ScrollContainer height="100%" horizontal="false" vertical="true" class="profile-detail">
            <layoutData>
              <FlexItemData maxHeight="{= ${File1Hide} === 'X' ? 'calc(100% - 188px)' : 'calc(100% - 228px)' }" />
            </layoutData>
            <content>
              <Title level="H4" text="{Title1}" />
              <TextArea rows="5" growing="true" maxLength="10000" value="{Desc1}" width="100%" editable="false" />
              <Title level="H4" text="{Title2}" />
              <TextArea rows="5" growing="true" maxLength="10000" value="{Desc2}" width="100%" editable="false" />
              <Title level="H4" text="{Title3}" />
              <TextArea rows="5" growing="true" maxLength="10000" value="{Desc3}" width="100%" editable="false" />
            </content>
          </ScrollContainer>
        </VBox>
      </VBox>
    </content>
  </Popover>
</core:FragmentDefinition>