<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:grid="sap.ui.layout.cssgrid">
  <Dialog title="{i18n>LABEL_42001} ({/Detail/Gjahr}{i18n>LABEL_42002} {/Detail/Zseqnrtx}{i18n>LABEL_42003})" contentWidth="800px" contentHeight="780px" draggable="true" horizontalScrolling="false" verticalScrolling="false" busy="{busy}" busyIndicatorDelay="0" class="emp-profile-talent-dev">
    <content>
      <HBox class="vCardBox sapUiMediumMarginBottom py-15-px">
        <grid:CSSGrid gridTemplateRows="repeat(5, 35px)" gridTemplateColumns="repeat(5, 1fr)" gridGap="0">
          <grid:layoutData>
            <FlexItemData growFactor="1" />
          </grid:layoutData>
          <Image src="{/Detail/Photo}" height="calc(100% - 20px)" press=".onPressPhoto">
            <layoutData>
              <grid:GridItemLayoutData gridRow="1 / 6" />
            </layoutData>
          </Image>
          <Label text="{/Detail/Target}" class="font-16-px">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="2 / 6" />
            </layoutData>
          </Label>

          <Label text="{i18n>LABEL_42006}" />
          <HBox width="100%" height="100%" alignItems="Center">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="3 / 4" />
            </layoutData>
            <core:Icon src="sap-icon://attachment" visible="{= Number(${/Detail/Appno2}) > 0 }" press=".onPressFileDownload" size="22px" hoverColor="#007bff" class="font-bold">
              <core:customData>
                <core:CustomData key="appno" value="{/Detail/Appno2}" />
              </core:customData>
            </core:Icon>
            <core:Icon src="sap-icon://delete" visible="{= ${/Detail/AuthChange} === 'X' &amp;&amp; Number(${/Detail/Appno2}) > 0 }" press=".onPressFileDelete" size="22px" color="#fd5f58" class="font-bold">
              <core:customData>
                <core:CustomData key="appno" value="{/Detail/Appno2}" />
              </core:customData>
            </core:Icon>
            <core:Icon src="sap-icon://add-document" visible="{= ${/Detail/AuthChange} === 'X' &amp;&amp; ${/Detail/FileupChk} === 'X' &amp;&amp; Number(${/Detail/Appno2}) === 0 }" press=".onPressFileUpload" size="22px" hoverColor="#007bff" class="font-bold" />
          </HBox>
          <Label text="{i18n>LABEL_42004}" visible="{= ${/Detail/FileupChk} === 'X' &amp;&amp; ${/Detail/File1Hide} !== 'X' }" />
          <HBox width="100%" height="100%" alignItems="Center">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="5 / 6" />
            </layoutData>
            <core:Icon src="sap-icon://attachment" visible="{= ${/Detail/FileupChk} === 'X' &amp;&amp; ${/Detail/File1Hide} !== 'X' &amp;&amp; Number(${/Detail/Appno1}) > 0 }" press=".onPressFileDownload" size="22px" hoverColor="#007bff" class="font-bold">
              <core:customData>
                <core:CustomData key="appno" value="{/Detail/Appno1}" />
              </core:customData>
            </core:Icon>
            <core:Icon src="sap-icon://delete" visible="{= ${/Detail/FileupChk} === 'X' &amp;&amp; ${/Detail/AuthChange} === 'X' &amp;&amp; ${/Detail/File1Hide} !== 'X' &amp;&amp; Number(${/Detail/Appno1}) > 0 }" press=".onPressFileDelete" size="22px" color="#fd5f58" class="font-bold">
              <core:customData>
                <core:CustomData key="appno" value="{/Detail/Appno1}" />
              </core:customData>
            </core:Icon>
            <core:Icon src="sap-icon://add-document" visible="{= ${/Detail/FileupChk} === 'X' &amp;&amp; ${/Detail/AuthChange} === 'X' &amp;&amp; ${/Detail/FileupChk} === 'X' &amp;&amp; ${/Detail/File1Hide} !== 'X' &amp;&amp; Number(${/Detail/Appno1}) === 0 }" press=".onPressFileUpload" size="22px" hoverColor="#007bff" class="font-bold" />
          </HBox>

          <Label text="{i18n>LABEL_42005}" />
          <ComboBox items="{/ZstatEntry}" selectedKey="{/Detail/Zstat}" width="100px" editable="{= ${/Detail/AuthChange} === 'X' &amp;&amp; !${/Detail/Completed} }" visible="{= ${/Detail/AuthChange} === 'X' }">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="3 / 6" />
            </layoutData>
            <core:Item text="{Zstattx}" key="{Zstat}" />
          </ComboBox>

          <Label text="{i18n>LABEL_42008}" />
          <Text text="{ path: '/Detail/Mdate', type: 'sap.ui.yesco.mvc.model.type.Date' }" />
          <Label text="{i18n>LABEL_42007}" />
          <Text text="{/Detail/Nottx}" />

          <Label text="{i18n>LABEL_42009}" />
          <Text text="{/Detail/Modtx}">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="3 / 6" />
            </layoutData>
          </Text>
        </grid:CSSGrid>
      </HBox>
      <VBox class="vCardBox py-20-px">
        <ScrollContainer height="500px" horizontal="false" vertical="true">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
          <content>
            <Panel expandable="true" expanded="true" headerText="{/Detail/Title1}">
              <TextArea rows="5" growing="true" maxLength="10000" value="{/Detail/Desc1}" width="100%" editable="{= ${/Detail/AuthChange} === 'X' &amp;&amp; !${/Detail/Completed} }" />
            </Panel>
            <Panel expandable="true" expanded="true" headerText="{/Detail/Title2}">
              <TextArea rows="5" growing="true" maxLength="10000" value="{/Detail/Desc2}" width="100%" editable="{= ${/Detail/AuthChange} === 'X' &amp;&amp; !${/Detail/Completed} }" />
            </Panel>
            <Panel expandable="true" expanded="true" headerText="{/Detail/Title3}">
              <TextArea rows="5" growing="true" maxLength="10000" value="{/Detail/Desc3}" width="100%" editable="{= ${/Detail/AuthChange} === 'X' &amp;&amp; !${/Detail/Completed} }" />
            </Panel>
          </content>
        </ScrollContainer>
      </VBox>
    </content>
    <buttons>
      <Button text="{i18n>LABEL_00108}" type="Emphasized" press=".onPressEdit" visible="{= ${/Detail/AuthChange} === 'X' &amp;&amp; ${/Detail/Completed} }" />
      <Button text="{i18n>LABEL_00103}" type="Emphasized" press=".onPressSave" visible="{= ${/Detail/AuthChange} === 'X' &amp;&amp; !${/Detail/Completed} }" />
      <Button text="{i18n>LABEL_00117}" type="Emphasized" press=".onPressComplete" visible="{= ${/Detail/AuthChange} === 'X' &amp;&amp; !${/Detail/Completed} }" />
      <Button text="{i18n>LABEL_00115}" press=".onPressDialogClose" class="cancel" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>