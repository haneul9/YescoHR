<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <HBox justifyContent="SpaceBetween" class="header-wrap">
    <custom:HeaderTitleCountMessage titlePath="i18n>LABEL_43002" countPath="/employee/listInfo/totalCount" infoMessagePath="/employee/listInfo/infoMessage" />
    <HBox>
      <HBox class="status-wrap">
        <ObjectStatus text="{i18n>LABEL_43013} {/employee/listInfo/readyCount}" icon="sap-icon://circle-task-2" />
        <ObjectStatus text="{i18n>LABEL_43014} {/employee/listInfo/progressCount}" icon="sap-icon://circle-task-2" state="Indication02" />
        <ObjectStatus text="{i18n>LABEL_43015} {/employee/listInfo/completeCount}" icon="sap-icon://circle-task-2" state="Indication05" />
      </HBox>
      <Button icon="sap-icon://excel-attachment" text="Excel" press=".onPressEmployeeExcelDownload" busyIndicatorDelay="0" busy="{/busy/Button}">
        <layoutData>
          <FlexItemData styleClass="button-excel-attachment" />
        </layoutData>
      </Button>
    </HBox>
  </HBox>
</core:FragmentDefinition>