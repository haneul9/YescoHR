<mvc:View controllerName="sap.ui.yesco.mvc.controller.talentDev.mobile.Committee"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page navButtonPress=".onNavBack">
    <VBox class="contents">
      <mobile:SearchAreaCSSGrid gridTemplateColumns="2fr 1fr" rowCount="3">
        <custom:SingleComboBox width="100%" selectedKey="{Werks}" items="{/entry/Werks}" selectionFinish=".onChangeWerks">
          <core:Item key="{Werks}" text="{Pbtxt}" />
        </custom:SingleComboBox>
        <Button press=".onPressSearch" text="{i18n>LABEL_00100}" width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_search03.png" iconDensityAware="false" />
        <custom:SingleComboBox width="100%" selectedKey="{Gjahr}" items="{/entry/Gjahr}" selectionFinish=".onChangeGjahr">
          <core:Item key="{Gjahr}" text="{Gjahrtx}" />
        </custom:SingleComboBox>
        <Text text=" ">
          <layoutData>
            <grid:GridItemLayoutData gridRow="span 2" />
          </layoutData>
        </Text>
        <custom:SingleComboBox width="100%" selectedKey="{Zseqnr}" items="{/entry/Zseqnr}">
          <core:Item key="{Zseqnr}" text="{Zseqnrtx}" />
        </custom:SingleComboBox>
      </mobile:SearchAreaCSSGrid>
      <mobile:HeaderTitleCountStatus titlePath="i18n>LABEL_43001" countPath="/committee/listInfo/totalCount" pressInfoIcon=".onPressLegend" />
      <mobile:ScrollContainer>
        <List items="{/committee/listInfo/list}" busy="{/busy/Committee}" busyIndicatorDelay="0" class="list-wrap wrap talent-dev-committee">
          <CustomListItem type="Active" press=".onPressCommitteeListItem">
            <grid:CSSGrid gridTemplateColumns="1fr 1fr 1fr" gridGap="6px 0">
              <Text text="{Name1}" width="100%" />
              <Text text="{Gjahr}{i18n>LABEL_42002}" width="100%" textAlign="Center" />
              <Text text="{Zseqnrtx}{i18n>LABEL_42003}" width="100%" textAlign="Right" />
              <Text text="{Ztitle}" class="subject">
                <layoutData>
                  <grid:GridItemLayoutData gridColumn="span 3" />
                </layoutData>
              </Text>
              <!-- <ObjectStatus class="list-item-status" icon="sap-icon://circle-task-2" state="{= ${Zstat} === '2' ? 'Indication05' : (${Zstat} === '1' ? 'Indication02' : 'None') }" /> -->
              <!-- <Text text="{i18n>LABEL_43018} {Incompcnttx}" /> -->
              <Text text="{ path: 'Mdate', type: 'sap.ui.yesco.mvc.model.type.Date' }" width="100%" />
              <Text text="{i18n>LABEL_43017} {Compcnttx}" textAlign="Center" />
              <ObjectStatus text="{Zstattx}" class="list-item-status" state="{= ${Zstat} === '2' ? 'Indication05' : (${Zstat} === '1' ? 'Indication02' : 'None') }" />
            </grid:CSSGrid>
          </CustomListItem>
        </List>
      </mobile:ScrollContainer>
    </VBox>
  </mobile:Page>
</mvc:View>