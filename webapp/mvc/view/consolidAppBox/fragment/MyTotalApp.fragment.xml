    <VBox>
      <HBox justifyContent="SpaceBetween" class="title">
        <Title level="H2" text="{i18n>LABEL_19007}" />
      </HBox>
      <Text text="{i18n>MSG_19002}" class="sapUiSmallMarginBottom" />
      <HBox class="mt-50-px">
        <VBox width="50%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_19008}" />
          <ObjectStatus text="{= !${/Total/AppIng} ? '0' : ${/Total/AppIng} }" state="Indication05" />
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_00117}" />
          <ObjectStatus text="{= !${/Total/AppCom} ? '0' : ${/Total/AppCom} }" state="Indication05" />
        </VBox>
      </HBox>
    </VBox>
