<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox summary-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
        <VBox>
            <HBox justifyContent="SpaceBetween" class="title">
                <Title level="H2" text="{i18n>LABEL_25002}" />
            </HBox>
            <Text text="{
                path: '/Total/Zyear',
                formatter: '.thisYear'
            }" class="sapUiSmallMarginBottom" />
            <HBox class="mt-50-px">
                <VBox width="40%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_09009}" />
                    <ObjectStatus text="{
                        path: '/Total/Betrg',
                        formatter: '.formatPay'
                    }" state="Indication05" />
                </VBox>
                <VBox class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_25003}" />
                    <ObjectStatus text="{/Total/Carno}" state="Indication01" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>