<mvc:View controllerName="sap.ui.yesco.mvc.controller.excavation.Detail"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:custom="sap.ui.yesco.control">
    <Page showHeader="false">
        <VBox class="contents-header">
            <HBox justifyContent="SpaceBetween" class="breadcrumbs">
                <custom:Breadcrumbs />
                <HBox>
                    <Button text="{i18n>LABEL_00121}" class="sapUiTinyMarginEnd" type="Emphasized" visible="{= !${/ZappStatAl} }" enabled="{= ${/form/hasRow}}" busyIndicatorDelay="0" busy="{/busy}" press=".onPressApproval" />
                    <Button text="{i18n>LABEL_00146}" class="sapUiTinyMarginEnd" press=".onNavBack" />
                    <Button icon="sap-icon://print" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" />
                    <Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" />
                </HBox>
            </HBox>
        </VBox>
        <VBox class="contents">
            <core:Fragment fragmentName="sap.ui.yesco.fragment.AppointeeBar" type="XML" />
            <VBox class="vCardBox">
                <HBox justifyContent="SpaceBetween">
                    <HBox alignItems="Center" class="title">
                        <Title level="H2" text="{i18n>LABEL_00129}" />
                    </HBox>
                    <HBox class="table-top">
                        <Button icon="sap-icon://add" class="sapUiTinyMarginEnd" text="{i18n>LABEL_00107}" press=".onPressAddBtn" visible="{= !${/ZappStatAl} }" />
                        <Button icon="sap-icon://less" text="{i18n>LABEL_00110}" press=".onPressDelBtn" visible="{= !${/ZappStatAl} }" enabled="{= ${/form/hasRow}}" />
                    </HBox>
                </HBox>
                <HBox>
                    <core:Fragment fragmentName="sap.ui.yesco.mvc.view.excavation.fragment.ApprovalTable" type="XML" />
                </HBox>
            </VBox>
            <VBox class="vCardBox">
                <HBox alignItems="Center" class="title">
                    <Title text="{i18n>LABEL_04013}" level="H2" />
                </HBox>
                <TextArea width="100%" class="required" value="{/form/Chgrsn}" />
            </VBox>
            <core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
            <core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
            <core:Fragment fragmentName="sap.ui.yesco.fragment.ApprovalDetails" type="XML" />
        </VBox>
    </Page>
</mvc:View>