<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox overview-box">
    <HBox justifyContent="SpaceBetween" class="title">
      <Title level="H2" text="{i18n>LABEL_11001}" />
      <Button type="Transparent" icon="sap-icon://detail-view" class="icon-button" press=".onPressOverview" tooltip="{i18n>LABEL_11007}" />
    </HBox>
    <HBox width="100%" justifyContent="SpaceBetween" class="excavation-overview">
      <grid:CSSGrid gridTemplateColumns="1fr 1fr" gridGap="65px 50px">
        <Text text="{/overview/Year}{i18n>MSG_06001}">
          <layoutData>
            <grid:GridItemLayoutData gridColumn="1 / 3" />
          </layoutData>
        </Text>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_11003}" />
          <ObjectStatus text="{ path: '/overview/Cnt11', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication04" />
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_11004}" />
          <ObjectStatus text="{ path: '/overview/Cnt12', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication04" />
        </VBox>
      </grid:CSSGrid>
      <grid:CSSGrid gridTemplateColumns="1fr 1fr" gridGap="65px 50px">
        <Text text="{/overview/YearMonth} {i18n>MSG_06003}">
          <layoutData>
            <grid:GridItemLayoutData gridColumn="1 / 3"/>
          </layoutData>
        </Text>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_11003}" />
          <ObjectStatus text="{ path: '/overview/Cnt21', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication04" />
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_11004}" />
          <ObjectStatus text="{ path: '/overview/Cnt22', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication04" />
        </VBox>
      </grid:CSSGrid>
    </HBox>
  </VBox>
</core:FragmentDefinition>