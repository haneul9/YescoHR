<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid">
    <VBox class="vCardBox sapUiMediumMarginBottom" busyIndicatorDelay="0">
        <grid:CSSGrid gridTemplateColumns="1fr 6fr" gridGap="6px" class="employee-detail">
            <VBox justifyContent="Center" alignItems="Center">
                <layoutData>
                    <grid:GridItemLayoutData gridRow="span 5" />
                </layoutData>
                <Image src="{/employee/header/profilePath}" height="80px" width="80px"/>
                <Button icon="sap-icon://picture" text="{i18n>LABEL_00281}" class="icon-button" />
            </VBox>
            <grid:CSSGrid items="{path: '/employee/header/baseInfo'}" gridTemplateColumns="3fr 1fr 3fr 1fr 3fr" gridGap="0px">
                <Label text="{data}"/>
            </grid:CSSGrid>
        </grid:CSSGrid>
        <VBox class="timeline">
            <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}">
                <VBox width="20%" alignItems="Center">
                    <Text text="{label}" />
                </VBox>
            </HBox>
            <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}" class="lineItem-wrap">
                <VBox width="20%" alignItems="Center">
                    <core:Icon src="sap-icon://employee" class="lineItem" />
                </VBox>
            </HBox>
            <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}">
                <VBox width="20%" alignItems="Center">
                    <Text text="{data}" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>