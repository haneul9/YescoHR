<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid">
    <VBox class="vCardBox sapUiMediumMarginBottom" busyIndicatorDelay="0">
        <grid:CSSGrid gridTemplateColumns="1fr 6fr" gridGap="6px" class="employee-detail">
            <VBox justifyContent="Center" alignItems="Center">
                <layoutData>
                    <grid:GridItemLayoutData gridRow="span 5" />
                </layoutData>
                <!-- <Image src="{/employee/header/profilePath}" /> -->
                 <Image src="{/employee/header/profilePath}" class="member-photo" mode="Background" width="111px" height="111px" />
                <Button icon="asset/image/icon_me02.png" text="{i18n>LABEL_00281}" class="icon-button" />
            </VBox>
            <grid:CSSGrid items="{path: '/employee/header/baseInfo'}" gridTemplateColumns="3fr 1fr 3fr 1fr 3fr" gridGap="0px">
                <Label text="{data}">
                    <customData>
                        <core:CustomData key="type" value="{labelOrText}" writeToDom="true" />
                    </customData>
                </Label>
            </grid:CSSGrid>
        </grid:CSSGrid>
        <Panel expandable="true" expanded="true" width="auto" class="timeline-wrap">
            <content>
                <VBox class="timeline">
                    <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}">
                        <VBox width="20%" alignItems="Center">
                            <Text text="{label}" />
                        </VBox>
                    </HBox>
                    <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}" class="lineItem-wrap">
                        <VBox width="20%" alignItems="Center">
                            <core:Icon src="sap-icon://employee" class="lineItem" />
                        </VBox>
                    </HBox>
                    <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}">
                        <VBox width="20%" alignItems="Center">
                            <Text text="{data}" />
                        </VBox>
                    </HBox>
                </VBox>
            </content>
        </Panel>
    </VBox>
</core:FragmentDefinition>