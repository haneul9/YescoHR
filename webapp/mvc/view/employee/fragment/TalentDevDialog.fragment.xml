<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:grid="sap.ui.layout.cssgrid">
  <Dialog id="talentDevDialog" title="{i18n>LABEL_42001} ({Gjahr}{i18n>LABEL_42002} {Zseqnrtx}{i18n>LABEL_42003})" contentWidth="800px" contentHeight="780px" draggable="true" horizontalScrolling="false" verticalScrolling="false" class="emp-profile-talent-dev">
    <content>
      <HBox class="customBox py-15-px">
        <grid:CSSGrid gridTemplateRows="repeat(5, 35px)" gridTemplateColumns="repeat(5, 1fr)" gridGap="0">
          <grid:layoutData>
            <FlexItemData growFactor="1" />
          </grid:layoutData>
          <Image src="{Photo}" height="calc(100% - 20px)">
            <layoutData>
              <grid:GridItemLayoutData gridRow="1 / 6" />
            </layoutData>
          </Image>
          <Label text="{Target}" class="font-16-px">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="2 / 6" />
            </layoutData>
          </Label>
          <Label text="{i18n>LABEL_42006}" />
          <core:Icon src="sap-icon://attachment" visible="{= Number(${Appno2}) > 0 }" press=".onPressTalentDevFileDownload" class="align-left">
            <core:customData>
              <core:CustomData key="appno" value="{Appno2}" />
            </core:customData>
          </core:Icon>
          <Text text=" " visible="{= Number(${Appno2}) === 0 }" />
          <Label text="{i18n>LABEL_42004}" visible="{= ${File1Hide} !== 'X' }" />
          <core:Icon src="sap-icon://attachment" visible="{= ${File1Hide} !== 'X' &amp;&amp; Number(${Appno1}) > 0 }" press=".onPressTalentDevFileDownload" class="align-left">
            <core:customData>
              <core:CustomData key="appno" value="{Appno1}" />
            </core:customData>
          </core:Icon>
          <Text text=" " visible="{= ${File1Hide} === 'X' }" />
          <Text text=" " visible="{= ${File1Hide} === 'X' || Number(${Appno1}) === 0 }" />
          <Label text="{i18n>LABEL_42005}" />
          <Text text="{Zstattx}" />
          <Label text="{i18n>LABEL_42007}" />
          <Text text="{Nottx}" />
          <Label text="{i18n>LABEL_42008}" />
          <Text text="{ path: 'Mdate', type: 'sap.ui.yesco.mvc.model.type.Date' }">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="3 / 6" />
            </layoutData>
          </Text>
          <Label text="{i18n>LABEL_42009}" />
          <Text text="{Modtx}">
            <layoutData>
              <grid:GridItemLayoutData gridColumn="3 / 6" />
            </layoutData>
          </Text>
        </grid:CSSGrid>
      </HBox>
      <VBox class="customBox py-20-px">
        <ScrollContainer height="500px" horizontal="false" vertical="true">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
          <content>
            <Panel expandable="true" expanded="true" headerText="{Title1}">
              <TextArea rows="5" growing="true" maxLength="10000" value="{Desc1}" width="100%" editable="false" />
            </Panel>
            <Panel expandable="true" expanded="true" headerText="{Title2}">
              <TextArea rows="5" growing="true" maxLength="10000" value="{Desc2}" width="100%" editable="false" />
            </Panel>
            <Panel expandable="true" expanded="true" headerText="{Title3}">
              <TextArea rows="5" growing="true" maxLength="10000" value="{Desc3}" width="100%" editable="false" />
            </Panel>
          </content>
        </ScrollContainer>
      </VBox>
    </content>
    <buttons>
      <Button text="{i18n>LABEL_00115}" press=".onTalentDevDialogClose" class="cancel" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>