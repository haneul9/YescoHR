<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <IconTabFilter text="{i18n>LABEL_00279}" key="list" class="tablist type-a">
        <SegmentedButton width="100%" selectedKey="{/sideNavigation/search/selectedState}" selectionChange=".onChangeStat">
            <items>
                <SegmentedButtonItem text="{i18n>LABEL_00245}" key="" />
                <SegmentedButtonItem text="{i18n>LABEL_00277}" key="3" />
                <SegmentedButtonItem text="{i18n>LABEL_00278}" key="0" />
            </items>
        </SegmentedButton>
        <ScrollContainer height="700px" horizontal="false" vertical="true">
            <List id="sideEmployeeList" items="{path: '/sideNavigation/search/results'}" class="employee-card-list">
                <CustomListItem type="Active" press=".onClickEmployeeCard">
                    <HBox>
                        <VBox width="20%" justifyContent="Center" alignItems="Center">
                            <Image src="{Photo}" height="60px" width="60px" />
                        </VBox>
                        <VBox>
                            <HBox justifyContent="SpaceBetween">
                                <Text text="{Ename} {Zzjikgbt}/{Zzjikcht}" />
                                <core:Icon visible="{= !!${Manager}}" src="sap-icon://manager" />
                            </HBox>
                            <HBox>
                                <Label text="{i18n>LABEL_00226}" />
                                <Label text="{Pbtxt} {Fulln}" />
                            </HBox>
                            <HBox>
                                <Label text="{i18n>LABEL_00280}" />
                                <Label text="{Text1}" />
                            </HBox>
                            <HBox>
                                <Label text="{i18n>LABEL_00222}" />
                                <Label text="{Text2}" />
                            </HBox>
                        </VBox>
                    </HBox>
                </CustomListItem>
            </List>
        </ScrollContainer>
    </IconTabFilter>
</core:FragmentDefinition>