<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">
  <VBox width="100%" items="{ path: 'data', templateShareable: true }" class="succession-tab-contents">
    <HBox width="100%">
      <f:Card class="succession-card">
        <f:customData>
          <core:CustomData key="bg" value="{= ${Box} === 'S032' ? ${Value10} : '' }" writeToDom="true" />
        </f:customData>
        <f:layoutData>
          <FlexItemData styleClass="succession-position" />
        </f:layoutData>
        <f:content>
          <HBox>
            <Image src="{Photo01}" mode="Background" press=".onPressPhoto">
              <customData>
                <core:CustomData key="{Pernr}" />
              </customData>
              <layoutData>
                <FlexItemData styleClass="photo" />
              </layoutData>
            </Image>
            <VBox>
              <HBox justifyContent="SpaceBetween" alignItems="Center" class="name">
                <Title text="{Value02}" />
                <Image src="{Icon1}" />
              </HBox>
              <Text text="{Value03}" />
              <HBox class="with-label">
                <Text text="{Ntxpln}" />
                <Text text="{Value04}" />
              </HBox>
              <HBox class="with-label">
                <Text text="{Tscspnt}" />
                <Text text="{Value05}" />
              </HBox>
            </VBox>
          </HBox>
        </f:content>
      </f:Card>
      <VBox items="{ path: 'nominees', templateShareable: true }" class="succession-nominees">
        <HBox alignItems="Center" class="succession-card">
          <customData>
            <core:CustomData key="bg" value="{= ${Box} === 'S031' ? ${Value10} : '' }" writeToDom="true" />
          </customData>
          <Text text="{Value06}" />
          <Image src="{Photo02}" mode="Background" press=".onPressPhoto">
            <customData>
              <core:CustomData key="{Value15}" />
            </customData>
            <layoutData>
              <FlexItemData styleClass="photo" />
            </layoutData>
          </Image>
          <Text text="{Value07}" />
          <Text text="{Value08}">
            <layoutData>
              <FlexItemData growFactor="1" />
            </layoutData>
          </Text>
          <Text text="{Value09}" />
          <Image src="{Icon2}" />
        </HBox>
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>