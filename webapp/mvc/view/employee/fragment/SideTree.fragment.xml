<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <IconTabFilter text="{i18n>LABEL_00231}" key="tree">
        <ScrollContainer width="100%" height="{/sideNavigation/treeHeight}" vertical="true" busyIndicatorDelay="0" busy="{= !${/sideNavigation/treeLoaded}}">
            <Tree id="OrganizationTree" mode="SingleSelectMaster" items="{path: '/sideNavigation/treeData'}" selectionChange=".onSelectTreeItem">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
                <StandardTreeItem icon="{ref}" title="{Stext}"/>
            </Tree>
        </ScrollContainer>
    </IconTabFilter>
</core:FragmentDefinition>