<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">
  <VBox width="100%" items="{ path: 'data', templateShareable: true }" class="succession-tab-contents">
    <VBox width="100%">
      <Title text="{Header1_1}">
        <layoutData>
          <FlexItemData styleClass="succession-position" />
        </layoutData>
      </Title>
      <f:Card class="succession-card">
        <f:customData>
          <core:CustomData key="bg" value="{= ${Box} === 'S032' ? ${Value10} : '' }" writeToDom="true" />
        </f:customData>
        <f:layoutData>
          <FlexItemData styleClass="succession-position" />
        </f:layoutData>
        <f:content>
          <HBox>
            <Image src="{Photo01}" mode="Background">
              <layoutData>
                <FlexItemData styleClass="photo" />
              </layoutData>
            </Image>
            <VBox>
              <HBox justifyContent="SpaceBetween" alignItems="Center" class="name">
                <Title text="{Value02}" />
                <Image src="{Icon1}" />
              </HBox>
              <Text text="{Value03}" />
              <HBox class="with-label">
                <Text text="{Ntxpln}" />
                <Text text="{Value04}" />
              </HBox>
              <HBox class="with-label">
                <Text text="{Tscspnt}" />
                <Text text="{Value05}" />
              </HBox>
            </VBox>
          </HBox>
        </f:content>
      </f:Card>
      <Title text="{Header2_1}">
        <layoutData>
          <FlexItemData styleClass="succession-nominees" />
        </layoutData>
      </Title>
      <VBox items="{ path: 'nominees', templateShareable: true }" class="succession-nominees">
        <HBox alignItems="Center" class="succession-card">
          <customData>
            <core:CustomData key="bg" value="{= ${Box} === 'S031' ? ${Value10} : '' }" writeToDom="true" />
          </customData>
          <Text text="{Value06}" />
          <Image src="{Photo02}" mode="Background">
            <layoutData>
              <FlexItemData styleClass="photo" />
            </layoutData>
          </Image>
          <Text text="{Value07}" />
          <VBox>
            <layoutData>
              <FlexItemData growFactor="1" />
            </layoutData>
            <Text text="{Value14}" />
            <Text text="{Value08}" />
            <Text text="{Value09}" />
          </VBox>
        </HBox>
      </VBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>