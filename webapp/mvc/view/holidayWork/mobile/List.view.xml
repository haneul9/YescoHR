<mvc:View controllerName="sap.ui.yesco.mvc.controller.holidayWork.mobile.List"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" class="sapUiSmallMarginBottom" />
      <mobile:ScrollContainer>
        <mobile:List items="{ path: '/list' }">
          <mobile:CustomListItem press=".onSelectRow">
            <mobile:ApprovalRequestListItemBox>
              <mobile:ListCSSGrid gridTemplateColumns="3fr 2fr">
                <Text text="{ path: 'Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" class="font-16-px font-bold" />
                <Text text="{Atrsn}" />
                <ObjectStatus text="{Apptxt}" class="font-16-px" state="{ path: 'Appty', formatter: '.onChangeIndication' }" />
                <Text text="
                  { path: 'Beguz', type: 'sap.ui.yesco.mvc.model.type.Time', formatOptions: { pattern: 'HH:mm' } }~{ path: 'Enduz', type: 'sap.ui.yesco.mvc.model.type.Time', formatOptions: { pattern: 'HH:mm' } }({ path: 'Abrst', type: 'sap.ui.yesco.mvc.model.type.Decimal' }{i18n>LABEL_27007})" />
                <Text text="{ path: 'Subda', type: 'sap.ui.yesco.mvc.model.type.Date', formatter: '.formatSubda' } {Subtytx}" />
              </mobile:ListCSSGrid>
            </mobile:ApprovalRequestListItemBox>
          </mobile:CustomListItem>
        </mobile:List>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <mobile:ApprovalRequestListFooterToolbar pressRequestNew=".onPressNewApprovalBtn" />
    </mobile:footer>
  </mobile:Page>
</mvc:View>