<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="hCardBox overview-box studentFunds-overview" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <custom:HeaderTitleCountMessage title="{i18n>MSG_03011}" class="title" />
      <Text text="{ path: '/Total/Zyear', formatter: '.thisYear' }" class="sapUiSmallMarginBottom" />
      <HBox class="mt-50-px studentFunds-overview-content">
        <VBox width="30%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_02003}" />
          <ObjectStatus text="{ path: '/Total/Limcnt', formatter: '.formatNumber' }" state="Indication05" />
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_02002}" />
          <HBox alignItems="Baseline">
            <ObjectStatus text="{ path: '/Total/Zbetrg', formatter: '.formatPay' }" state="Indication05" class="mr-5-px" />
            <Label design="Bold" text="{i18n>LABEL_00158}" />
          </HBox>
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>