<mvc:View controllerName="sap.ui.yesco.mvc.controller.studentFunds.mobile.StudentFunds"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page navButtonPress=".onNavBack">
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" />
      <mobile:ScrollContainer>
        <mobile:List items="{/StudentList}">
          <mobile:CustomListItem press=".onSelectRow">
            <mobile:ApprovalRequestListItemBox>              <!-- statusFieldName="ZappStatAl" -->
              <mobile:ListCSSGrid>
                <Text text="{Zname}" class="emphasized" />
                <Text text="{ path: 'Appda', type: 'sap.ui.yesco.mvc.model.type.Date' }" textAlign="Right">
                  <layoutData>
                    <grid:GridItemLayoutData gridColumn="span 2" />
                  </layoutData>
                </Text>
                <Text text="{Sltxt}" width="100%" />
                <Text text="{Grdtx}" width="100%" textAlign="Center" />
                <Text text="{Divtx}" width="100%" textAlign="Right" />
              </mobile:ListCSSGrid>
            </mobile:ApprovalRequestListItemBox>
          </mobile:CustomListItem>
        </mobile:List>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <mobile:ApprovalRequestListFooterToolbar pressRequestNew=".onClick" />
    </mobile:footer>
  </mobile:Page>
</mvc:View>