<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox summary-box" busy="{/busy}">
    <HBox justifyContent="SpaceBetween" class="title">
      <Title level="H2" text="{i18n>LABEL_06002}" />
      <Button type="Transparent" icon="sap-icon://detail-view" class="icon-button" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 1fr 1fr 1fr 1fr 1fr" gridGap="8px">
      <Text text="{/summary/Year}{i18n>MSG_06001}" class="sapUiSmallMarginBottom">
        <layoutData>
          <grid:GridItemLayoutData gridColumn="1 / 4"/>
        </layoutData>
      </Text>
      <Text text="{/summary/YearMonth} {i18n>MSG_06003}" class="sapUiSmallMarginBottom">
        <layoutData>
          <grid:GridItemLayoutData gridColumn="4 / 7"/>
        </layoutData>
      </Text>
      <VBox class="summary-info">
        <Label design="Bold" text="{i18n>LABEL_06003}" />
        <ObjectStatus text="{ path: '/summary/Cnt11', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication04" />
      </VBox>
      <VBox class="summary-info">
        <Label design="Bold" text="{i18n>LABEL_06004}" />
