      </VBox>
      <VBox class="summary-info">
        <Label design="Bold" text="{i18n>LABEL_06004}" />
        <ObjectStatus text="{ path: '/summary/Cnt22', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication04" />
      </VBox>
      <VBox class="summary-info">
        <Label design="Bold" text="{i18n>LABEL_06005}" />
