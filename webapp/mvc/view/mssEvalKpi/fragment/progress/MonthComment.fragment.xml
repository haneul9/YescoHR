<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="commentDialog" showHeader="false" contentWidth="400px" contentHeight="200px">
    <buttons>
      <Button text="{i18n>LABEL_00103}" class="sapUiTinyMarginEnd" type="Emphasized" press=".onCommentSaveBtn" />
      <Button text="{i18n>LABEL_00115}" press=".onCloseClick" />
    </buttons>
    <content>
      <HBox justifyContent="Center" class="table-toolbar">
        <HBox class="title" alignItems="Center">
          <Title level="H4" text="{/monthComment/Date}" class="color-03 mx-5-px" />
          <Label text="{i18n>LABEL_15028}" class="ml-5-px mb-2-px" />
        </HBox>
      </HBox>
      <TextArea rows="5" width="100%" value="{/monthComment/Cmmnt}"/>
    </content>
  </Dialog>
</core:FragmentDefinition>