<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:dnd-grid="sap.f.dnd"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f">
    <VBox class="contents">
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.mssEvalKpi.fragment.tabDetail.CascadingForm" type="XML" />
        <VBox class="vCardBox">
            <HBox justifyContent="SpaceBetween" class="table-toolbar">
                <Title level="H4" text="{i18n>LABEL_15021}" />
                <HBox class="cascading-type-list">
                    <Image src="asset/image/icon_cascading_type01.png"/>
                    <Text text="{i18n>LABEL_15014}" textAlign="Center" width="100%"/>
                    <Image src="asset/image/icon_cascading_type02.png"/>
                    <Text text="{i18n>LABEL_15015}" textAlign="Center" width="100%"/>
                    <Image src="asset/image/icon_cascading_type03.png"/>
                    <Text text="{i18n>LABEL_15016}" textAlign="Center" width="100%"/>
                    <Image src="asset/image/icon_cascading_type04.png"/>
                    <Text text="{i18n>LABEL_15017}" textAlign="Center" width="100%"/>
                </HBox>
            </HBox>
            <VBox items="{/Tmp}">
                <HBox width="100%" height="100px">
                    <Label text="{Label}" width="150px" vAlign="Middle" textAlign="Center">
                        <layoutData>
                            <FlexItemData minHeight="150px" maxHeight="150px" />
                        </layoutData>
                    </Label>
                    <f:GridList items="{TmpGrid}">
                        <f:layoutData>
                            <FlexItemData growFactor="1"/>
                        </f:layoutData>
                        <f:dragDropConfig>
                            <dnd:DragInfo sourceAggregation="items" dragStart=".onDragStart" />
                            <dnd-grid:GridDropInfo targetAggregation="items" dropPosition="Between" dropLayout="Horizontal" drop=".onTeamDrop" />
                        </f:dragDropConfig>
                        <f:customLayout>
                            <grid:GridBoxLayout boxMinWidth="30px" boxWidth="200px" />
                        </f:customLayout>
                        <f:GridListItem>
                            <VBox height="70px">
                                <layoutData>
                                    <FlexItemData growFactor="1" shrinkFactor="0" />
                                </layoutData>
                                <HBox>
                                    <core:Icon visible="{= ${Otype} === '90' }" src="sap-icon://alert" />
                                    <core:Icon visible="{= ${Otype} === '91' }" src="sap-icon://checklist-item" />
                                    <core:Icon visible="{= !!${Tmcnt} &amp;&amp; ${Tmcnt} !== '0' }" src="sap-icon://border" />
                                    <core:Icon visible="{= !!${Url} }" src="sap-icon://circle-task" />
                                </HBox>
                                <Title text="{Stext}" level="H4" />
                                <Text text="{Ztext}" wrapping="false" />
                            </VBox>
                        </f:GridListItem>
                    </f:GridList>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>