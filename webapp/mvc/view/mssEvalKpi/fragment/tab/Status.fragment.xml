<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartList="sap.ui.comp.smartlist"
    xmlns:grid="sap.ui.layout.cssgrid">
    <VBox class="contents">
        <VBox width="100%" class="vCardBox">
            <SegmentedButton width="30%" selectedKey="{/situation/segmentKey}" selectionChange=".onSegmentBtn" class="type-b">
                <items>
                    <SegmentedButtonItem text="{i18n>LABEL_15022}" key="A"/>
                    <SegmentedButtonItem text="{i18n>LABEL_15023}" key="B"/>
                </items>
            </SegmentedButton>
        </VBox>
        <VBox class="vCardBox">
            <VBox class="form-bar" alignItems="Center">
                <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr 1fr 2fr 1fr" gridGap="10px">
                    <Label text="{/CascadingSitu/Label1}" />
                    <ComboBox items="{/CompanyCode}" selectedKey="{/search/Werks}" change=".onCasSituFirSelect">
                        <core:Item text="{Pbtxt}" key="{Werks}" />
                    </ComboBox>
                    <Label text="{/CascadingSitu/Label2}" visible="{= !!${/CascadingSitu/Label2} }" />
                    <ComboBox items="{/CascadingSitu/SecondCode}" selectedKey="{/search/Objid}" change=".onCasSituSecSelect" visible="{= !!${/CascadingSitu/Label2} }">
                        <core:Item text="{Stext}" key="{Objid}" />
                    </ComboBox>
                    <Label text="{i18n>LABEL_15005}" />
                    <ComboBox items="{/Years}" selectedKey="{/search/Zyear}">
                        <core:Item text="{Ztext}" key="{Zcode}" />
                    </ComboBox>
                    <Button text="{i18n>LABEL_00100}" icon="asset/image/icon_search03.png" press=".onCasSituList"/>
                </grid:CSSGrid>
                <smartList:SmartList id="CascadSituList" listType="Tree" enableAutoBinding="true" showRowCount="false" showFullScreenButton="true" listBindingPath="/CascadingSitu/SituList">
                    <smartList:listItemTemplate>
                        <StandardTreeItem title="{Stext}" />
                    </smartList:listItemTemplate>
                </smartList:SmartList>
            </VBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>