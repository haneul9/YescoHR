<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:dnd-grid="sap.f.dnd"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    xmlns:table="sap.ui.table">
    <VBox class="contents">
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.mssEvalKpi.fragment.formDetail.SearchCondition" type="XML" />
        <VBox renderType="Bare">
            <table:Table id="gridTable" rows="{/List}" visibleRowCount="{/listRowCount}" width="100%" busyIndicatorDelay="0" busy="{/busy}" selectionMode="None" columnHeaderHeight="45" rowHeight="44" noData="{i18n>MSG_00001}">
                <table:extension>
                    <HBox>
                        <ObjectStatus text="{i18n>LABEL_15006}" state="Indication04" />
                        <Title level="H4" text="{i18n>LABEL_15008}" />
                    </HBox>
                </table:extension>
                <table:dragDropConfig>
                    <dnd:DragInfo groupName="moveToTable2" sourceAggregation="rows" dragStart="onDragStart" />
                    <dnd:DropInfo groupName="moveToTable1" drop="onDropTable" />
                </table:dragDropConfig>
                <table:columns>
                    <table:Column width="150px">
                        <Label text="{i18n>LABEL_15009}"/>
                        <table:template>
                            <Text text="{Otext}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="300px">
                        <Label text="{i18n>LABEL_15010}"/>
                        <table:template>
                            <!-- <Text text="{Stext}" textAlign="Begin" width="100%" wrapping="false" class="tableRow_Text"/> -->
                            <Link href="{Url}" text="{Stext}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="auto">
                        <Label text="{i18n>LABEL_15011}"/>
                        <table:template>
                            <Text text="{Ztext}" textAlign="Begin" width="100%" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="100px">
                        <Label text="{i18n>LABEL_15012}"/>
                        <table:template>
                            <Text text="{Tmcnt}" textAlign="End" width="100%" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="100px">
                        <Label text="{i18n>LABEL_15013}"/>
                        <table:template>
                            <Text text="{Prozt}" textAlign="End" width="100%" wrapping="false" class="tableRow_Text"/>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
            <HBox justifyContent="SpaceBetween">
                <HBox>
                    <ObjectStatus text="{i18n>LABEL_15004}" state="Indication04" />
                    <Title level="H4" text="{i18n>LABEL_15018}" />
                </HBox>
                <HBox>
                    <core:Icon src="sap-icon://alert" />
                    <Text text="{i18n>LABEL_15014}" textAlign="Center" width="100%"/>
                    <core:Icon src="sap-icon://checklist-item" />
                    <Text text="{i18n>LABEL_15015}" textAlign="Center" width="100%"/>
                    <core:Icon src="sap-icon://border" />
                    <Text text="{i18n>LABEL_15016}" textAlign="Center" width="100%"/>
                    <core:Icon src="sap-icon://circle-task" />
                    <Text text="{i18n>LABEL_15017}" textAlign="Center" width="100%"/>
                </HBox>
            </HBox>
            <HBox width="100%" height="200px" class="vCardBox">
                <layoutData>
                    <FlexItemData growFactor="1"/>
                </layoutData>
                <Label text="{/search/Orgtx}" width="150px" vAlign="Middle" textAlign="Center" wrapping="true">
                    <layoutData>
                        <FlexItemData minHeight="150px" maxHeight="150px"/>
                    </layoutData>
                </Label>
                <f:GridList id="gridList" items="{/PartList}">
                    <f:dragDropConfig>
                        <dnd:DragInfo sourceAggregation="items" dragStart=".onDragStart" />
                        <dnd-grid:GridDropInfo targetAggregation="items" dropPosition="Between" dropLayout="Horizontal" drop=".onDrop" />
                    </f:dragDropConfig>
                    <f:customLayout>
                        <grid:GridBoxLayout boxMinWidth="30px" boxWidth="200px" />
                    </f:customLayout>
                    <f:GridListItem>
                        <VBox height="70px">
                            <layoutData>
                                <FlexItemData growFactor="1" shrinkFactor="0" />
                            </layoutData>
                            <HBox>
                                <core:Icon visible="{= ${Otype} === '90' }" src="sap-icon://alert" />
                                <core:Icon visible="{= ${Otype} === '91' }" src="sap-icon://checklist-item" />
                                <core:Icon visible="{= !!${Tmcnt} &amp;&amp; ${Tmcnt} !== '0' }" src="sap-icon://border" />
                                <core:Icon visible="{= !!${Url} }" src="sap-icon://circle-task" />
                            </HBox>
                            <Title text="{Stext}" level="H4" />
                            <Text text="{Ztext}" wrapping="false" />
                        </VBox>
                    </f:GridListItem>
                </f:GridList>
            </HBox>
