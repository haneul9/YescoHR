<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr 1fr 2fr 1fr" gridGap="10px" class="sapUiMediumMarginBottom">
        <Label text="{i18n>LABEL_00220}" />
        <ComboBox items="{/CompanyCode}" selectedKey="{/search/Werks}" change=".onCompSelect">
            <core:Item text="{Pbtxt}" key="{Werks}" />
        </ComboBox>
        <Label text="{i18n>LABEL_15004}" />
        <ComboBox items="{/PartCode}" selectedKey="{/search/Orgeh}">
            <core:Item text="{Orgtx}" key="{Orgeh}" />
        </ComboBox>
        <Label text="{i18n>LABEL_15005}" />
        <ComboBox items="{/Years}" selectedKey="{/search/Zyear}">
            <core:Item text="{Ztext}" key="{Zcode}" />
        </ComboBox>
        <Button text="{i18n>LABEL_00100}" press=".onSearch"/>
    </grid:CSSGrid>
</core:FragmentDefinition>