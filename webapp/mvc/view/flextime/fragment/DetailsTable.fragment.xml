<core:FragmentDefinition xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <HBox>
        <table:Table id="flextimeDetailsTable" width="100%" columnHeaderHeight="45" rowHeight="44" rows="{/details/list}" visibleRowCount="{/details/rowCount}" busyIndicatorDelay="0" busy="{/busy/Details}" noData="{i18n>MSG_00001}" rowSelectionChange=".onSelectionDetailsTable">
            <table:columns>
                <table:Column width="10%">
                    <Label text="{i18n>LABEL_00170}"/>
                    <table:template>
                        <ObjectStatus text="{Datumtx}" state="{= ${Offyn} === 'X' ? 'Error' : 'None'}" class="table-object-status" />
                    </table:template>
                </table:Column>
                <table:Column width="4%">
                    <Label text="{i18n>LABEL_00350}"/>
                    <table:template>
                        <ObjectStatus text="{Daytx}" state="{= ${Offyn} === 'X' ? 'Error' : 'None'}" class="table-object-status" />
                    </table:template>
                </table:Column>
                <table:Column width="12%">
                    <Label text="{i18n>LABEL_00151}"/>
                    <table:template>
                        <Text text="{Atext}" width="100%" textAlign="Center" wrapping="false" />
                    </table:template>
                </table:Column>
                <table:Column width="9%">
                    <Label text="{i18n>LABEL_40004}"/>
                    <table:template>
                        <TimePicker dateValue="{ path: 'Beguz', type: 'sap.ui.yesco.mvc.model.type.InputTime' }" initialFocusedDateValue="{/initBeguz}" minutesStep="30" enabled="{= ${Offyn} !== 'X' }" placeholder="HH:mm" valueFormat="HH:mm" displayFormat="HH:mm" busyIndicatorDelay="0" busy="{/busy/Input}" class="sapIcon_Time" change=".onChangeWorktime" />
                    </table:template>
                </table:Column>
                <table:Column width="9%">
                    <Label text="{i18n>LABEL_40005}"/>
                    <table:template>
                        <TimePicker dateValue="{ path: 'Enduz', type: 'sap.ui.yesco.mvc.model.type.InputTime' }" initialFocusedDateValue="{/initEnduz}" minutesStep="30" enabled="{= ${Offyn} !== 'X' }" placeholder="HH:mm" valueFormat="HH:mm" displayFormat="HH:mm" busyIndicatorDelay="0" busy="{/busy/Input}" class="sapIcon_Time" change=".onChangeWorktime" />
                    </table:template>
                </table:Column>
                <table:Column width="9%">
                    <Label text="{i18n>LABEL_40018}"/>
                    <table:template>
                        <Input value="{ path: 'Brk01', type: 'sap.ui.yesco.mvc.model.type.Decimal' }" enabled="{= ${Offyn} !== 'X' }" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".helpInput" busyIndicatorDelay="0" busy="{/busy/Input}" />
                    </table:template>
                </table:Column>
                <table:Column width="9%">
                    <Label text="{i18n>LABEL_40019}"/>
                    <table:template>
                        <Input value="{ path: 'Brk02', type: 'sap.ui.yesco.mvc.model.type.Decimal' }" enabled="{= ${Offyn} !== 'X' }" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".helpInput" busyIndicatorDelay="0" busy="{/busy/Input}" />
                    </table:template>
                </table:Column>
                <table:Column width="auto">
                    <Label text="{i18n>LABEL_40020}"/>
                    <table:template>
                        <ObjectStatus text="{ path: 'Reltim', type: 'sap.ui.yesco.mvc.model.type.Decimal' }" state="{= parseFloat(${Reltim}) > 8 ? 'Indication05' : parseFloat(${Reltim}) === 8 ? 'None' : 'Error' }" class="table-object-status" />
                    </table:template>
                </table:Column>
                <table:Column width="auto">
                    <Label text="{i18n>LABEL_40021}"/>
                    <table:template>
                        <Text text="{ path: 'Paytim', type: 'sap.ui.yesco.mvc.model.type.Decimal' }" width="100%" textAlign="Center" wrapping="false" />
                    </table:template>
                </table:Column>
                <table:Column width="auto">
                    <Label text="{i18n>LABEL_40022}"/>
                    <table:template>
                        <Text text="{ path: 'Stdazc', type: 'sap.ui.yesco.mvc.model.type.Decimal' }" width="100%" textAlign="Center" wrapping="false" />
                    </table:template>
                </table:Column>
                <table:Column width="auto">
                    <Label text="{i18n>LABEL_40023}"/>
                    <table:template>
                        <Text text="{ path: 'Brk01m', type: 'sap.ui.yesco.mvc.model.type.Decimal' }" width="100%" textAlign="Center" wrapping="false" />
                    </table:template>
                </table:Column>
                <table:Column width="14%">
                    <Label text="{i18n>LABEL_00163}"/>
                    <table:template>
                        <ObjectStatus text="{Notes}" state="{= ${Erryn} === 'X' ? 'Error' : 'None' }" class="table-object-status align-start" />
                    </table:template>
                </table:Column>
            </table:columns>
        </table:Table>
    </HBox>
</core:FragmentDefinition>