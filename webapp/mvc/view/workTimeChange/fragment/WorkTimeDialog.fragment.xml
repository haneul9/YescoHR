<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <Dialog id="detailDialog" title="{i18n>LABEL_27001}" contentWidth="1100px" contentHeight="auto">
    <buttons>
      <Button text="{i18n>LABEL_00103}" type="Emphasized" press=".onDialogSavBtn" />
      <Button text="{i18n>LABEL_00115}" press=".onDialogClose" />
    </buttons>
    <content>
      <VBox class="vCardBox">
        <grid:CSSGrid gridTemplateColumns="1fr 2fr 1fr 2fr" gridGap="1px 0" class="form-grid">
          <Label text="{i18n>LABEL_27004}"/>
          <HBox>
            <custom:DatePicker dateValue="{ path: '/dialog/Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" change=".onWorkDatePicker" class="sapIcon_Date required" />
          </HBox>
          <Label text="{i18n>LABEL_27013}"/>
          <HBox>
            <TimePicker width="120px" value="{/dialog/BeguzB}" editable="false" placeholder="HH:mm" valueFormat="HH:mm" displayFormat="HH:mm" class="sapIcon_Time required" />
            <Text text="~" class="mx-5-px" />
            <TimePicker width="120px" value="{/dialog/EnduzB}" editable="false" placeholder="HH:mm" valueFormat="HH:mm" displayFormat="HH:mm" class="sapIcon_Time required" />
            <Input value="{/dialog/AbrstB}" editable="false" class="ml-10-px" />
          </HBox>
          <Label text="{i18n>LABEL_25008}"/>
          <HBox>
            <ComboBox items="{/dialog/appTypeList}" selectedKey="{/dialog/Ottyp}" change=".onCause" class="required" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }">
              <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
          </HBox>
          <Label text="{i18n>LABEL_27014}"/>
          <HBox>
            <TimePicker width="120px" value="{/dialog/Beguz}" change=".onTimePicker" placeholder="HH:mm" valueFormat="HH:mm" displayFormat="HH:mm" minutesStep="5" class="sapIcon_Time required" />
            <Text text="~" class="mx-5-px" />
            <TimePicker width="120px" value="{/dialog/Enduz}" change=".onTimePicker" placeholder="HH:mm" valueFormat="HH:mm" displayFormat="HH:mm" minutesStep="5" class="sapIcon_Time required" />
            <Input value="{/dialog/Abrst}" editable="false" class="ml-10-px" />
          </HBox>
          <Label text="{i18n>LABEL_00154}"/>
          <HBox>
            <layoutData>
              <FlexItemData growFactor="1"/>
            </layoutData>
            <Input value="{/dialog/Abrst}" class="ml-10-px" />
          </HBox>
        </grid:CSSGrid>
      </VBox>
    </content>
  </Dialog>
</core:FragmentDefinition>