<mvc:View controllerName="sap.ui.yesco.mvc.controller.workTimeChange.mobile.WorkTimeChange"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" class="sapUiSmallMarginBottom"/>
      <mobile:ScrollContainer>
        <mobile:List items="{path: '/List'}">
          <mobile:CustomListItem press=".onSelectRow">
            <mobile:ApprovalRequestListItemBox>
              <mobile:ListCSSGrid gridTemplateColumns="2fr 3fr">
                <Text text="{ path: 'Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" class="font-16-px font-bold" />
                <Text text="{ parts: [{path: 'Beguz'}, {path: 'Enduz'}, {path: 'Abrst'}], formatter: '.formatTime' }"/>
                <Text text="{Apptxt}"/>
                <Text text="{Chgrsn}"/>
              </mobile:ListCSSGrid>
            </mobile:ApprovalRequestListItemBox>
          </mobile:CustomListItem>
        </mobile:List>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <mobile:ApprovalRequestListFooterToolbar pressRequestNew=".onClick" />
    </mobile:footer>
  </mobile:Page>
</mvc:View>