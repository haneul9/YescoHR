<mvc:View controllerName="sap.ui.yesco.mvc.controller.documentSubmitMng.Detail"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control">
  <Page showHeader="false" busyIndicatorDelay="0" busy="{/contentsBusy/page}">
    <VBox class="contents-header">
      <HBox justifyContent="SpaceBetween" class="breadcrumbs">
        <custom:Breadcrumbs />
        <HBox class="button-group">
          <Button text="{i18n>LABEL_00103}" type="Emphasized" visible="{= ${/form/Status} !== '40' }" busyIndicatorDelay="0" busy="{/contentsBusy/button}" press=".onSave" />
          <Button text="{i18n>LABEL_00110}" type="Reject" visible="{= ${/mode} === 'M' &amp;&amp; ${/form/Status} !== '40' }" busyIndicatorDelay="0" busy="{/contentsBusy/button}" press=".onDelete" />
          <Button text="{i18n>LABEL_00146}" press=".onNavBack" />
          <Button icon="sap-icon://print" text="{i18n>LABEL_00131}" press=".onPagePrint" />
          <Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" press=".onPressHelp" visible="{= !!${menuModel>/current/showHelp} }" />
        </HBox>
      </HBox>
    </VBox>
    <VBox class="contents">
      <VBox class="vCardBox" busyIndicatorDelay="0" busy="{/contentsBusy/form}">
        <HBox alignItems="Center" class="table-toolbar">
          <custom:HeaderTitleCountMessage title="{i18n>LABEL_48012}" class="title" />
        </HBox>
        <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px 0" class="form-grid">
          <Label text="{i18n>LABEL_48006}"/>
          <VBox>
            <Input class="required" width="80%" value="{/form/Hrdocttl}" maxLength="40" />
          </VBox>
          <Label text="{i18n>LABEL_47001}"/>
          <VBox>
            <ComboBox class="required" width="80%" items="{/entry/Hrdoc}" selectedKey="{/form/Hrdoc}">
              <core:Item text="{Hrdoctx}" key="{Hrdoc}" />
            </ComboBox>
          </VBox>
          <Label text="{i18n>LABEL_48001}"/>
          <VBox>
            <custom:DateRangeSelection class="required sapIcon_Date" width="250px" dateValue="{ path: '/form/Begda', type: 'sap.ui.yesco.mvc.model.type.Date' }" secondDateValue="{ path: '/form/Endda', type: 'sap.ui.yesco.mvc.model.type.Date' }" />
          </VBox>
          <Label text="{i18n>LABEL_48013}"/>
          <VBox>
            <Input editable="false" value="{ path: '/form/Smempcnt', type: 'sap.ui.yesco.mvc.model.type.Currency' } / { path: '/form/Tgempcnt', type: 'sap.ui.yesco.mvc.model.type.Currency' }" />
          </VBox>
        </grid:CSSGrid>
      </VBox>
      <VBox class="vCardBox" width="100%" busyIndicatorDelay="0" busy="{/contentsBusy/table}">
        <HBox alignItems="Center" class="table-toolbar">
          <custom:HeaderTitleCountMessage title="{i18n>LABEL_48017}" class="title" />
          <HBox class="table-actions">
            <Button class="table-action-button" text="{i18n>LABEL_48018}" press=".onPressPDFDownload" visible="{= ${/mode} !== 'N' }" />
            <Button class="table-action-button" text="{i18n>LABEL_47005}" press=".onPressPreview" visible="{= ${/mode} !== 'N' }" />
            <Button icon="sap-icon://add" text="{i18n>LABEL_00107}" visible="{= ${/form/Status} !== '40' }" press=".onEmployeeSearchOpen" />
            <Button icon="sap-icon://less" text="{i18n>LABEL_00110}" visible="{= ${/form/Status} !== '40' }" press=".onPressDelRow" />
          </HBox>
        </HBox>
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.documentSubmitMng.fragment.EmployeeTable" type="XML" />
      </VBox>
    </VBox>
  </Page>
</mvc:View>