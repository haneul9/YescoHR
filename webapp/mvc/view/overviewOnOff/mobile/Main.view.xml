<mvc:View controllerName="sap.ui.yesco.mvc.controller.overviewOnOff.mobile.Main"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control">
  <Page enableScrolling="false" showNavButton="{menuModel>/current/hasPrevious}" title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <VBox class="contents">
      <VBox class="search-area mobile-mss-overview">
        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
          <DatePicker width="100%" displayFormat="yyyy" valueFormat="yyyy" value="{/searchConditions/Zyear}">
            <layoutData>
              <FlexItemData minWidth="67%" maxWidth="67%" />
            </layoutData>
          </DatePicker>
        </HBox>
        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
          <ComboBox items="{/entry/Werks}" selectedKey="{/searchConditions/Werks}" change=".onChangeWerks">
            <layoutData>
              <FlexItemData minWidth="67%" maxWidth="67%" />
            </layoutData>
            <core:Item text="{Pbtxt}" key="{Werks}" />
          </ComboBox>
        </HBox>
        <HBox justifyContent="SpaceBetween" alignItems="Center">
          <ComboBox items="{/entry/Orgeh}" selectedKey="{/searchConditions/Orgeh}">
            <layoutData>
              <FlexItemData minWidth="67%" maxWidth="67%" />
            </layoutData>
            <core:Item text="{Orgtx}" key="{Orgeh}" />
          </ComboBox>
          <Button class="sapUiTinyMarginBegin" text="{i18n>LABEL_00100}" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_search03.png" iconDensityAware="false" press=".onPressSearch">
            <layoutData>
              <FlexItemData minWidth="33%" maxWidth="33%" />
            </layoutData>
          </Button>
        </HBox>
      </VBox>
      <custom:MobileScrollContainer horizontal="false" vertical="true">
        <grid:CSSGrid gridGap="20px" gridTemplateRows="repeat(4, 280px)" gridTemplateColumns="1fr" class="sapUiSmallMarginTop">
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewOnOff.fragment.A01" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewOnOff.fragment.A02" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewOnOff.fragment.A04" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewOnOff.fragment.A05" type="XML" />
        </grid:CSSGrid>
        <!-- <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewOnOff.fragment.A03" type="XML" />
                <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewOnOff.fragment.A06" type="XML" /> -->
      </custom:MobileScrollContainer>
    </VBox>
  </Page>
</mvc:View>