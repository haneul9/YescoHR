<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="portlet portlet-box" visible="{/contents/A04/busy}">
    <custom:Placeholder />
  </VBox>
  <VBox class="portlet portlet-box" visible="{= !${/contents/A04/busy} }">
    <HBox class="portlet-header">
      <Title level="H2" text="{i18n>LABEL_28028}" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{/contents/A04/hasLink}" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_window.svg" iconDensityAware="false" type="Transparent" class="icon-button portlet-link-icon" />
    </HBox>
    <HBox class="portlet-body">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <VBox width="75%">
        <core:HTML content='&lt;div id="employeeOnOff-a04-chart-container"&gt;&lt;/div&gt;'>
          <core:layoutData>
            <FlexItemData growFactor="1" />
          </core:layoutData>
        </core:HTML>
      </VBox>
      <VBox width="25%">
        <custom:HBox class="active-link" click=".onPressCount">
          <custom:customData>
            <core:CustomData key="Headty" value="{/contents/A04/Headty}" />
            <core:CustomData key="Discod" value="all" />
          </custom:customData>
          <Label text="{/contents/A04/data/total}" class="font-42-px color-03 normal letter-spacing-sm"/>
        </custom:HBox>
        <VBox items="{ path: '/contents/A04/data/legends', templateShareable: false }" class="legend-wrap sapUiSmallMarginTop">
          <custom:HBox justifyContent="SpaceBetween" class="active-link" click=".onPressCount">
            <custom:customData>
              <core:CustomData key="Headty" value="{/contents/A04/Headty}" />
              <core:CustomData key="Discod" value="{code}" />
            </custom:customData>
            <Label text="{label} :" class="legend">
              <customData>
                <core:CustomData key="legend" value="{type}" writeToDom="true" />
              </customData>
            </Label>
            <Text text=" {count}" />
          </custom:HBox>
        </VBox>
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>