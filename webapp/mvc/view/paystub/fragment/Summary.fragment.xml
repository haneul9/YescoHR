<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox summary-box">
    <HBox justifyContent="SpaceBetween" class="title">
      <Title level="H2" text="{i18n>LABEL_13001}" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="2fr 1fr 1fr" gridGap="0px" class="pay-summary">
      <FlexBox width="100%" height="100%">
        <layoutData>
          <grid:GridItemLayoutData gridRow="1 / 5" />
        </layoutData>
        <core:HTML content="&lt;div id='chart-container'&gt;&lt;/div&gt;" />
      </FlexBox>
      <Label text="{i18n>LABEL_13002}" />
      <Text text="{ path: '/summary/Bet01', type: 'sap.ui.yesco.mvc.model.type.Currency' }" />
      <Label text="{i18n>LABEL_13003}" />
      <Text text="{ path: '/summary/Bet02', type: 'sap.ui.yesco.mvc.model.type.Currency' }" />
      <Label text="{i18n>LABEL_13004}" />
      <Text text="{ path: '/summary/Bet03', type: 'sap.ui.yesco.mvc.model.type.Currency' }" />
      <Label text="{i18n>LABEL_13005}" />
      <Text text="{ path: '/summary/Bet04', type: 'sap.ui.yesco.mvc.model.type.Currency' }" />
    </grid:CSSGrid>
  </VBox>
</core:FragmentDefinition>