<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox search-condition-box" busyIndicatorDelay="0" busy="{/busy}">
        <HBox justifyContent="SpaceBetween">
            <Title text="{i18n>LABEL_00202}" level="H2" />
            <Button type="Transparent" class="icon-button search" press=".onPressSearch" />
        </HBox>
        <grid:CSSGrid gridTemplateColumns="1fr 3fr" gridGap="8px">
            <Label text="{i18n>LABEL_00266}" design="Bold" />
            <DatePicker value="{/search/year}" displayFormat="yyyy" valueFormat="yyyy" />
        </grid:CSSGrid>
    </VBox>
</core:FragmentDefinition>