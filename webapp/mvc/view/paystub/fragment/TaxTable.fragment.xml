<core:FragmentDefinition xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core">
    <Table id="taxTable" selectionMode="None" width="100%" columnHeaderHeight="45" rowHeight="45" rows="{/pay/list}" visibleRowCount="{/pay/rowCount}" busyIndicatorDelay="0" busy="{/busy}" noData="{i18n>MSG_00001}">
        <columns>
            <Column filterProperty="Idx" sortProperty="Idx">
                <m:Label text="No."/>
                <template>
                    <m:Text text="{Idx}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text" />
                </template>
            </Column>
            <Column width="25%" filterProperty="Paydt" sortProperty="Paydt">
                <m:Label text="{i18n>LABEL_13006}"/>
                <template>
                    <m:Text text="{ path: 'Paydt', type: 'sap.ui.yesco.mvc.model.type.Date' }" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text" />
                </template>
            </Column>
            <Column width="25%" filterProperty="Ocrtx" sortProperty="Ocrtx">
                <m:Label text="{i18n>LABEL_00147}"/>
                <template>
                    <m:Text text="{Ocrtx}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text" />
                </template>
            </Column>
            <Column width="25%" filterProperty="Bet01" sortProperty="Bet01">
                <m:Label text="{i18n>LABEL_13007}"/>
                <template>
                    <m:Text text="{ path: 'Bet01', type: 'sap.ui.yesco.mvc.model.type.Currency' }" width="100%" textAlign="End" wrapping="false" class="tableRow_Text" />
                </template>
            </Column>
        </columns>
    </Table>
</core:FragmentDefinition>