<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:custom="sap.ui.yesco.control">
    <Dialog title="{i18n>LABEL_20005} {/plan/Plnyy}({/plan/Seqno})" contentWidth="1500px" contentHeight="550px" busyIndicatorDelay="0" busy="{/plan/busy}">
        <endButton>
            <Button text="{i18n>LABEL_00115}" press=".onPressClosePlanDialog" />
        </endButton>
        <content>
            <VBox>
                <HBox class="table-toolbar" justifyContent="SpaceBetween">
                    <HBox />
                    <HBox class="status-wrap year-plan">
                        <Text text="{i18n>LABEL_20006}" class="type02" />
                        <Text text="{i18n>LABEL_20007}" class="type07" />
                        <Text text="{i18n>LABEL_20008}" class="type05" />
                    </HBox>
                </HBox>
                <grid:CSSGrid class="year-plan-grid" gridTemplateColumns="70px 70px repeat(31, 1fr)" gridGap="1px" items="{path: '/plans/grid'}">
                    <custom:DayBox width="100%" click=".onClickDay">
                        <custom:customData>
                            <core:CustomData key="day" value="{day}" />
                            <core:CustomData key="style" value="{classNames}" writeToDom="true" />
                            <core:CustomData key="awart" value="{awart}" writeToDom="true" />
                        </custom:customData>
                        <Text width="100%" textAlign="Center" text="{label}">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                            <customData>
                                <core:CustomData key="day" value="{day}" />
                            </customData>
                        </Text>
                    </custom:DayBox>
                </grid:CSSGrid>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>