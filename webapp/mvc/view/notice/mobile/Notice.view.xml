<mvc:View controllerName="sap.ui.yesco.mvc.controller.notice.mobile.Notice"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" class="sapUiSmallMarginBottom"/>
      <mobile:ScrollContainer>
        <mobile:List items="{path: '/NoticeList'}">
          <mobile:CustomListItem press=".onSelectRow">
            <mobile:ApprovalRequestListItemBox>
              <mobile:ListCSSGrid gridTemplateColumns="1fr">
                <Text text="{Title}" class="font-16-px font-bold" />
                <Text text="{ path: 'Sdate', type: 'sap.ui.yesco.mvc.model.type.Date' }"/>
              </mobile:ListCSSGrid>
            </mobile:ApprovalRequestListItemBox>
          </mobile:CustomListItem>
        </mobile:List>
      </mobile:ScrollContainer>
    </VBox>
  </mobile:Page>
</mvc:View>