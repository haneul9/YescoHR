<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <VBox class="vCardBox sapUiMediumMarginBottom" busyIndicatorDelay="0" busy="{/busy}">
        <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="1px" class="form-grid">
            <Label text="{i18n>LABEL_08002}" />
            <VBox>
                <Input value="{/FormData/Title}" editable="{= ${/Hass} &amp;&amp; ${/MySelf} }" />
            </VBox>
            <Label text="{i18n>LABEL_08007}" />
            <VBox>
                <CheckBox selected="{= !!${/FormData/Impor} }" select=".onSelected" editable="{= ${/Hass} &amp;&amp; ${/MySelf} }"/>
            </VBox>
            <Label text="{i18n>LABEL_08004}"/>
            <VBox>
                <Text text="{/FormData/ApernTxt}"/>
            </VBox>
            <Label text="{i18n>LABEL_08006}"/>
            <HBox>
                <CheckBox selected="{= !!${/FormData/Hide} }" editable="false"/>
            </HBox>
            <Label text="{i18n>LABEL_00321}"/>
            <HBox>
                <Text text="{= !${/FormData/Sdate} ? '' : 
                        ${
                        path: '/FormData/Sdate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                            pattern: 'yyyy.MM.dd'
                        }
                    } 
                }"/>
            </HBox>
            <Label text="{i18n>LABEL_08003}"/>
            <VBox>
                <Text text="{= !${/FormData/Chntm} ? '' : ${/FormData/Chntm}}"/>
            </VBox>
            <Label text="{i18n>LABEL_08008}"/>
            <VBox id="EditorBox">
                <layoutData>
                    <grid:GridItemLayoutData gridColumn="2 / 5"/>
                </layoutData>
            </VBox>
        </grid:CSSGrid>
    </VBox>
</core:FragmentDefinition>