      <Label text="{i18n>LABEL_08005}" design="Bold" />
      <Input value="{/search/title}" />
      <Button icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_search03.png" iconDensityAware="false" text="{i18n>LABEL_00101}" press=".onSearch" class="icon-button" />
