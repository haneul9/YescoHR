<mvc:View controllerName="sap.ui.yesco.mvc.controller.notice.NoticeDetail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="sap.ui.yesco.control">
	<Page showHeader="false">
		<content>
			<VBox class="contents-header">
				<HBox justifyContent="SpaceBetween" class="breadcrumbs">
					<custom:Breadcrumbs />
					<HBox>
						<Button text="{i18n>LABEL_00120}" type="Emphasized" press=".onRewriteBtn" visible="{= ${/FormData/ZappStatAl} === '45' }" />
						<Button text="{i18n>LABEL_00104}" type="Emphasized" press=".onSaveBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onApplyBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
						<Button text="{i18n>LABEL_00118}" press=".onCancelBtn" visible="{= ${/FormData/ZappStatAl} === '20' }" />
						<Button text="{i18n>LABEL_00110}" type="Reject" press=".onDeleteBtn" visible="{= ${/FormData/ZappStatAl} === '10' || ${/FormData/ZappStatAl} === '45' }" />
						<Button text="{i18n>LABEL_00146}" press=".onNavBack" class="sapUiTinyMarginEnd" />
						<Button icon="sap-icon://print" press=".FragmentEvent.onPagePrint" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" />
						<Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" />
					</HBox>
				</HBox>
			</VBox>
			<VBox class="contents">
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.notice.fragment.DetailForm" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
			</VBox>
		</content>
	</Page>
</mvc:View>