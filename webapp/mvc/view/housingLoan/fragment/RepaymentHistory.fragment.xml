<core:FragmentDefinition xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <VBox class="vCardBox" visible="{= ${/FormData/Lnsta} === '45' || ${/FormData/Lnsta} === '60' }">
        <table:Table id="repayHisTable" rows="{/RepayHisList}" visibleRowCount="{/RepayHisLength}" width="100%" busyIndicatorDelay="0" busy="{/hisBusy}" selectionMode="None" columnHeaderHeight="50px" rowHeight="50px" noData="{i18n>MSG_00001}">
            <table:columns>
                <table:Column width="50px" sortProperty="Number" filterProperty="Number">
                    <Label text="{i18n>LABEL_00164}"/>
                    <table:template>
                        <Text text="{Number}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text"/>
                    </table:template>
                </table:Column>
                <table:Column width="auto" sortProperty="Datum" filterProperty="Datum">
                    <Label text="{i18n>LABEL_07028}"/>
                    <table:template>
                        <Text text="{
                            path: 'Datum',
                            type: 'sap.ui.model.type.Date'
                        }" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
                    </table:template>
                </table:Column>
                <table:Column width="auto" sortProperty="PniT" filterProperty="PniT">
                    <Label text="{i18n>LABEL_07029}"/>
                    <table:template>
                        <Text text="{
                            path: 'PniT',
                            formatter: '.TextUtils.toCurrency'
                        }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                    </table:template>
                </table:Column>
                <table:Column width="auto" sortProperty="IntT" filterProperty="IntT">
                    <Label text="{i18n>LABEL_07030}"/>
                    <table:template>
                        <Text text="{
                            path: 'IntT',
                            formatter: '.TextUtils.toCurrency'
                        }" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                    </table:template>
                </table:Column>
                <table:Column width="auto" sortProperty="Pyway" filterProperty="Pyway">
                    <Label text="{i18n>LABEL_07031}"/>
                    <table:template>
                        <Text text="{Pyway}" textAlign="Center" width="100%" wrapping="false" class="tableRow_Text"/>
                    </table:template>
                </table:Column>
            </table:columns>
        </table:Table>
    </VBox>
</core:FragmentDefinition>