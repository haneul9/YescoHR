<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <VBox class="vCardBox sapUiMediumMarginBottom" busyIndicatorDelay="0" busy="{/busy}">
        <Title level="H2" text="{i18n>LABEL_00129}" />
        <grid:CSSGrid gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
            <Label text="{i18n>LABEL_07002}" />
            <ComboBox items="{/LaonType}" selectedKey="{/FormData/Lntyp}" change=".onLaonType" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }">
                <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
            <Label text="{i18n>LABEL_00261}" />
            <Text text="{/FormData/Lnstatx}"/>
            <Label text="{i18n>LABEL_07019}"/>
            <ComboBox items="{/AssuranceType}" selectedKey="{/FormData/Asmtd}" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }">
                <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
            <Label text="{i18n>LABEL_07020}"/>
            <ComboBox items="{/HouseType}" selectedKey="{/FormData/Htype}" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }">
                <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
            <Label text="{i18n>LABEL_07021}"/>
            <HBox>
                <Input value="{/FormData/Zsize}" liveChange=".areaSize" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" />
                <Text text="{/baseArea/Text}"/>
            </HBox>
            <Label text="{i18n>LABEL_00152}"/>
            <Input value="{/FormData/Addre}" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" />
            <Label text="{i18n>LABEL_07022}"/>
            <HBox>
                <Input value="{
                    path: '/FormData/Lnamt',
                    formatter: '.TextUtils.toCurrency'
                }" liveChange=".loanCost" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" />
                <Text text="{/loanAmount/Text}"/>
            </HBox>
            <Label text="{i18n>LABEL_00266}" visible="{= !!${/FormData/Lnsta} }"/>
            <HBox >
                <Text text="{
                    path: '/FormData/Appda',
                    type: 'sap.ui.model.type.Date'
                }" visible="{= !!${/FormData/Lnsta} }"/>
            </HBox>
            <HBox visible="{= !${/FormData/Lnsta} }"></HBox>
            <Label text="{i18n>LABEL_07023}"/>
            <Text text="{/FormData/Hdprd}"/>
            <Label text="{i18n>LABEL_02012}" visible="{= !!${/FormData/Lnsta} }"/>
            <Text text="{
                path: '/FormData/Begda',
                type: 'sap.ui.model.type.Date'
            }" visible="{= !!${/FormData/Lnsta} }"/>
            <Label text="{i18n>LABEL_07024}"/>
            <Text text="{
                path: '/FormData/RpamtMon',
                formatter: '.TextUtils.toCurrency'
            }"/>
            <Label text="{i18n>LABEL_07004}" visible="{= !!${/FormData/Lnsta} }"/>
            <Text text="{
                path: '/FormData/Endda',
                type: 'sap.ui.model.type.Date'
            }" visible="{= !!${/FormData/Lnsta} }"/>
            <Label text="{i18n>LABEL_07025}"/>
            <Text text="{/FormData/Lnprd}"/>
            <Label text="{i18n>LABEL_07026}"/>
            <Text text="{/FormData/Lnrte}"/>
            <Label text="{i18n>LABEL_00163}"/>
            <Input value="{/FormData/Zbigo}" editable="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" />
            <HBox ></HBox>
            <Label text="{i18n>LABEL_00142}" visible="{= ${/FormData/Lnsta} === '45' }" />
            <Text text="{/FormData/Zbigo}" visible="{= ${/FormData/Lnsta} === '45' }" />
        </grid:CSSGrid>
    </VBox>
</core:FragmentDefinition>