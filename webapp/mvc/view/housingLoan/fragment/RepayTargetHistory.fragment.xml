<c:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:c="sap.ui.core">
    <VBox class="vCardBox">
        <HBox class="header-wrap">
            <Title level="H3" text="{i18n>LABEL_07035}" class="sapUiSmallMarginEnd" />
        </HBox>
        <grid:CSSGrid gridTemplateColumns="3fr 7fr" gridGap="8px">
            <grid:layoutData>
                <FlexItemData growFactor="1"/>
            </grid:layoutData>
            <VBox>
                <Label text="{i18n>LABEL_07002}"/>
                <Text text="{Lntyptx}" width="100%" textAlign="Center" wrapping="false"/>
            </VBox>
            <VBox>
                <Label text="{i18n>LABEL_02012}"/>
                <Text text="{
                    path: 'Begda',
                    type: 'sap.ui.model.type.Date'
                }" width="100%" textAlign="Center" wrapping="false"/>
            </VBox>
            <VBox>
                <Label text="{i18n>LABEL_07037}"/>
                <Text text="{
                    path: 'Dat01',
                    type: 'sap.ui.model.type.Date'
                }" width="100%" textAlign="Center" wrapping="false"/>
            </VBox>
            <VBox>
                <Label text="{i18n>LABEL_07038}"/>
                <Text text="{
                    path: 'RpamtBal',
                    formatter: '.TextUtils.toCurrency'
                }" width="100%" textAlign="Center" wrapping="false"/>
            </VBox>
            <VBox>
                <Label text="{i18n>LABEL_07039}"/>
                <Text text="{Lnrte}" width="100%" textAlign="Center" wrapping="false"/>
            </VBox>
        </grid:CSSGrid>
    </VBox>
</c:FragmentDefinition>