            <Text text="{RpamtMin}" textAlign="Center" wrapping="false" width="100%" />
          </table:template>
        </table:Column>
        <table:Column width="auto" sortProperty="RpamtBal" filterProperty="RpamtBal">
          <Label text="{i18n>LABEL_07015}"/>
          <table:template>
            <Text text="{
                path: 'RpamtBal',
                type: 'sap.ui.yesco.mvc.model.type.Currency'
