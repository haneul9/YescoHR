<mvc:View controllerName="sap.ui.yesco.mvc.controller.housingLoan.HousingLoan"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page showHeader="false">
		<content>
			<VBox>
				<HBox justifyContent="SpaceBetween">
					<Breadcrumbs currentLocationText="{i18n>LABEL_07017}" separatorStyle="GreaterThan">
						<Link text="{i18n>LABEL_00145}"/>
					</Breadcrumbs>
					<HBox>
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onClick" />
						<Button icon="sap-icon://print" press=".FragmentEvent.onPagePrint" type="Transparent" text="{i18n>LABEL_00131}" />
						<Button icon="sap-icon://sys-help" type="Transparent" text="{i18n>LABEL_00132}" />
					</HBox>
				</HBox>
				<HBox justifyContent="SpaceAround">
					<core:Fragment fragmentName="sap.ui.yesco.fragment.TargetInfo" type="XML" />
					<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.MyLoan" type="XML" />
					<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.SearchCondition" type="XML" />
				</HBox>
				<VBox class="vCardBox">
					<core:Fragment fragmentName="sap.ui.yesco.fragment.OverviewTableHeader" type="XML" />
					<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.ApplyListTable" type="XML" />
				</VBox>
			</VBox>
		</content>
	</Page>
</mvc:View>