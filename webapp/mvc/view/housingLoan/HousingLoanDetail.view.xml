<mvc:View controllerName="sap.ui.yesco.mvc.controller.housingLoan.HousingLoanDetail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="sap.ui.yesco.control">
	<Page showHeader="false">
		<content>
			<VBox class="contents-header">
				<HBox justifyContent="SpaceBetween" class="breadcrumbs">
					<custom:Breadcrumbs />
					<HBox>
						<Button text="{i18n>LABEL_00120}" type="Emphasized" press=".onRewriteBtn" visible="{= ${/FormData/Lnsta} === '45' }" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_00104}" type="Emphasized" press=".onSaveBtn" visible="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onApplyBtn" visible="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_00118}" press=".onCancelBtn" visible="{= ${/FormData/Lnsta} === '20' }" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_00110}" type="Reject" press=".onDeleteBtn" visible="{= ${/FormData/Lnsta} === '10' || ${/FormData/Lnsta} === '45' }" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_00146}" press=".onNavBack" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_07018}" press=".onAppPDF" visible="{= ${/FormData/Lnsta} === '10' || ${/FormData/Lnsta} === '20' || ${/FormData/Lnsta} === '30' }" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_00131}" icon="sap-icon://print" press=".FragmentEvent.onPagePrint" class="sapUiTinyMarginEnd" />
						<Button text="{i18n>LABEL_00132}" icon="sap-icon://sys-help" />
					</HBox>
				</HBox>
			</VBox>
			<VBox class="contents">
				<core:Fragment fragmentName="sap.ui.yesco.fragment.AppointeeBar" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.InfoMessage" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.DetailForm" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.RepaymentList" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.RepaymentHistory" type="XML" />
			</VBox>
		</content>
	</Page>
</mvc:View>