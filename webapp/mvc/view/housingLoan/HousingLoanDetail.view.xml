<mvc:View controllerName="sap.ui.yesco.mvc.controller.housingLoan.HousingLoanDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page showHeader="false">
		<content>
			<VBox>
				<HBox justifyContent="SpaceBetween">
					<HBox>
						<Breadcrumbs currentLocationText="{i18n>LABEL_00134}" separatorStyle="GreaterThan">
							<Link text="{i18n>LABEL_00145}"/>
							<Link text="{i18n>LABEL_07017}"/>
						</Breadcrumbs>
					</HBox>
					<HBox>
						<Button text="{i18n>LABEL_00120}" type="Emphasized" press=".onRewriteBtn" visible="{= ${/FormData/Lnsta} === '45' }" />
						<Button text="{i18n>LABEL_00104}" type="Emphasized" press=".onSaveBtn" visible="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" />
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onApplyBtn" visible="{= ${/FormData/Lnsta} === '10' || !${/FormData/Lnsta} }" />
						<Button text="{i18n>LABEL_00118}" press=".onCancelBtn" visible="{= ${/FormData/Lnsta} === '20' }" />
						<Button text="{i18n>LABEL_00110}" type="Reject" press=".onDeleteBtn" visible="{= ${/FormData/Lnsta} === '10' || ${/FormData/Lnsta} === '45' }" />
						<Button text="{i18n>LABEL_00146}" press=".onNavBack" />
						<Button text="{i18n>LABEL_07018}" type="Transparent" press=".onAppPDF" visible="{= ${/FormData/Lnsta} === '10' || ${/FormData/Lnsta} === '20' || ${/FormData/Lnsta} === '30' }" />
						<Button text="{i18n>LABEL_00131}" icon="sap-icon://print" press=".FragmentEvent.onPagePrint" type="Transparent" />
						<Button text="{i18n>LABEL_00132}" icon="sap-icon://sys-help" type="Transparent" />
					</HBox>
				</HBox>
				<core:Fragment fragmentName="sap.ui.yesco.fragment.DetailTargetInfo" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.InfoMessage" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.DetailForm" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.RepaymentList" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.housingLoan.fragment.RepaymentHistory" type="XML" />
			</VBox>
		</content>
	</Page>
</mvc:View>