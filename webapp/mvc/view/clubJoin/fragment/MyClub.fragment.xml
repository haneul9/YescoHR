<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox summary-box" busyIndicatorDelay="0" busy="{/busy}">
        <VBox>
            <HBox justifyContent="SpaceBetween" class="title">
                <Title level="H2" text="{i18n>LABEL_14002}" />
            </HBox>
            <Text text="{
                path: '/Total/Zyear',
                formatter: '.thisYear'
            }" class="sapUiSmallMarginBottom" />
            <HBox>
                <VBox width="30%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_14003}" />
                    <ObjectStatus text="{
                        path: '/Total/Ccnt',
                        formatter: '.formatNumber'
                    }" state="Indication04" />
                </VBox>
                <VBox width="30%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_14004}" />
                    <ObjectStatus text="{
                        path: '/Total/Bet01',
                        formatter: '.formatPay'
                    }" state="Indication04" />
                </VBox>
                <VBox class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_14005}" />
                    <ObjectStatus text="{
                        path: '/Total/Bet02',
                        formatter: '.formatPay'
                    }" state="Indication04" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>