<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox overview-box clubJoin-overview" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <HBox justifyContent="SpaceBetween" class="title">
        <Title level="H2" text="{i18n>LABEL_14002}" />
      </HBox>
      <Text text="{ path: '/Total/Zyear', formatter: '.thisYear' }" class="sapUiSmallMarginBottom" />
      <HBox class="mt-50-px clubJoin-overview-content">
        <VBox width="20%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_14003}" />
          <ObjectStatus text="{ path: '/Total/Ccnt', formatter: '.formatNumber' }" state="Indication05" />
        </VBox>
        <VBox width="40%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_14004}" />
          <HBox alignItems="Baseline">
            <ObjectStatus text="{ path: '/Total/Bet01', formatter: '.formatPay' }" state="Indication04" class="mr-5-px" />
            <Label design="Bold" text="{i18n>LABEL_00158}" />
          </HBox>
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_14005}" />
          <HBox alignItems="Baseline">
            <ObjectStatus text="{ path: '/Total/Bet02', formatter: '.formatPay' }" state="Indication05" class="mr-5-px" />
            <Label design="Bold" text="{i18n>LABEL_00158}" />
          </HBox>
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>