<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid">
	<VBox>
		<Panel expandable="true" expanded="{expanded}" class="per-panel">
			<headerToolbar>
				<Toolbar height="45px" width="100%">
					<grid:CSSGrid gridTemplateColumns="50px 675px 150px repeat(4, 1fr)" gridGap="0px 11px">
						<Label text="{ItemNo}" textAlign="Left" />
						<VBox>
							<Input value="{Obj0}" class="goal-subject" placeholder="{i18n>LABEL_36007}" maxLength="{/fieldControl/limit/Obj0}" enabled="{= ${/fieldControl/display/Obj0} === 'X' }" visible="{= ${/fieldControl/display/Obj0} !== 'H' }" />
						</VBox>
						<HBox>
							<Button icon="sap-icon://sys-minus" text="{i18n>LABEL_36010}" visible="{/buttons/goal/DELETE/Availability}" press=".onPressDeleteGoal">
								<customData>
									<core:CustomData key="sDeleteTargetNum" value="{OrderNo}" />
								</customData>
							</Button>
						</HBox>
						<Label text="{i18n>LABEL_36011}" visible="{= ${/fieldControl/display/Z200} !== 'H' }" />
						<HBox visible="{= ${/fieldControl/display/Z200} !== 'H' }">
							<ComboBox width="100%" selectedKey="" enabled="false" items="{ path: '/entry/levels', templateShareable: true }" visible="{= ${/fieldControl/display/Z200} === 'V' }">
								<core:Item key="{ValueEid}" text="{ValueText}" />
							</ComboBox>
							<ComboBox width="100%" class="required" selectedKey="{Z200}" items="{ path: '/entry/levels', templateShareable: true }" enabled="{= ${/fieldControl/display/Z200} === 'X' }" visible="{= ${/fieldControl/display/Z200} !== 'V' }">
								<customData>
									<core:CustomData key="sRoot" value="{= ${Zvbgubun}  === '1' ? 'common' : 'duty' }" />
									<core:CustomData key="sProp" value="Z200" />
									<core:CustomData key="sTarget" value="{= ${Zvbgubun}  === '1' ? 'D1z200' : 'D2z200' }" />
									<core:CustomData key="sTotTarget" value="HZ200" />
								</customData>
								<core:Item key="{ValueEid}" text="{ValueText}" />
							</ComboBox>
						</HBox>
						<Label text="{i18n>LABEL_36012}" visible="{= ${/fieldControl/display/Fapp} !== 'H' }" />
						<HBox visible="{= ${/fieldControl/display/Fapp} !== 'H' }">
							<ComboBox width="100%" selectedKey="" enabled="false" items="{ path: '/entry/levels', templateShareable: true }" visible="{= ${/fieldControl/display/Fapp} === 'V' }">
								<core:Item key="{ValueEid}" text="{ValueText}" />
							</ComboBox>
							<ComboBox width="100%" class="required" selectedKey="{Fapp}" items="{ path: '/entry/levels', templateShareable: true }" enabled="{= ${/fieldControl/display/Fapp} === 'X' }" visible="{= ${/fieldControl/display/Fapp} !== 'V' }">
								<customData>
									<core:CustomData key="sRoot" value="{= ${Zvbgubun}  === '1' ? 'common' : 'duty' }" />
									<core:CustomData key="sProp" value="Fapp" />
									<core:CustomData key="sTarget" value="{= ${Zvbgubun}  === '1' ? 'D1fapp' : 'D2fapp' }" />
									<core:CustomData key="sTotTarget" value="HFapp" />
								</customData>
								<core:Item key="{ValueEid}" text="{ValueText}" />
							</ComboBox>
						</HBox>
					</grid:CSSGrid>
				</Toolbar>
			</headerToolbar>
			<content>
				<grid:CSSGrid gridGap="1px 0" class="form-grid" gridTemplateColumns="repeat(2, 1fr 3fr)">
					<VBox>
						<Label width="100%" text="{i18n>LABEL_36013}" vAlign="Top" visible="{= ${/fieldControl/display/Z200r} !== 'H' }"/>
					</VBox>
					<VBox>
						<TextArea width="100%" rows="5" value="" enabled="false" visible="{= ${/fieldControl/display/Z200r} === 'V' }" />
						<TextArea width="100%" class="required" rows="5" value="{/summary/Z200r}" maxLength="{/fieldControl/limit/Z200r}" enabled="{= ${/fieldControl/display/Z200r} === 'X' }" visible="{= ${/fieldControl/display/Z200r} !== 'H' &amp;&amp; ${/fieldControl/display/Z200r} !== 'V' }" />
					</VBox>
					<VBox>
						<Label width="100%" text="{i18n>LABEL_36014}" wrapping="true" vAlign="Top" visible="{= ${/fieldControl/display/Fappr} !== 'H' }"/>
					</VBox>
					<VBox>
						<TextArea width="100%" rows="5" value="" enabled="false" visible="{= ${/fieldControl/display/Fappr} === 'V' }" />
						<TextArea width="100%" class="required" rows="5" value="{/summary/Fappr}" maxLength="{/fieldControl/limit/Fappr}" enabled="{= ${/fieldControl/display/Fappr} === 'X' }" visible="{= ${/fieldControl/display/Fappr} !== 'H' &amp;&amp; ${/fieldControl/display/Fappr} !== 'V' }" />
					</VBox>
					<VBox>
						<Label width="100%" text="{i18n>LABEL_36015}" vAlign="Top" visible="{= ${/fieldControl/display/Z200r} !== 'H' }"/>
					</VBox>
					<VBox>
						<TextArea width="100%" rows="5" value="" enabled="false" visible="{= ${/fieldControl/display/Z200r} === 'V' }" />
						<TextArea width="100%" class="required" rows="5" value="{/summary/Z200r}" maxLength="{/fieldControl/limit/Z200r}" enabled="{= ${/fieldControl/display/Z200r} === 'X' }" visible="{= ${/fieldControl/display/Z200r} !== 'H' &amp;&amp; ${/fieldControl/display/Z200r} !== 'V' }" />
					</VBox>
					<VBox>
						<Label width="100%" text="{i18n>LABEL_36016}" wrapping="true" vAlign="Top" visible="{= ${/fieldControl/display/Fappr} !== 'H' }"/>
					</VBox>
					<VBox>
						<TextArea width="100%" rows="5" value="" enabled="false" visible="{= ${/fieldControl/display/Fappr} === 'V' }" />
						<TextArea width="100%" class="required" rows="5" value="{/summary/Fappr}" maxLength="{/fieldControl/limit/Fappr}" enabled="{= ${/fieldControl/display/Fappr} === 'X' }" visible="{= ${/fieldControl/display/Fappr} !== 'H' &amp;&amp; ${/fieldControl/display/Fappr} !== 'V' }" />
					</VBox>
				</grid:CSSGrid>
			</content>
		</Panel>
	</VBox>
</core:FragmentDefinition>