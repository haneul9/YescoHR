<mvc:View controllerName="sap.ui.yesco.mvc.controller.overviewAttendance.mobile.Main"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control">
  <Page enableScrolling="false" showNavButton="{menuModel>/current/hasPrevious}" title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <VBox class="contents">
      <HBox alignItems="End" class="search-area row-3">
        <VBox width="67%">
          <layoutData>
            <FlexItemData maxWidth="67%" />
          </layoutData>
          <custom:DatePicker width="100%" dateValue="{ path: '/searchConditions/Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" />
          <ComboBox width="100%" items="{/entry/Werks}" selectedKey="{/searchConditions/Werks}" change=".onChangeWerks" class="sapUiTinyMarginTop">
            <core:Item text="{Pbtxt}" key="{Werks}" />
          </ComboBox>
          <ComboBox width="100%" items="{/entry/Orgeh}" selectedKey="{/searchConditions/Orgeh}" class="sapUiTinyMarginTop">
            <core:Item text="{Orgtx}" key="{Orgeh}" />
          </ComboBox>
        </VBox>
        <VBox width="33%" justifyContent="End" class="pl-8-px">
          <layoutData>
            <FlexItemData growFactor="1" maxWidth="33%" />
          </layoutData>
          <Button text="{i18n>LABEL_00100}" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_search03.png" iconDensityAware="false" press=".onPressSearch" width="100%" class="sapUiTinyMarginBegin" />
        </VBox>
      </HBox>
      <custom:MobileScrollContainer horizontal="false" vertical="true" class="sapUiNativeScrollbars px-12-px">
        <grid:CSSGrid gridGap="20px" gridTemplateRows="repeat(8, 280px)" gridTemplateColumns="1fr" class="overviews mt-20-px mb-11-px">
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A01" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A02" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A03" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A04" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A05" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A06" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A08" type="XML" />
          <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A09" type="XML" />
        </grid:CSSGrid>
        <!-- <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A07" type="XML" />
                <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewAttendance.fragment.A10" type="XML" /> -->
      </custom:MobileScrollContainer>
    </VBox>
  </Page>
</mvc:View>