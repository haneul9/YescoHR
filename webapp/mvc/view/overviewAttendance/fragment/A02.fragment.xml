        <custom:Placeholder />
    </VBox>
    <VBox class="portlet portlet-box" visible="{= !${/contents/A02/busy} }">
        <HBox class="portlet-header">
            <Title level="H2" text="{i18n>LABEL_28041}" />
            <Text class="desc-txt" text="3/7~3/13" />
            <Text text="">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Text>
        </HBox>
        <HBox class="portlet-body">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
            <VBox width="30%" height="100%">
                <Label text="{/contents/A02/data/Cnt01}" class="font-30-px color-03 pt-8-px normal ls-small"/>
            </VBox>
            <VBox width="70%">
                <core:HTML content='&lt;div id="attendance-a02-chart-container"&gt;&lt;/div&gt;'>
                    <core:layoutData>
                        <FlexItemData growFactor="1" />
