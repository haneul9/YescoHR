<mvc:View controllerName="sap.ui.yesco.mvc.controller.nightduty.RequestDetail"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:custom="sap.ui.yesco.control" class="detail-view">
  <Page showHeader="false">
    <VBox class="contents-header">
      <HBox justifyContent="SpaceBetween" class="breadcrumbs">
        <custom:Breadcrumbs />
        <HBox>
          <Button text="{i18n>LABEL_00121}" class="sapUiTinyMarginEnd" type="Emphasized" visible="{/detail/editable}" enabled="{/detail/enabled}" press=".onPressRequestApproval" busy="{/busy}" busyIndicatorDelay="0" />
          <Button text="{i18n>LABEL_00146}" class="sapUiTinyMarginEnd" press=".onNavBack" />
          <Button text="{i18n>LABEL_00131}" icon="sap-icon://print" class="sapUiTinyMarginEnd" />
          <Button text="{i18n>LABEL_00132}" icon="sap-icon://sys-help" />
        </HBox>
      </HBox>
    </VBox>
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.AppointeeBar" type="XML" />
      <VBox class="vCardBox" id="nightduty-request-detail">
        <HBox justifyContent="SpaceBetween">
          <HBox alignItems="Center" class="title">
            <Title level="H2" text="{i18n>LABEL_00129}" />
          </HBox>
          <HBox class="table-top">
            <Button icon="sap-icon://add" text="{i18n>LABEL_00107}" press=".onPressAddRowButton" visible="{/detail/editable}" class="sapUiTinyMarginEnd" />
            <Button icon="sap-icon://less" text="{i18n>LABEL_00110}" press=".onPressRemoveRowButton" visible="{/detail/editable}" enabled="{/detail/enabled}" />
          </HBox>
        </HBox>
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.nightduty.fragment.DetailListTable" type="XML" />
      </VBox>
      <VBox class="vCardBox">
        <HBox alignItems="Center" class="title">
          <Title text="{i18n>LABEL_04013}" level="H2" />
        </HBox>
        <TextArea width="100%" class="required" value="{/detail/chgrsn}" editable="{/detail/editable}" />
      </VBox>
      <core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
      <core:Fragment fragmentName="sap.ui.yesco.fragment.ApplyInfo" type="XML" />
      <core:Fragment fragmentName="sap.ui.yesco.fragment.ApprovalDetails" type="XML" />
    </VBox>
  </Page>
</mvc:View>