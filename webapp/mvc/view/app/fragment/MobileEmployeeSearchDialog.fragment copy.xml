<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog contentWidth="100%" contentHeight="300px" showHeader="false" verticalScrolling="false" busy="{busy}" busyIndicatorDelay="0" class="half-dialog">
    <content>
      <HBox class="px-20-px">
        <SearchField id="emp-search-field" placeholder="{i18n>LABEL_00211}" width="100%" liveChange=".onLiveChange">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
        </SearchField>
      </HBox>
      <ScrollContainer horizontal="false" vertical="true" width="100%" height="calc(100% - 60px)" class="mt-20-px">
        <content>
          <List id="emp-search-list" items="{ path: 'employees', templateShareable: false }" rememberSelections="false" showSeparators="None" noDataText="{i18n>MSG_00001}" class="emp-search-list">
            <CustomListItem>
              <HBox alignItems="Center" height="30px">
                <Image src="{Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="24px" height="24px">
                  <layoutData>
                    <FlexItemData baseSize="30px" maxWidth="30px" />
                  </layoutData>
                </Image>
                <Text text="{Ename}" tooltip="{Ename} {Pernr} {Fulln} {Zzjikgbt}" wrapping="false" class="name">
                  <layoutData>
                    <FlexItemData baseSize="70px" maxWidth="70px" />
                  </layoutData>
                </Text>
                <Text text="{Zzjikgbt}/{Zzjikcht}" tooltip="{Ename} {Pernr} {Fulln} {Zzjikgbt}" wrapping="false">
                  <layoutData>
                    <FlexItemData baseSize="90px" maxWidth="90px" />
                  </layoutData>
                </Text>
                <Text text="{Fulln}" tooltip="{Ename} {Pernr} {Fulln} {Zzjikgbt}" wrapping="false">
                  <layoutData>
                    <FlexItemData growFactor="1" maxWidth="calc(100% - 214px)" styleClass="pr-4-px" />
                  </layoutData>
                </Text>
                <Link enabled="{= !!${Phone} }" href="tel:{Phone}" subtle="true" width="20px" class="icon-telephone" />
              </HBox>
            </CustomListItem>
          </List>
        </content>
      </ScrollContainer>
    </content>
  </Dialog>
</core:FragmentDefinition>