<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.common">
  <custom:Popover contentWidth="490px" placement="Bottom" horizontalScrolling="false" class="notification-popover" busy="{busy}" busyIndicatorDelay="0" initialFocus="notification-popover-close">
    <custom:customHeader>
      <HBox height="75px" alignItems="Center" class="px-20-px">
        <Title text="{i18n>LABEL_01401}" level="H3"/>
        <Text text="">
          <layoutData>
            <FlexItemData growFactor="1"/>
          </layoutData>
        </Text>
        <Label text="{i18n>LABEL_01402}" />
        <Switch state="{onlyUnread}" customTextOn=" " customTextOff=" " change=".onChangeNotificationOnlyUnread" />
      </HBox>
    </custom:customHeader>
    <custom:content>
      <HBox height="3rem" justifyContent="Center" visible="{= ${listCount} === 0 }">
        <Text text="{i18n>MSG_00001}" />
      </HBox>
      <List items="{ path: 'list', templateShareable: false }" visible="{= ${listCount} &gt; 0 }" rememberSelections="false" showUnread="true" growing="true" growingScrollToLoad="true" growingThreshold="10" showNoData="false">
        <CustomListItem unread="{= ${Checked} !== 'X' }">
          <HBox alignItems="Center">
            <core:Icon width="1rem" size="1rem" src="{= ${Pinned} === 'X' ? 'sap-icon://pushpin-on' : 'sap-icon://pushpin-off' }" press=".onPressNotificationPin">
              <core:layoutData>
                <FlexItemData alignSelf="Start" />
              </core:layoutData>
            </core:Icon>
            <VBox class="subject">
              <Text text="{Msg}" />
              <Text text="{ path: 'Adate', type: 'sap.ui.yesco.mvc.model.type.Date' } { path: 'Atime', type: 'sap.ui.yesco.mvc.model.type.Time', formatOptions: { pattern: 'HH:mm' } }" class="notification-datetime" />
            </VBox>
            <core:Icon width="1rem" size=".8rem" src="sap-icon://inspect" visible="{= !!${Menid} }" press=".onPressNotificationLink" />
            <Text text="">
              <layoutData>
                <FlexItemData growFactor="1"/>
              </layoutData>
            </Text>
            <ToggleButton text="{= ${Checked} !== 'X' ? ${i18n>LABEL_01405} : ${i18n>LABEL_01404} }" pressed="{= ${Checked} !== 'X' }" press=".onPressNotificationReadToggle" class="toggle-icon" />
          </HBox>
        </CustomListItem>
      </List>
    </custom:content>
    <custom:footer>
      <OverflowToolbar>
        <ToolbarSpacer/>
        <Button type="Emphasized" text="{i18n>LABEL_01406}" press=".onPressAllNotificationRead" visible="{= ${unreadCount} &gt; 0 }" />
        <Button text="{i18n>LABEL_00115}" press=".onPressNotificationClose" id="notification-popover-close" />
      </OverflowToolbar>
    </custom:footer>
  </custom:Popover>
</core:FragmentDefinition>