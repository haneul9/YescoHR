<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.common">
  <custom:Popover contentWidth="490px" placement="Bottom" horizontalScrolling="false" class="notification-popover" busy="{busy}" busyIndicatorDelay="0" initialFocus="notification-popover-close">
    <custom:customHeader>
      <HBox height="75px" alignItems="Center" class="px-20-px">
        <Title text="{i18n>LABEL_01401}" level="H3"/>
        <Text text="">
          <layoutData>
            <FlexItemData growFactor="1"/>
          </layoutData>
        </Text>
        <Label text="{i18n>LABEL_01402}" />
        <Switch state="{onlyUnread}" customTextOn=" " customTextOff=" " change=".onChangeNotificationOnlyUnread" />
      </HBox>
    </custom:customHeader>
    <custom:content>
      <HBox height="50px" justifyContent="Center" alignItems="Start" visible="{= ${listCount} === 0 }" class="portlet-body mb-20-px">
        <HBox width="100%" class="no-data">
          <Text text="{i18n>MSG_00001}" />
        </HBox>
      </HBox>
      <List items="{list}" visible="{= ${listCount} &gt; 0 }" updateFinished=".onUpdateFinished" rememberSelections="false" showUnread="true" growingScrollToLoad="true" growingThreshold="5" showNoData="false">
        <CustomListItem unread="{= ${Checked} !== 'X' }">
          <HBox alignItems="Center">
            <ToggleButton icon="{= ${Pinned} === 'X' ? 'asset/image/icon_pinned.svg' : 'asset/image/icon_pin.svg' }" pressed="{= ${Pinned} === 'X' }" press=".onPressNotificationPin" width="1rem" class="icon-button pin-toggle-icon">
              <layoutData>
                <FlexItemData alignSelf="Start" />
              </layoutData>
            </ToggleButton>
            <VBox class="subject">
              <Text text="{Msg}" />
              <Text text="{AdateFormatted} { path: 'Atime', type: 'sap.ui.yesco.mvc.model.type.Time', formatOptions: { pattern: 'HH:mm' } }" class="notification-datetime" />
            </VBox>
            <core:Icon width="1rem" size=".8rem" src="sap-icon://inspect" visible="{= !!${Menid} }" press=".onPressNotificationLink" />
            <Text text="">
              <layoutData>
                <FlexItemData growFactor="1"/>
              </layoutData>
            </Text>
            <ToggleButton text="{= ${Checked} !== 'X' ? ${i18n>LABEL_01405} : ${i18n>LABEL_01404} }" pressed="{= ${Checked} !== 'X' }" press=".onPressNotificationReadToggle" class="toggle-icon" />
          </HBox>
        </CustomListItem>
      </List>
    </custom:content>
    <custom:footer>
      <OverflowToolbar>
        <ToolbarSpacer/>
        <Button type="Emphasized" text="{i18n>LABEL_01406}" press=".onPressAllNotificationRead" visible="{= ${unreadCount} &gt; 0 }" />
        <Button text="{i18n>LABEL_00115}" press=".onPressNotificationClose" id="notification-popover-close" />
      </OverflowToolbar>
    </custom:footer>
  </custom:Popover>
</core:FragmentDefinition>