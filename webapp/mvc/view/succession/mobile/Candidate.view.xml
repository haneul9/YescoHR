<mvc:View controllerName="sap.ui.yesco.mvc.controller.succession.mobile.Candidate"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:custom="sap.ui.yesco.control"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page navButtonPress=".onNavBack">
    <VBox class="contents">
      <mobile:SearchAreaCSSGrid gridTemplateColumns="2fr 1fr" rowCount="2" binding="{/searchBar}">
        <custom:SingleComboBox width="100%" selectedKey="{Werks}" items="{ path: '/entries/Werks', templateShareable: false }" selectionFinish=".onChangeWerks">
          <core:Item key="{Werks}" text="{Pbtxt}" />
        </custom:SingleComboBox>
        <Button press=".onPressDetailConditionsDialog" text="{i18n>LABEL_00203}" width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/btn_DetailSearch.svg" iconDensityAware="false" />
        <custom:SingleComboBox width="100%" selectedKey="{Plans}" items="{/entries/Plans}" selectionFinish=".onChangePlans">
          <core:Item key="{Plans}" text="{Planstx}" />
        </custom:SingleComboBox>
        <!-- <Button press=".onPressConditionReset" text="{i18n>LABEL_35005}" width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/btn_Reflesh.svg" iconDensityAware="false" /> -->
        <!-- <Button press=".onPressSearch" text="{i18n>LABEL_00101}" width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_search03.png" iconDensityAware="false" /> -->
      </mobile:SearchAreaCSSGrid>
      <mobile:ScrollContainer>
        <mobile:HeaderTitleCountStatus titlePath="i18n>LABEL_45401" countPath="/candidate/listInfo/totalCount" infoMessagePath="i18n>MSG_45013" pressInfoIcon=".onPressLegend" visible="{= ${/candidate/listInfo/totalCount} > 0 }" />
        <VBox id="candidateList" items="{/candidate/listInfo/list}" class="scsn-candidates" visible="{= ${/candidate/listInfo/totalCount} > 0 }">
          <f:Card>
            <f:customData>
              <core:CustomData key="selected-card" value="{Chckd}" writeToDom="true" />
            </f:customData>
            <f:content>
              <HBox>
                <customData>
                  <core:CustomData key="color-type" value="{ColtyState}" writeToDom="true" />
                </customData>
                <VBox>
                  <layoutData>
                    <FlexItemData maxWidth="76px" />
                  </layoutData>
                  <Image src="{PicUrl}" press=".onPressPhoto" mode="Background">
                    <layoutData>
                      <FlexItemData styleClass="photo" />
                    </layoutData>
                  </Image>
                  <Text text="{ path: 'Linetx1', type: 'sap.ui.yesco.mvc.model.type.ShortPosition' }" textAlign="Center" width="100%" class="name" wrappingType="Hyphenated" />
                </VBox>
                <VBox>
                  <Image src="{Icon}">
                    <layoutData>
                      <FlexItemData styleClass="company-icon" />
                    </layoutData>
                  </Image>
                  <CheckBox class="mobile-card-checkbox" selected="{= ${Chckd} === 'X' }" select=".onSelectCheckBox">
                    <layoutData>
                      <FlexItemData styleClass="compare-target-checkbox" />
                    </layoutData>
                  </CheckBox>
                  <Text text="{Linetx2}" />
                  <Text text="{Linetx3}" />
                  <Text text="{Linetx4}" />
                  <Text text="">
                    <layoutData>
                      <FlexItemData styleClass="h-10-px" />
                    </layoutData>
                  </Text>
                  <Text text="{i18n>LABEL_45501}" />
                  <Text text="{Linetx6}" class="ml-13-px" />
                  <Text text="{Linetx7}" class="ml-13-px" />
                  <Text text="{Linetx8}" class="ml-13-px" />
                </VBox>
              </HBox>
            </f:content>
          </f:Card>
        </VBox>
        <mobile:HeaderTitleCountStatus titlePath="i18n>LABEL_00204" countPath="/searchResult/listInfo/totalCount" infoMessagePath="i18n>MSG_45014" pressInfoIcon=".onPressLegend" />
        <VBox id="searchResultList" items="{/searchResult/listInfo/list}" class="scsn-candidates" visible="{= ${/searchResult/listInfo/totalCount} > 0 }">
          <f:Card>
            <f:customData>
              <core:CustomData key="selected-card" value="{Chckd}" writeToDom="true" />
            </f:customData>
            <f:content>
              <HBox>
                <customData>
                  <core:CustomData key="color-type" value="{ColtyState}" writeToDom="true" />
                </customData>
                <VBox>
                  <layoutData>
                    <FlexItemData maxWidth="76px" />
                  </layoutData>
                  <Image src="{PicUrl}" press=".onPressPhoto" mode="Background">
                    <layoutData>
                      <FlexItemData styleClass="photo" />
                    </layoutData>
                  </Image>
                  <Text text="{ path: 'Linetx1', type: 'sap.ui.yesco.mvc.model.type.ShortPosition' }" textAlign="Center" width="100%" class="name" />
                </VBox>
                <VBox>
                  <Image src="{Icon}">
                    <layoutData>
                      <FlexItemData styleClass="company-icon" />
                    </layoutData>
                  </Image>
                  <CheckBox class="mobile-card-checkbox" selected="{= ${Chckd} === 'X' }" select=".onSelectCheckBox">
                    <layoutData>
                      <FlexItemData styleClass="compare-target-checkbox" />
                    </layoutData>
                  </CheckBox>
                  <Text text="{Linetx2}" />
                  <Text text="{Linetx3}" />
                  <Text text="{Linetx4}" />
                  <Text text="">
                    <layoutData>
                      <FlexItemData styleClass="h-10-px" />
                    </layoutData>
                  </Text>
                  <Text text="{i18n>LABEL_45501}" />
                  <Text text="{Linetx6}" class="ml-13-px" />
                  <Text text="{Linetx7}" class="ml-13-px" />
                  <Text text="{Linetx8}" class="ml-13-px" />
                </VBox>
              </HBox>
            </f:content>
          </f:Card>
        </VBox>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <OverflowToolbar>
        <HBox class="button-group button-1">
          <Button text="{i18n>LABEL_35002}" press=".onPressCompare" />
        </HBox>
      </OverflowToolbar>
    </mobile:footer>
  </mobile:Page>
</mvc:View>