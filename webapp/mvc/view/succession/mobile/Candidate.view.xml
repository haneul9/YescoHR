<mvc:View controllerName="sap.ui.yesco.mvc.controller.succession.mobile.Candidate"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:custom="sap.ui.yesco.control"
  xmlns:mvc="sap.ui.core.mvc">
  <Page enableScrolling="false" title="{menuModel>/current/currentLocationText}" showNavButton="{menuModel>/current/hasPrevious}" navButtonPress=".onNavBack" busy="{/busy}" busyIndicatorDelay="0">
    <VBox class="contents">
      <HBox class="search-area row-2" binding="{/searchBar}">
        <VBox width="67%" height="100%">
          <layoutData>
            <FlexItemData maxWidth="67%" />
          </layoutData>
          <custom:SingleComboBox width="100%" selectedKey="{Werks}" items="{ path: '/entries/Werks', templateShareable: false }" selectionFinish=".onChangeWerks">
            <core:Item key="{Werks}" text="{Pbtxt}" />
          </custom:SingleComboBox>
          <custom:SingleComboBox width="100%" selectedKey="{Plans}" items="{/entries/Plans}" selectionFinish=".onChangePlans" class="sapUiTinyMarginTop">
            <core:Item key="{Plans}" text="{Planstx}" />
          </custom:SingleComboBox>
        </VBox>
        <VBox width="33%" height="100%" class="pl-8-px">
          <layoutData>
            <FlexItemData growFactor="1" maxWidth="33%" />
          </layoutData>
          <Button press=".onPressDetailConditionsDialog" text="{i18n>LABEL_00203}" width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/btn_DetailSearch.svg" iconDensityAware="false" />
          <!-- <Button press=".onPressConditionReset" text="{i18n>LABEL_35005}" width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/btn_Reflesh.svg" iconDensityAware="false" class="sapUiTinyMarginTop" /> -->
          <!-- <Button press=".onPressSearch" text="{i18n>LABEL_00101}" width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_search03.png" iconDensityAware="false" class="sapUiTinyMarginTop" /> -->
        </VBox>
      </HBox>
      <custom:MobileScrollContainer horizontal="false" vertical="true" class="px-12-px">
        <HBox justifyContent="SpaceBetween" class="header-wrap" visible="{= ${/candidate/listInfo/totalCount} > 0 }">
          <VBox>
            <HBox class="header">
              <Title level="H3" text="{i18n>LABEL_45401}" class="sapUiSmallMarginEnd" />
            </HBox>
            <Text text="{i18n>MSG_45013}" class="desc-txt start" />
          </VBox>
          <Image press=".onPressLegend" src="/sap/public/bc/ui2/zui5_yescohr/images/icon_tooltip.svg" width="16px" height="16px" mode="Background" backgroundPosition="center center" backgroundSize="auto">
            <layoutData>
              <FlexItemData alignSelf="Start" styleClass="mt-7-px" />
            </layoutData>
          </Image>
        </HBox>
        <VBox id="candidateList" items="{/candidate/listInfo/list}" class="scsn-candidates" visible="{= ${/candidate/listInfo/totalCount} > 0 }">
          <f:Card>
            <f:customData>
              <core:CustomData key="selected-card" value="{Chckd}" writeToDom="true" />
            </f:customData>
            <f:content>
              <HBox>
                <customData>
                  <core:CustomData key="color-type" value="{ColtyState}" writeToDom="true" />
                </customData>
                <VBox>
                  <layoutData>
                    <FlexItemData maxWidth="76px" />
                  </layoutData>
                  <Image src="{PicUrl}" press=".onPressPhoto">
                    <layoutData>
                      <FlexItemData styleClass="photo" />
                    </layoutData>
                  </Image>
                  <Text text="{ path: 'Linetx1', type: 'sap.ui.yesco.mvc.model.type.ShortPosition' }" textAlign="Center" width="100%" class="name" wrappingType="Hyphenated" />
                </VBox>
                <VBox>
                  <Image src="{Icon}">
                    <layoutData>
                      <FlexItemData styleClass="company-icon" />
                    </layoutData>
                  </Image>
                  <CheckBox class="mobile-card-checkbox" selected="{= ${Chckd} === 'X' }" select=".onSelectCheckBox">
                    <layoutData>
                      <FlexItemData styleClass="compare-target-checkbox" />
                    </layoutData>
                  </CheckBox>
                  <Text text="{Linetx2}" />
                  <Text text="{Linetx3}" />
                  <Text text="{Linetx4}" />
                  <Text text="">
                    <layoutData>
                      <FlexItemData styleClass="h-10-px" />
                    </layoutData>
                  </Text>
                  <Text text="{i18n>LABEL_45501}" />
                  <Text text="{Linetx6}" class="ml-13-px" />
                  <Text text="{Linetx7}" class="ml-13-px" />
                  <Text text="{Linetx8}" class="ml-13-px" />
                </VBox>
              </HBox>
            </f:content>
          </f:Card>
        </VBox>
        <HBox justifyContent="SpaceBetween" class="header-wrap">
          <VBox>
            <HBox class="header">
              <Title level="H3" text="{i18n>LABEL_00204}" class="sapUiSmallMarginEnd" />
              <Text text="total {/searchResult/listInfo/totalCount}" />
            </HBox>
            <Text text="{i18n>MSG_45014}" class="desc-txt start" />
          </VBox>
          <Image press=".onPressLegend" src="/sap/public/bc/ui2/zui5_yescohr/images/icon_tooltip.svg" width="16px" height="16px" mode="Background" backgroundPosition="center center" backgroundSize="auto">
            <layoutData>
              <FlexItemData alignSelf="Start" styleClass="mt-7-px" />
            </layoutData>
          </Image>
        </HBox>
        <VBox id="searchResultList" items="{/searchResult/listInfo/list}" class="scsn-candidates" visible="{= ${/searchResult/listInfo/totalCount} > 0 }">
          <f:Card>
            <f:customData>
              <core:CustomData key="selected-card" value="{Chckd}" writeToDom="true" />
            </f:customData>
            <f:content>
              <HBox>
                <customData>
                  <core:CustomData key="color-type" value="{ColtyState}" writeToDom="true" />
                </customData>
                <VBox>
                  <layoutData>
                    <FlexItemData maxWidth="76px" />
                  </layoutData>
                  <Image src="{PicUrl}" press=".onPressPhoto">
                    <layoutData>
                      <FlexItemData styleClass="photo" />
                    </layoutData>
                  </Image>
                  <Text text="{ path: 'Linetx1', type: 'sap.ui.yesco.mvc.model.type.ShortPosition' }" textAlign="Center" width="100%" class="name" />
                </VBox>
                <VBox>
                  <Image src="{Icon}">
                    <layoutData>
                      <FlexItemData styleClass="company-icon" />
                    </layoutData>
                  </Image>
                  <CheckBox class="mobile-card-checkbox" selected="{= ${Chckd} === 'X' }" select=".onSelectCheckBox">
                    <layoutData>
                      <FlexItemData styleClass="compare-target-checkbox" />
                    </layoutData>
                  </CheckBox>
                  <Text text="{Linetx2}" />
                  <Text text="{Linetx3}" />
                  <Text text="{Linetx4}" />
                  <Text text="">
                    <layoutData>
                      <FlexItemData styleClass="h-10-px" />
                    </layoutData>
                  </Text>
                  <Text text="{i18n>LABEL_45501}" />
                  <Text text="{Linetx6}" class="ml-13-px" />
                  <Text text="{Linetx7}" class="ml-13-px" />
                  <Text text="{Linetx8}" class="ml-13-px" />
                </VBox>
              </HBox>
            </f:content>
          </f:Card>
        </VBox>
      </custom:MobileScrollContainer>
    </VBox>
    <footer class="wrap">
      <OverflowToolbar>
        <Button text="{i18n>LABEL_35002}" type="Emphasized" width="100%" press=".onPressCompare">
          <layoutData>
            <FlexItemData growFactor="1"/>
          </layoutData>
        </Button>
      </OverflowToolbar>
    </footer>
  </Page>
</mvc:View>