<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <!-- 임원용 : 휴가 사용율 -->
  <VBox busy="{busy}" busyIndicatorDelay="0">
    <HBox class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <custom:Title text="{title}" visible="{= !${hideTitle} }">
        <custom:layoutData>
          <FlexItemData styleClass="portlet-header-title" />
        </custom:layoutData>
      </custom:Title>
      <Text text="{/Ttltxt}{i18n>LABEL_01191}" class="desc-txt">
        <layoutData>
          <FlexItemData styleClass="portlet-header-description" />
        </layoutData>
      </Text>
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" press=".onPressLink" tooltip="{i18n>LABEL_00342}" />
    </HBox>
    <HBox class="portlet-body">
      <VBox class="vacation-summary-box">
        <Label text="{i18n>LABEL_01192}">
          <layoutData>
            <FlexItemData styleClass="vacation-summary-label" />
          </layoutData>
        </Label>
        <custom:VacationRatioIndicator width="100%" total="{/Annual/Total}" used="{/Annual/Used}" showTotal="false" decimal="2" press=".openDetailPopup">
          <custom:layoutData>
            <FlexItemData styleClass="vacation-summary-indicator vacation-summary-annual" />
          </custom:layoutData>
          <custom:customData>
            <core:CustomData key="Headty" value="{/Annual/Headty}" />
            <core:CustomData key="Discod" value="{/Annual/Discod}" />
          </custom:customData>
        </custom:VacationRatioIndicator>
        <Label text="{i18n>LABEL_01193}">
          <layoutData>
            <FlexItemData styleClass="vacation-summary-label" />
          </layoutData>
        </Label>
        <custom:VacationRatioIndicator width="100%" total="{/Summer/Total}" used="{/Summer/Used}" showTotal="false" decimal="2" press=".openDetailPopup">
          <custom:layoutData>
            <FlexItemData styleClass="vacation-summary-indicator vacation-summary-summer" />
          </custom:layoutData>
          <custom:customData>
            <core:CustomData key="Headty" value="{/Summer/Headty}" />
            <core:CustomData key="Discod" value="{/Summer/Discod}" />
          </custom:customData>
        </custom:VacationRatioIndicator>
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>