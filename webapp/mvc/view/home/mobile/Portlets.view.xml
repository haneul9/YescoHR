<mvc:View controllerName="sap.ui.yesco.mvc.controller.home.mobile.Portlets"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc">
  <ScrollContainer height="100%" vertical="true">
    <!-- <ToggleButton id="reveal-grid-button" text="Reveal Grid" press="onRevealGrid" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom" /> -->
    <HBox justifyContent="Center">
      <f:GridContainer id="portlets-grid" class="sapUiSmallMarginTopBottom mx-auto" snapToRow="true">
        <f:layout>
          <f:GridContainerSettings rowSize="270px" columns="4" columnSize="385px" gap="20px" />
        </f:layout>
        <f:layoutXL>
          <!-- 1440px ~ -->
          <f:GridContainerSettings rowSize="270px" columns="4" columnSize="385px" gap="20px" />
        </f:layoutXL>
        <f:layoutL>
          <!-- 1023px ~ 1439px -->
          <f:GridContainerSettings rowSize="270px" columns="3" columnSize="385px" gap="20px" />
        </f:layoutL>
        <f:layoutM>
          <!-- 600px ~ 1023px -->
          <f:GridContainerSettings rowSize="270px" columns="2" columnSize="385px" gap="20px" />
        </f:layoutM>
        <f:layoutS>
          <!-- 375px ~ 599px -->
          <f:GridContainerSettings rowSize="270px" columns="1" columnSize="385px" gap="20px" />
        </f:layoutS>
        <f:layoutXS>
          <!-- 0 ~ 374px -->
          <f:GridContainerSettings rowSize="270px" columns="1" columnSize="385px" gap="20px" />
        </f:layoutXS>
      </f:GridContainer>
    </HBox>
  </ScrollContainer>
</mvc:View>