<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <!-- 공지사항 -->
  <VBox>
    <layoutData>
      <FlexItemData growFactor="1" maxWidth="100%" />
    </layoutData>
    <ScrollContainer horizontal="false" vertical="true">
      <HBox width="100%" class="no-data" visible="{= ${listCount} === 0 }">
        <Text text="{i18n>MSG_00001}" />
      </HBox>
      <HBox width="100%" visible="{= ${listCount} &gt; 0 }">
        <!-- <VBox items="{list}" width="25px" visible="{= ${importantCount} &gt; 0 }">
        <HBox justifyContent="End" alignItems="Center" class="article-item">
          <core:Icon src="sap-icon://notification" tooltip="{i18n>LABEL_00178}" size="16px" color="{= ${Impor} === 'X' ? '#387fe9' : 'transparent' }" />
        </HBox>
      </VBox> -->
        <VBox items="{list}" class="article-item-icon-column" visible="{= ${newCount} &gt; 0 }">
          <HBox class="article-item">
            <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_new.svg" width="13px" height="13px" mode="Background" visible="{= ${Newitem} === 'X' }">
              <layoutData>
                <FlexItemData styleClass="article-item-icon-wrapper" />
              </layoutData>
            </Image>
          </HBox>
        </VBox>
        <VBox items="{list}" class="article-item-title-column">
          <HBox class="article-item">
            <Link text="{Title}" tooltip="{Title}" subtle="true" press=".onPressNoticeArticle">
              <layoutData>
                <FlexItemData maxWidth="100%" />
              </layoutData>
            </Link>
          </HBox>
        </VBox>
        <VBox items="{list}" class="article-item-date-column">
          <HBox class="article-item">
            <Text text="{ path: 'Aedtm', type: 'sap.ui.yesco.mvc.model.type.MonthDate' }" textAlign="Right" wrapping="false" width="100%" />
          </HBox>
        </VBox>
      </HBox>
    </ScrollContainer>
  </VBox>
</core:FragmentDefinition>