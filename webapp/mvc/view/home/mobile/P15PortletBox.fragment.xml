<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <!-- 나의 휴가 현황 -->
  <VBox tooltip="{tooltip}" busy="{busy}" busyIndicatorDelay="0">
    <customData>
      <core:CustomData key="portlet-switchable" value="{switchable}" />
    </customData>
    <layoutData>
      <f:GridContainerItemLayoutData rows="{height}" columns="{width}" />
    </layoutData>
    <HBox class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <custom:Title text="{title}" visible="{= !${hideTitle} }">
        <custom:layoutData>
          <FlexItemData styleClass="portlet-header-title" />
        </custom:layoutData>
      </custom:Title>
      <Text text="{i18n>LABEL_01171}" class="desc-txt">
        <layoutData>
          <FlexItemData styleClass="portlet-header-description" />
        </layoutData>
      </Text>
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{switchable}" icon="sap-icon://decline" type="Transparent" class="icon-button portlet-close-icon" press=".onPressClose" tooltip="{i18n>LABEL_00200}" />
      <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" press=".onPressLink" tooltip="{i18n>LABEL_00342}" />
    </HBox>
    <HBox class="home-top-pine-tree-layer">
      <Image src="/sap/public/bc/ui2/zui5_yescohr/images/pine-tree-top.svg" mode="Background" />
      <Image src="/sap/public/bc/ui2/zui5_yescohr/images/pine-tree-top.svg" mode="Background" />
    </HBox>
    <HBox class="portlet-body">
      <VBox width="100%" class="portlet-vacation-summary">
        <HBox class="annual">
          <HBox class="annual-left">
            <Text text="{i18n>LABEL_01174}" />
            <Text text="{= Number(${/Annual/Total}) - Number(${/Annual/Used}) }">
              <layoutData>
                <FlexItemData styleClass="emphasized" />
              </layoutData>
            </Text>
            <Text text="{i18n>MSG_01104}" />
          </HBox>
          <HBox class="annual-right">
            <Text text="{/Annual/Used} ">
              <layoutData>
                <FlexItemData styleClass="emphasized" />
              </layoutData>
            </Text>
            <Text text="/" />
            <Text text="{/Annual/Total}" />
          </HBox>
        </HBox>
        <custom:VacationIndicator width="100%" total="{/Annual/Total}" used="{/Annual/Used}" showTotal="false" chartOnly="true" class="half-height" />
        <HBox class="summer">
          <HBox class="summer-left">
            <Text text="{i18n>LABEL_01175}" />
            <Text text="{= Number(${/Summer/Total}) - Number(${/Summer/Used}) }">
              <layoutData>
                <FlexItemData styleClass="emphasized" />
              </layoutData>
            </Text>
            <Text text="{i18n>MSG_01104}" />
          </HBox>
          <HBox class="summer-right">
            <Text text="{/Summer/Used}">
              <layoutData>
                <FlexItemData styleClass="emphasized" />
              </layoutData>
            </Text>
            <Text text="/" />
            <Text text="{/Summer/Total}" />
          </HBox>
        </HBox>
        <custom:VacationIndicator width="100%" total="{/Summer/Total}" used="{/Summer/Used}" showTotal="false" chartOnly="true" class="half-height" />
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>