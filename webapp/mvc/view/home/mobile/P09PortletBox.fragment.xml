<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <!-- 기념일 -->
  <VBox class="portlet-content-scrollable" busy="{busy}" busyIndicatorDelay="0">
    <HBox class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <custom:Title text="{title}" visible="{= !${hideTitle} }">
        <custom:layoutData>
          <FlexItemData styleClass="portlet-header-title" />
        </custom:layoutData>
      </custom:Title>
      <custom:DatePicker dateValue="{ path: 'selectedYearMonth', type: 'sap.ui.yesco.mvc.model.type.Month' }" change=".onChangeSelectedYearMonth" pickOnly="true" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <SegmentedButton selectedKey="{selectedTabKey}" width="auto">
        <items>
          <SegmentedButtonItem text="{i18n>LABEL_01151}" key="birthday" press=".onPressSegmentedButtonItem" />
          <SegmentedButtonItem text="{i18n>LABEL_01152}" key="wedding" press=".onPressSegmentedButtonItem" />
        </items>
      </SegmentedButton>
      <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" press=".onPressLink" tooltip="{i18n>LABEL_00342}" />
    </HBox>
    <HBox class="portlet-body">
      <VBox>
        <layoutData>
          <FlexItemData growFactor="1" maxWidth="100%" />
        </layoutData>
        <ScrollContainer visible="{= ${selectedTabKey} === 'birthday' }" horizontal="false" vertical="true">
          <HBox width="100%" class="no-data" visible="{= ${birthday/listCount} === 0 }">
            <Text text="{i18n>MSG_00001}" />
          </HBox>
          <VBox width="100%" items="{birthday/list}" visible="{= ${birthday/listCount} &gt; 0 }" class="portlet-members">
            <HBox class="portlet-members-item">
              <Image src="{Photo}" mode="Background">
                <layoutData>
                  <FlexItemData styleClass="members-photo" />
                </layoutData>
              </Image>
              <VBox class="members-name-box">
                <Text text="{Ename}" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-name" />
                  </layoutData>
                </Text>
              </VBox>
              <VBox class="members-position-organization-box">
                <Text text="{ path: 'Zzjikgbt', type: 'sap.ui.yesco.mvc.model.type.ShortPosition' }" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-position" />
                  </layoutData>
                </Text>
                <Text text="{Orgtx}" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-organization" />
                  </layoutData>
                </Text>
              </VBox>
              <VBox class="members-anniversary-date-box">
                <Text text="{ path: 'Datum', type: 'sap.ui.yesco.mvc.model.type.MonthDate' }" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-anniversary-date" />
                  </layoutData>
                </Text>
              </VBox>
            </HBox>
          </VBox>
        </ScrollContainer>
        <ScrollContainer visible="{= ${selectedTabKey} === 'wedding' }" horizontal="false" vertical="true">
          <HBox width="100%" class="no-data" visible="{= ${wedding/listCount} === 0 }">
            <Text text="{i18n>MSG_00001}" />
          </HBox>
          <VBox width="100%" items="{wedding/list}" visible="{= ${wedding/listCount} &gt; 0 }" class="portlet-members">
            <HBox class="portlet-members-item">
              <Image src="{Photo}" mode="Background">
                <layoutData>
                  <FlexItemData styleClass="members-photo" />
                </layoutData>
              </Image>
              <VBox class="members-name-box">
                <Text text="{Ename}" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-name" />
                  </layoutData>
                </Text>
              </VBox>
              <VBox class="members-position-organization-box">
                <Text text="{ path: 'Zzjikgbt', type: 'sap.ui.yesco.mvc.model.type.ShortPosition' }" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-position" />
                  </layoutData>
                </Text>
                <Text text="{Orgtx}" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-organization" />
                  </layoutData>
                </Text>
              </VBox>
              <VBox class="members-anniversary-date-box">
                <Text text="{ path: 'Datum', type: 'sap.ui.yesco.mvc.model.type.MonthDate' }" wrapping="false">
                  <layoutData>
                    <FlexItemData styleClass="members-anniversary-date" />
                  </layoutData>
                </Text>
              </VBox>
            </HBox>
          </VBox>
        </ScrollContainer>
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>