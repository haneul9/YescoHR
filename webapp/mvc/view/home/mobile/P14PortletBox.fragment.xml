<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <!-- 근무시간 현황 -->
  <VBox busy="{busy}" busyIndicatorDelay="0">
    <HBox class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <custom:Title text="{title}" visible="{= !${hideTitle} }">
        <custom:layoutData>
          <FlexItemData styleClass="portlet-header-title" />
        </custom:layoutData>
      </custom:Title>
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" press=".onPressLink" />
    </HBox>
    <HBox class="portlet-body" justifyContent="SpaceBetween">
      <VBox width="49%">
        <VBox class="left-box">
          <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon-portlet-p11-today.svg" mode="Background">
            <layoutData>
              <FlexItemData styleClass="left-box-icon" />
            </layoutData>
          </Image>
          <Text text="{i18n>LABEL_01161}">
            <layoutData>
              <FlexItemData styleClass="left-box-icon-label" />
            </layoutData>
          </Text>
          <Text text="{Timtx}">
            <layoutData>
              <FlexItemData styleClass="left-box-primary" />
            </layoutData>
          </Text>
          <Text text="{Wkrul}">
            <layoutData>
              <FlexItemData styleClass="left-box-secondary" />
            </layoutData>
          </Text>
        </VBox>
      </VBox>
      <VBox width="49%">
        <VBox class="right-box">
          <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon-portlet-p11-week.svg" mode="Background">
            <layoutData>
              <FlexItemData styleClass="right-box-icon" />
            </layoutData>
          </Image>
          <!-- <Text text="{i18n>LABEL_01162}" /> -->
          <Text text="{Wktext}">
            <layoutData>
              <FlexItemData styleClass="right-box-icon-label" />
            </layoutData>
          </Text>
          <HBox class="right-box-primary">
            <Text text="{Reltm}" />
            <Text text="{i18n>LABEL_01231}" />
          </HBox>
          <Text text="{Reltx}">
            <layoutData>
              <FlexItemData styleClass="right-box-secondary" />
            </layoutData>
          </Text>
        </VBox>
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>