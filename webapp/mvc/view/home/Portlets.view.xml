<mvc:View controllerName="sap.ui.yesco.mvc.controller.home.Portlets"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:cards="sap.f.cards"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:widgets="sap.ui.integration.widgets"
  xmlns:unified="sap.ui.unified">
  <ScrollContainer height="100%" vertical="true">
    <!-- <ToggleButton id="reveal-grid-button" text="Reveal Grid" press="onRevealGrid" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom" /> -->
    <HBox justifyContent="Center">
      <f:GridContainer id="portlets-grid" class="sapUiSmallMarginTopBottom mx-auto" snapToRow="true">
        <f:layout>
          <f:GridContainerSettings rowSize="150px" columns="4" columnSize="372px" gap="30px" />
        </f:layout>
        <f:layoutXL>
          <!-- 1440px ~ -->
          <f:GridContainerSettings rowSize="150px" columns="4" columnSize="372px" gap="30px" />
        </f:layoutXL>
        <f:layoutL>
          <!-- 1023px ~ 1439px -->
          <f:GridContainerSettings rowSize="150px" columns="3" columnSize="372px" gap="30px" />
        </f:layoutL>
        <f:layoutM>
          <!-- 600px ~ 1023px -->
          <f:GridContainerSettings rowSize="150px" columns="2" columnSize="372px" gap="30px" />
        </f:layoutM>
        <f:layoutS>
          <!-- 375px ~ 599px -->
          <f:GridContainerSettings rowSize="150px" columns="1" columnSize="372px" gap="30px" />
        </f:layoutS>
        <f:layoutXS>
          <!-- 0 ~ 374px -->
          <f:GridContainerSettings rowSize="150px" columns="1" columnSize="372px" gap="30px" />
        </f:layoutXS>
        <f:items>
          <GenericTile header="Sales Fulfillment Application Title" subheader="Subtitle" width="100%">
            <layoutData>
              <f:GridContainerItemLayoutData minRows="2"/>
            </layoutData>
            <TileContent unit="EUR" footer="Current Quarter">
              <ImageContent src="sap-icon://home-share"/>
            </TileContent>
          </GenericTile>
          <widgets:Card manifest="{portletsModel>/listContent/largeList}">
            <widgets:layoutData>
              <f:GridContainerItemLayoutData minRows="2" columns="2" />
            </widgets:layoutData>
          </widgets:Card>
          <f:Card>
            <f:layoutData>
              <f:GridContainerItemLayoutData minRows="3"/>
            </f:layoutData>
            <f:header>
              <cards:Header title="My Team Calendar"/>
            </f:header>
            <f:content>
              <HBox width="100%" justifyContent="Center">
                <VBox>
                  <unified:Calendar id="team-calendar" legend="team-calendar-legend" showWeekNumbers="false" class="px-0" />
                  <ToggleButton text="Special Days" press="handleShowSpecialDays" class="sapUiSmallMarginBottom sapUiNoPadding" />
                  <unified:CalendarLegend id="team-calendar-legend" columnWidth="100px" standardItems="{= 'Today,Selected,WorkingDay,NonWorkingDay'.split(',') }" class="sapUiNoPadding" />
                </VBox>
              </HBox>
            </f:content>
          </f:Card>
          <widgets:Card manifest="{portletsModel>/listContent/smallList}">
            <widgets:layoutData>
              <f:GridContainerItemLayoutData minRows="2"/>
            </widgets:layoutData>
          </widgets:Card>
          <widgets:Card manifest="{portletsModel>/listContent/mediumList}">
            <widgets:layoutData>
              <f:GridContainerItemLayoutData minRows="3"/>
            </widgets:layoutData>
          </widgets:Card>
          <GenericTile header="Cumulative Totals" subheader="Subtitle" width="100%">
            <layoutData>
              <f:GridContainerItemLayoutData minRows="2"/>
            </layoutData>
            <TileContent unit="Unit" footer="Footer Text">
              <NumericContent value="12"/>
            </TileContent>
          </GenericTile>
          <GenericTile header="Travel and Expenses" subheader="Access Concur" width="100%">
            <layoutData>
              <f:GridContainerItemLayoutData minRows="2"/>
            </layoutData>
            <TileContent>
              <ImageContent src="sap-icon://travel-expense"/>
            </TileContent>
          </GenericTile>
          <GenericTile header="Success Map" subheader="Access Success Map" width="100%">
            <layoutData>
              <f:GridContainerItemLayoutData minRows="2"/>
            </layoutData>
            <TileContent unit="EUR" footer="Current Quarter">
              <ImageContent src="sap-icon://map-3"/>
            </TileContent>
          </GenericTile>
        </f:items>
      </f:GridContainer>
    </HBox>
  </ScrollContainer>
</mvc:View>