<core:FragmentDefinition xmlns="sap.ui.table"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core">
  <m:Popover contentWidth="467px" placement="Bottom" horizontalScrolling="false" verticalScrolling="false" showHeader="false" class="team-member-count-popover">
    <Table width="100%" selectionMode="None" columnHeaderHeight="35" rowHeight="34" rows="{list}" visibleRowCount="{listCount}" noData="{i18n>MSG_00001}">
      <columns>
        <Column width="110px" visible="{= ${category} === 'A' }">
          <m:Label text="{i18n>LABEL_01218}" />
          <template>
            <m:Text text="{Ename}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text" tooltip="{ path: 'Pernr', type: 'sap.ui.yesco.mvc.model.type.Pernr' }" />
          </template>
        </Column>
        <Column width="110px" visible="{= ${category} === 'B' }">
          <m:Label text="{i18n>LABEL_01219}" />
          <template>
            <m:Text text="{Ename}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text" tooltip="{ path: 'Pernr', type: 'sap.ui.yesco.mvc.model.type.Pernr' }" />
          </template>
        </Column>
        <Column width="150px">
          <m:Label text="{i18n>LABEL_01222}" />
          <template>
            <m:Text text="{Orgtx}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text" />
          </template>
        </Column>
        <Column width="100px">
          <m:Label text="{i18n>LABEL_01223}" />
          <template>
            <m:Text text="{Stltx}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text" />
          </template>
        </Column>
        <Column width="auto" visible="{= ${category} === 'A' }">
          <m:Label text="{i18n>LABEL_01220}" />
          <template>
            <m:Text text="{ path: 'Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text" />
          </template>
        </Column>
        <Column width="auto" visible="{= ${category} === 'B' }">
          <m:Label text="{i18n>LABEL_01221}" />
          <template>
            <m:Text text="{ path: 'Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text" />
          </template>
        </Column>
      </columns>
    </Table>
  </m:Popover>
</core:FragmentDefinition>