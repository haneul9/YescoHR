<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control"
  xmlns:grid="sap.ui.layout.cssgrid">
  <VBox class="portlet portlet-box portlet-p06" tooltip="{tooltip}" busy="{busy}" busyIndicatorDelay="0">
    <customData>
      <core:CustomData key="portlet-switchable" value="{switchable}" />
    </customData>
    <layoutData>
      <f:GridContainerItemLayoutData rows="{height}" columns="{width}" />
    </layoutData>
    <HBox class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <Title level="H2" text="{title}" visible="{= !${hideTitle} }" />
      <custom:DatePicker dateValue="{ path: 'selectedDate', type: 'sap.ui.yesco.mvc.model.type.DateWeekday' }" change=".onChangeSelectedDate" width="135px" pickOnly="true" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{switchable}" icon="sap-icon://decline" type="Transparent" class="icon-button portlet-close-icon" press=".onPressClose" tooltip="{i18n>LABEL_00200}" />
      <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" press=".onPressLink" tooltip="{i18n>LABEL_00201}" />
    </HBox>
    <HBox class="portlet-body">
      <grid:CSSGrid gridTemplateColumns="2fr 1fr 1fr 1fr" gridGap="0px" class="mt-10-px">
        <grid:layoutData>
          <FlexItemData growFactor="1" />
        </grid:layoutData>
        <FlexBox justifyContent="Center">
          <layoutData>
            <grid:GridItemLayoutData gridRow="span 2" />
          </layoutData>
          <core:HTML content='&lt;div id="portlet-p06-chart-container"&gt;&lt;/div&gt;' />
        </FlexBox>
        <VBox justifyContent="Center" alignItems="Center">
          <Label design="Bold" text="{i18n>LABEL_01121}" />
          <ObjectStatus text="{ path: 'counts/Cnt01', type: 'sap.ui.yesco.mvc.model.type.Currency' }" active="true" press=".onPressCount" class="team-member-count">
            <customData>
              <core:CustomData key="table-key" value="1" writeToDom="true" />
            </customData>
          </ObjectStatus>
        </VBox>
        <VBox justifyContent="Center" alignItems="Center">
          <Label design="Bold" text="{i18n>LABEL_01122}" />
          <ObjectStatus text="{ path: 'counts/Cnt02', type: 'sap.ui.yesco.mvc.model.type.Currency' }" active="true" press=".onPressCount" class="team-member-count">
            <customData>
              <core:CustomData key="table-key" value="2" writeToDom="true" />
            </customData>
          </ObjectStatus>
        </VBox>
        <VBox justifyContent="Center" alignItems="Center">
          <Label design="Bold" text="{i18n>LABEL_01123}" />
          <ObjectStatus text="{ path: 'counts/Cnt03', type: 'sap.ui.yesco.mvc.model.type.Currency' }" active="true" press=".onPressCount" class="team-member-count">
            <customData>
              <core:CustomData key="table-key" value="3" writeToDom="true" />
            </customData>
          </ObjectStatus>
        </VBox>
        <VBox justifyContent="Center" alignItems="Center">
          <Label design="Bold" text="{i18n>LABEL_01124}" />
          <ObjectStatus text="{ path: 'counts/Cnt04', type: 'sap.ui.yesco.mvc.model.type.Currency' }" active="true" press=".onPressCount" class="team-member-count">
            <customData>
              <core:CustomData key="table-key" value="4" writeToDom="true" />
            </customData>
          </ObjectStatus>
        </VBox>
        <VBox justifyContent="Center" alignItems="Center">
          <Label design="Bold" text="{i18n>LABEL_01125}" />
          <ObjectStatus text="{ path: 'counts/Cnt05', type: 'sap.ui.yesco.mvc.model.type.Currency' }" active="true" press=".onPressCount" class="team-member-count">
            <customData>
              <core:CustomData key="table-key" value="5" writeToDom="true" />
            </customData>
          </ObjectStatus>
        </VBox>
        <VBox justifyContent="Center" alignItems="Center">
          <Label design="Bold" text="{i18n>LABEL_01126}" />
          <ObjectStatus text="{ path: 'counts/Cnt06', type: 'sap.ui.yesco.mvc.model.type.Currency' }" active="true" press=".onPressCount" class="team-member-count">
            <customData>
              <core:CustomData key="table-key" value="6" writeToDom="true" />
            </customData>
          </ObjectStatus>
        </VBox>
      </grid:CSSGrid>
    </HBox>
  </VBox>
</core:FragmentDefinition>