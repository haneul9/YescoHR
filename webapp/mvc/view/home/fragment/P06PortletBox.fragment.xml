            </customData>
          </ObjectStatus>
        </VBox>
        <VBox justifyContent="End" alignItems="End" class="mr-10-px lh-12-px">
          <layoutData>
            <grid:GridItemLayoutData gridColumn="span 4" />
          </layoutData>
          <Text text="{i18n>MSG_28003}" wrapping="false" class="font-12-px" />
        </VBox>
      </grid:CSSGrid>
    </HBox>
  </VBox>
</core:FragmentDefinition>