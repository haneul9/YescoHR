<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">
  <VBox class="portlet portlet-box portlet-p05" tooltip="{tooltip}" busy="{busy}" busyIndicatorDelay="0">
    <customData>
      <core:CustomData key="portlet-id" value="{id}" writeToDom="true" />
    </customData>
    <layoutData>
      <f:GridContainerItemLayoutData rows="{height}" columns="{width}" />
    </layoutData>
    <HBox width="100%" height="15%" class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <Title level="H2" text="{title}" visible="{= !${hideTitle} }" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button icon="sap-icon://decline" type="Transparent" visible="{switchable}" class="icon-button portlet-close" press=".onPressClose" />
      <Button icon="sap-icon://add" type="Transparent" visible="{hasLink}" class="icon-button" press=".onPressLink" />
    </HBox>
    <ScrollContainer height="97%" vertical="true">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <HBox width="100%" height="1.5rem" justifyContent="Center" alignItems="Center" visible="{= ${listCount} === 0 }">
        <Text text="{i18n>MSG_00001}" />
      </HBox>
      <List items="{ path: 'list', templateShareable: false }" visible="{= ${listCount} &gt; 0 }" width="100%" rememberSelections="false" showSeparators="None" showNoData="false">
        <CustomListItem>
          <HBox alignItems="Center" height="20px">
            <ToggleButton type="Transparent" icon="{= ${Favor} ? 'sap-icon://favorite' : 'sap-icon://unfavorite' }" press=".toggleFavorite" pressed="{Favor}" class="icon-button menu-favorite-icon" />
            <!-- 메뉴 이동인 경우 -->
            <Link text="{Mname}" visible="{= !!${Mnurl} &amp;&amp; !${Mepop} }" href="{ parts: [ { path: 'Mnurl' }, { path: 'Mepop' } ], formatter: '.formatMenuUrl' }" subtle="true" press=".handleMenuLink" class="menu-link" />
            <!-- http|https|javascript로 시작되는 경우 -->
            <Link text="{Mname}" visible="{= !!${Mnurl} &amp;&amp; ${Mepop} }" href="{ parts: [ { path: 'Mnurl' }, { path: 'Mepop' } ], formatter: '.formatMenuUrl' }" subtle="true" target="{ parts: [ { path: 'Mnurl' }, { path: 'Mepop' } ], formatter: '.formatMenuTarget' }" class="menu-link" />
          </HBox>
        </CustomListItem>
      </List>
    </ScrollContainer>
  </VBox>
</core:FragmentDefinition>