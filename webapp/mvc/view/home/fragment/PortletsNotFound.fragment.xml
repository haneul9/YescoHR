    <layoutData>
      <f:GridContainerItemLayoutData rows="1" columns="4" />
    </layoutData>
    <HBox class="portlet-body">
      <HBox width="100%" class="no-data">
        <Text text="{/message}" />
      </HBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>