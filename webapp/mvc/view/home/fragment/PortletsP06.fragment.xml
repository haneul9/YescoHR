<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="portlet portlet-box portlet-p06" tooltip="{tooltip}" busy="{busy}" busyIndicatorDelay="0">
    <customData>
      <core:CustomData key="portlet-id" value="{id}" writeToDom="true" />
    </customData>
    <layoutData>
      <f:GridContainerItemLayoutData rows="{height}" columns="{width}" />
    </layoutData>
    <HBox width="100%" class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <layoutData>
        <FlexItemData minHeight="15%" />
      </layoutData>
      <Title level="H2" text="{title}" visible="{= !${hideTitle} }" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button icon="sap-icon://decline" type="Transparent" visible="{switchable}" class="icon-button portlet-close" press=".onPressClose" />
      <Button icon="sap-icon://add" type="Transparent" visible="{hasLink}" class="icon-button" press=".onPressLink" />
    </HBox>
    <HBox width="100%">
      <Text text="{ path: 'counts/Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" class="today" />
      <Text text="{counts/Week}" class="today ml-5-px" />
    </HBox>
    <HBox width="100%">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <VBox width="25%" justifyContent="Center" alignItems="Center">
        <custom:ObjectStatus text="{ path: 'counts/Cnt01', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication01" hover=".onHover1" class="team-member-count" />
        <Label design="Bold" text="{i18n>LABEL_01301}" />
      </VBox>
      <VBox width="25%" justifyContent="Center" alignItems="Center">
        <custom:ObjectStatus text="{ path: 'counts/Cnt02', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication02" hover=".onHover2" class="team-member-count" />
        <Label design="Bold" text="{i18n>LABEL_01302}" />
      </VBox>
      <VBox width="25%" justifyContent="Center" alignItems="Center">
        <custom:ObjectStatus text="{ path: 'counts/Cnt03', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication01" hover=".onHover3" class="team-member-count" />
        <Label design="Bold" text="{i18n>LABEL_01303}" />
      </VBox>
      <VBox width="25%" justifyContent="Center" alignItems="Center">
        <custom:ObjectStatus text="{ path: 'counts/Cnt04', type: 'sap.ui.yesco.mvc.model.type.Currency' }" state="Indication03" hover=".onHover4" class="team-member-count" />
        <Label design="Bold" text="{i18n>LABEL_01304}" />
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>