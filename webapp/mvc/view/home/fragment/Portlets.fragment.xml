<core:FragmentDefinition xmlns="sap.ui.table"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core">
  <m:VBox class="vCardBox" tooltip="{/tooltip}">
    <m:HBox justifyContent="SpaceBetween">
      <m:Text text="{/title}" visible="{/hideTitle}" />
      <m:Button width="2.5rem" icon="sap-icon://decline" />
    </m:HBox>
    <Table selectionMode="None" width="100%" columnHeaderHeight="45" rowHeight="44" rows="{/list}" visibleRowCount="{/rowCount}" noData="{i18n>MSG_00001}">
      <columns>
        <Column width="20%">
          <m:Label text="{i18n>LABEL_00210}" />
          <template>
            <m:Text text="{Kurzt}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text" />
          </template>
        </Column>
        <Column width="30%">
          <m:Label text="{i18n>LABEL_00226}" />
          <template>
            <m:Text text="{Kurzt}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text" />
          </template>
        </Column>
        <Column width="50%">
          <m:Label text="{i18n>LABEL_00150}" />
          <template>
            <m:Text text="{Kurzt}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text" />
          </template>
        </Column>
      </columns>
    </Table>
  </m:VBox>
</core:FragmentDefinition>