<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">
  <VBox class="portlet portlet-box portlet-p03p04" tooltip="{tooltip}" busy="{busy}" busyIndicatorDelay="0">
    <customData>
      <core:CustomData key="portlet-id" value="{id}" writeToDom="true" />
    </customData>
    <layoutData>
      <f:GridContainerItemLayoutData rows="{height}" columns="{width}" />
    </layoutData>
    <HBox width="100%" class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <layoutData>
        <FlexItemData minHeight="15%" />
      </layoutData>
      <Title level="H2" text="{= ${selectedMembersTab} === 'ORG' ? ${orgMembers/title} : (${selectedMembersTab} === 'MY' ? ${myMembers/title} : '') }" visible="{= !${hideTitle} }" />
      <SegmentedButton selectedKey="{selectedMembersTab}" visible="{= !!${orgMembers} &amp;&amp; !!${orgMembers/active} &amp;&amp; !!${myMembers} &amp;&amp; !!${myMembers/active} }">
        <items>
          <SegmentedButtonItem text="{i18n>LABEL_01201}" key="ORG" visible="{= !!${orgMembers} &amp;&amp; !!${orgMembers/active} }" />
          <SegmentedButtonItem text="{i18n>LABEL_01202}" key="MY" visible="{= !!${myMembers} &amp;&amp; !!${myMembers/active} }" />
        </items>
      </SegmentedButton>
      <Button icon="asset/image/icon_write.png" type="Transparent" class="icon-button" visible="{= !!${myMembers} &amp;&amp; !!${myMembers/active} &amp;&amp; ${selectedMembersTab} === 'MY' }" press=".onPressMyMemberAdd" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button icon="sap-icon://decline" type="Transparent" visible="{switchable}" class="icon-button portlet-close" press=".onPressClose" />
      <Button icon="sap-icon://add" type="Transparent" visible="{hasLink}" class="icon-button" press=".onPressLink" />
    </HBox>
    <ScrollContainer height="85%" vertical="true" visible="{= !!${orgMembers/active} &amp;&amp; ${selectedMembersTab} === 'ORG' }">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <HBox width="100%" height="1.5rem" justifyContent="Center" alignItems="Center" visible="{= ${orgMembers/listCount} === 0 }">
        <Text text="{i18n>MSG_00001}" />
      </HBox>
      <VBox width="100%" items="{orgMembers/list}" visible="{= ${orgMembers/listCount} &gt; 0 }">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
        <HBox height="1.8rem" alignItems="Center" class="portlet-member">
          <Image src="{Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="30px" height="30px" />
          <Text text="{Ename}" wrapping="false" class="portlet-member-name" />
          <Text text="{Zzjikgbt} {Orgtx}" wrapping="false" class="portlet-member-org">
            <layoutData>
              <FlexItemData growFactor="1" />
            </layoutData>
          </Text>
          <Text text="{Atext}" wrapping="false" textAlign="Right" class="portlet-member-status">
            <customData>
              <core:CustomData key="portlet-member-status" value="{Icon}" writeToDom="true" />
            </customData>
          </Text>
        </HBox>
      </VBox>
    </ScrollContainer>
    <ScrollContainer height="85%" vertical="true" visible="{= !!${myMembers/active} &amp;&amp; ${selectedMembersTab} === 'MY' }">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <HBox width="100%" height="1.5rem" justifyContent="Center" alignItems="Center" visible="{= ${myMembers/listCount} === 0 }">
        <Text text="{i18n>MSG_00001}" />
      </HBox>
      <VBox width="100%" items="{myMembers/list}" visible="{= ${myMembers/listCount} &gt; 0 }">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
        <HBox height="1.8rem" alignItems="Center" class="portlet-member">
          <Image src="{Photo}" mode="Background" backgroundPosition="center top" width="1.5rem" height="1.5rem" />
          <Text text="{Ename}" wrapping="false" class="portlet-member-name" />
          <Text text="{Zzjikgbt} {Orgtx}" wrapping="false" class="portlet-member-org">
            <layoutData>
              <FlexItemData growFactor="1" />
            </layoutData>
          </Text>
          <Text text="{Atext}" wrapping="false" textAlign="Right">
            <customData>
              <core:CustomData key="portlet-member-status" value="{Icon}" writeToDom="true" />
            </customData>
          </Text>
          <Button icon="asset/image/icon_remove.png" type="Transparent" class="icon-button portlet-member-remove" press=".onPressMyMemberRemove" />
        </HBox>
      </VBox>
    </ScrollContainer>
  </VBox>
</core:FragmentDefinition>