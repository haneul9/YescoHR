<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">
  <VBox class="portlet portlet-box portlet-p03p04" tooltip="{tooltip}" busy="{busy}" busyIndicatorDelay="0">
    <customData>
      <core:CustomData key="portlet-switchable" value="{switchable}" />
    </customData>
    <layoutData>
      <f:GridContainerItemLayoutData rows="{height}" columns="{width}" />
    </layoutData>
    <HBox class="portlet-header" visible="{= !${hideTitle} || ${switchable} }">
      <Title level="H2" text="{= ${selectedMembersTab} === 'ORG' ? ${orgMembers/title} : (${selectedMembersTab} === 'MY' ? ${myMembers/title} : '') }" visible="{= !${hideTitle} }" />
      <SegmentedButton selectedKey="{selectedMembersTab}" visible="{= !!${orgMembers} &amp;&amp; !!${orgMembers/active} &amp;&amp; !!${myMembers} &amp;&amp; !!${myMembers/active} }">
        <items>
          <SegmentedButtonItem text="{i18n>LABEL_01201}" key="ORG" visible="{= !!${orgMembers} &amp;&amp; !!${orgMembers/active} }" />
          <SegmentedButtonItem text="{i18n>LABEL_01202}" key="MY" visible="{= !!${myMembers} &amp;&amp; !!${myMembers/active} }" />
        </items>
      </SegmentedButton>
      <Button icon="asset/image/icon_write.png" type="Transparent" class="icon-button" visible="{= !!${myMembers} &amp;&amp; !!${myMembers/active} &amp;&amp; ${selectedMembersTab} === 'MY' }" press=".onPressMyMemberAdd" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button icon="sap-icon://decline" type="Transparent" visible="{switchable}" class="icon-button portlet-close-icon" press=".onPressClose" />
      <Button icon="sap-icon://add" type="Transparent" visible="{hasLink}" class="icon-button portlet-link-icon" press=".onPressLink" />
    </HBox>
    <HBox class="portlet-body">
      <ScrollContainer visible="{= !!${orgMembers/active} &amp;&amp; ${selectedMembersTab} === 'ORG' }">
        <layoutData>
          <FlexItemData growFactor="1" maxWidth="100%" />
        </layoutData>
        <HBox width="100%" height="2rem" justifyContent="Center" alignItems="Center" visible="{= ${orgMembers/listCount} === 0 }">
          <Text text="{i18n>MSG_00001}" />
        </HBox>
        <VBox width="100%" items="{orgMembers/list}" visible="{= ${orgMembers/listCount} &gt; 0 }" class="portlet-org-members">
          <HBox width="100%" alignItems="Center">
            <Image src="{Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="30px" height="30px" />
            <Text text="{Ename}" tooltip="{Ename}" wrapping="false" class="portlet-member-name" />
            <Text text="{Zzjikgbt}" tooltip="{Zzjikgbt}" wrapping="false" class="portlet-member-position" />
            <Text text="{Orgtx}" tooltip="{Orgtx}" wrapping="false" class="portlet-member-org">
              <layoutData>
                <FlexItemData growFactor="1" />
              </layoutData>
            </Text>
            <Text text="{Atext}" tooltip="{Atext}" wrapping="false" class="portlet-member-status">
              <customData>
                <core:CustomData key="portlet-member-status" value="{Icon}" writeToDom="true" />
              </customData>
            </Text>
          </HBox>
        </VBox>
      </ScrollContainer>
      <ScrollContainer visible="{= !!${myMembers/active} &amp;&amp; ${selectedMembersTab} === 'MY' }">
        <layoutData>
          <FlexItemData growFactor="1" maxWidth="100%" />
        </layoutData>
        <HBox width="100%" height="2rem" justifyContent="Center" alignItems="Center" visible="{= ${myMembers/listCount} === 0 }">
          <Text text="{i18n>MSG_00001}" />
        </HBox>
        <VBox width="100%" items="{myMembers/list}" visible="{= ${myMembers/listCount} &gt; 0 }" class="portlet-my-members">
          <HBox width="100%" alignItems="Center">
            <Image src="{Photo}" mode="Background" backgroundPosition="center top" class="member-photo" width="30px" height="30px" />
            <Text text="{Ename}" tooltip="{Ename}" wrapping="false" class="portlet-member-name" />
            <Text text="{Zzjikgbt}" tooltip="{Zzjikgbt}" wrapping="false" class="portlet-member-position" />
            <Text text="{Orgtx}" tooltip="{Orgtx}" wrapping="false" class="portlet-member-org">
              <layoutData>
                <FlexItemData growFactor="1" />
              </layoutData>
            </Text>
            <Text text="{Atext}" tooltip="{Atext}" wrapping="false" class="portlet-member-status">
              <customData>
                <core:CustomData key="portlet-member-status" value="{Icon}" writeToDom="true" />
              </customData>
            </Text>
            <Button icon="asset/image/icon_remove.png" type="Transparent" class="icon-button portlet-member-remove" press=".onPressMyMemberRemove" />
          </HBox>
        </VBox>
      </ScrollContainer>
    </HBox>
  </VBox>
</core:FragmentDefinition>