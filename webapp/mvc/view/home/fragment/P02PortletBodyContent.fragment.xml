<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox class="mt-10-px">
    <layoutData>
      <FlexItemData growFactor="1" maxWidth="100%" />
    </layoutData>
    <ScrollContainer>
      <HBox width="100%" class="no-data" visible="{= ${listCount} === 0 }">
        <Text text="{i18n>MSG_00001}" />
      </HBox>
      <HBox width="100%" visible="{= ${listCount} &gt; 0 }">
        <VBox items="{list}" width="55%">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
          <HBox width="100%" height="2rem" alignItems="Center">
            <Link text="{Title}" tooltip="{Title}" subtle="true" press=".onPressNoticeArticle">
              <layoutData>
                <FlexItemData maxWidth="100%" />
              </layoutData>
            </Link>
          </HBox>
        </VBox>
        <VBox items="{list}" width="23%">
          <HBox height="2rem" alignItems="Center" class="pl-5-px">
            <Text text="{ path: 'Sdate', type: 'sap.ui.yesco.mvc.model.type.Date' }" wrapping="false" />
          </HBox>
        </VBox>
        <VBox items="{list}" width="14%" visible="{= ${newCount} &gt; 0 }">
          <HBox height="2rem" justifyContent="End" alignItems="Center">
            <!-- <Image src="asset/image/icon_new.png" tooltip="{i18n>LABEL_00105}" visible="{= ${Newitem} === 'X' }" /> -->
            <Text text="NEW" wrapping="false" visible="{= ${Newitem} === 'X' }" class="icon-mimic" />
          </HBox>
        </VBox>
        <VBox items="{list}" width="8%" visible="{= ${importantCount} &gt; 0 }">
          <HBox height="2rem" justifyContent="End" alignItems="Center">
            <core:Icon src="sap-icon://notification" tooltip="{i18n>LABEL_00178}" size="15px" color="{= ${Impor} === 'X' ? '#387fe9' : 'transparent' }" />
          </HBox>
        </VBox>
      </HBox>
    </ScrollContainer>
  </VBox>
</core:FragmentDefinition>