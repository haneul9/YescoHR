      <HBox justifyContent="SpaceBetween" class="title">
        <Title level="H2" text="{i18n>LABEL_24002}" />
      </HBox>
      <Text text="{i18n>MSG_24003}" class="sapUiSmallMarginBottom" />
      <HBox class="mt-50-px">
        <VBox width="33%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_02003}" />
          <ObjectStatus text="{ path: '/Total/Count', formatter: '.formatNumber' }" state="Indication05" />
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_00174}" />
