<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox summary-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
        <VBox>
            <HBox justifyContent="SpaceBetween" class="title">
                <Title level="H2" text="{i18n>LABEL_24002}" />
            </HBox>
            <HBox>
                <VBox width="33%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_02003}" />
                    <ObjectStatus text="{
                        path: '/Total/Count',
                        formatter: '.formatNumber'
                    }" state="Indication04" />
                </VBox>
                <VBox class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_00174}" />
                    <ObjectStatus text="{
                        path: '/Total/Pay',
                        formatter: '.formatPay'
                    }" state="Indication04" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>