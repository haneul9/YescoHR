<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <Popover id="awartPopover" showHeader="false" contentMinWidth="200px" class="awart-popover">
        <grid:CSSGrid gridTemplateColumns="1fr" gridRowGap="10px" items="{/entry/AwartList}">
            <CheckBox text="{Atext}" selected="{selected}" select=".onSelectedAwart">
                <customData>
                    <core:CustomData key="Awart" value="{Awart}" writeToDom="true" />
                </customData>
            </CheckBox>
        </grid:CSSGrid>
    </Popover>
</core:FragmentDefinition>