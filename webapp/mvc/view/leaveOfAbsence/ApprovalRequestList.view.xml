        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.leaveOfAbsence.fragment.SearchBox" type="XML" />
      </HBox>
      <VBox class="vCardBox">
        <core:Fragment fragmentName="sap.ui.yesco.fragment.approvalRequest.ListTableHeader" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.leaveOfAbsence.fragment.ApprovalRequestListTable" type="XML" />
