<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox binding="{/overview}" busy="{busy}" busyIndicatorDelay="0" class="hCardBox overview-box leave-of-absence">
    <HBox alignItems="Baseline" class="title">
      <Title level="H2" text="{i18n>MSG_50001}" />
      <Text text="{i18n>LABEL_50002}" class="sapUiSmallMarginBegin" />
    </HBox>
    <HBox alignItems="End" visible="{= ${Absck} === 'X' }">
      <Text text="{Line1}">
        <layoutData>
          <FlexItemData styleClass="loa-name" />
        </layoutData>
      </Text>
      <Text text="{= !!${Line2} ? ${i18n>MSG_50002} : '' }">
        <layoutData>
          <FlexItemData styleClass="loa-name-suffix" />
        </layoutData>
      </Text>
    </HBox>
    <Text text="{Line1}" visible="{= ${Absck} !== 'X' }">
      <layoutData>
        <FlexItemData styleClass="loa-no-data" growFactor="1" />
      </layoutData>
    </Text>
    <Text text="{Line2}" visible="{= !!${Line2} }">
      <layoutData>
        <FlexItemData styleClass="loa-period" />
      </layoutData>
    </Text>
    <Text text="{Line3}" visible="{= !!${Line3} }">
      <layoutData>
        <FlexItemData styleClass="loa-countdown" />
      </layoutData>
    </Text>
    <Text text="{Line4}" visible="{= !!${Line4} }">
      <layoutData>
        <FlexItemData styleClass="loa-recommend" />
      </layoutData>
    </Text>
  </VBox>
</core:FragmentDefinition>