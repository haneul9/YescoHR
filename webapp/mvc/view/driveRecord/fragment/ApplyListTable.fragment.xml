<core:FragmentDefinition xmlns="sap.m"
  xmlns:table="sap.ui.table"
  xmlns:core="sap.ui.core">
  <table:Table id="driveTable" rows="{/list}" visibleRowCount="{/listInfo/rowCount}" width="100%" selectionMode="None" columnHeaderHeight="45" rowHeight="44" busyIndicatorDelay="0" busy="{/busy}" noData="{i18n>MSG_00001}">
    <table:columns>
      <table:Column width="auto">
        <Label text="{i18n>LABEL_34006}"/>
        <table:template>
          <Text text="{ path: 'Datum', type: 'sap.ui.yesco.mvc.model.type.Date' }" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
        </table:template>
      </table:Column>
      <table:Column width="6%">
        <Label text="{i18n>LABEL_00350}"/>
        <table:template>
          <ObjectStatus text="{Daytx}" state="{= ${Offyn} === 'X' ? 'Error' : 'None'}" class="table-object-status" />
        </table:template>
      </table:Column>
      <table:Column width="12%">
        <Label text="{i18n>LABEL_25005}"/>
        <table:template>
          <Text text="{Carno}" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
        </table:template>
      </table:Column>
      <table:Column width="auto">
        <Label text="{i18n>LABEL_34003}"/>
        <table:template>
          <Input maxLength="11" value="{ path: 'Drvkma', type: 'sap.ui.yesco.mvc.model.type.Currency' }" liveChange=".onChangeMileageFormat" />
        </table:template>
      </table:Column>
      <table:Column width="auto">
        <Label text="{i18n>LABEL_34004}"/>
        <table:template>
          <Input maxLength="11" value="{ path: 'Drvkmb', type: 'sap.ui.yesco.mvc.model.type.Currency' }" liveChange=".onChangeMileageFormat"/>
        </table:template>
      </table:Column>
      <table:Column width="auto">
        <Label text="{i18n>LABEL_34007}"/>
        <table:template>
          <Text text="{ path: 'Drvkm', type: 'sap.ui.yesco.mvc.model.type.Currency' }" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
        </table:template>
      </table:Column>
      <table:Column width="auto">
        <Label text="{i18n>LABEL_34008}"/>
        <table:template>
          <Text text="{ path: 'Begkm', type: 'sap.ui.yesco.mvc.model.type.Currency' }" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
        </table:template>
      </table:Column>
      <table:Column width="auto">
        <Label text="{i18n>LABEL_34010}"/>
        <table:template>
          <Text text="{ path: 'Endkm', type: 'sap.ui.yesco.mvc.model.type.Currency' }" textAlign="Center" wrapping="false" width="100%" class="tableRow_Text"/>
        </table:template>
      </table:Column>
      <table:Column width="20%" sortProperty="Zbigo" filterProperty="Zbigo">
        <Label text="{i18n>LABEL_00163}"/>
        <table:template>
          <Input maxLength="100" value="{Bigo}" />
        </table:template>
      </table:Column>
    </table:columns>
  </table:Table>
</core:FragmentDefinition>