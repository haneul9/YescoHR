<mvc:View controllerName="sap.ui.yesco.mvc.controller.organization.mobile.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page enableScrolling="false" showNavButton="{menuModel>/current/hasPrevious}" title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
        <VBox class="contents">
            <FlexBox id="ChartHolder" class="org-chart-container" width="100%" height="100%" alignItems="Start" justifyContent="Center" busyIndicatorDelay="0">
                <customData>
                    <core:CustomData key="layout" value="{/layout}" writeToDom="true" />
                </customData>
            </FlexBox>
        </VBox>
        <footer class="wrap">
            <OverflowToolbar>
                <Button type="Emphasized" class="sapUiTinyMarginEnd" text="Swap" press=".onPressSwapBtn">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                </Button>
                <ComboBox items="{/entry/Werks}" selectedKey="{/search/Werks}" change=".onChangeWerks">
                    <core:Item text="{Pbtxt}" key="{Werks}" />
                </ComboBox>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>