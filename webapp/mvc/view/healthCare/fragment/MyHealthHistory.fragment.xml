<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox overview-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <HBox justifyContent="SpaceBetween" class="title">
        <Title level="H2" text="{i18n>LABEL_21002}" />
      </HBox>
      <Text text="{ path: '/Total/Zyear', formatter: '.thisYear' }" class="sapUiSmallMarginBottom" />
      <HBox class="mt-50-px">
        <VBox width="30%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_21005}" />
          <ObjectStatus text="{ path: '/Total/HealthTot', formatter: '.formatNumber' }" state="Indication05" />
        </VBox>
        <VBox width="30%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_21006}" />
          <ObjectStatus text="{ path: '/Total/HealthIng', formatter: '.formatNumber' }" state="Indication05" />
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_00117}" />
          <ObjectStatus text="{ path: '/Total/HealthCom', formatter: '.formatNumber' }" state="Indication05" />
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>