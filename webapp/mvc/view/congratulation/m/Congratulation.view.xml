<mvc:View controllerName="sap.ui.yesco.mvc.controller.congratulation.m.Congratulation"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<VBox>
			<Table id="conguTable" items="{/CongList}" itemPress=".onSelectRow">
				<headerToolbar>
					<OverflowToolbar>
						<!-- <ToolbarSpacer/> -->
						<Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onClick" />
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="50%" />
					<Column width="auto" />
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<VBox>
								<Text text="{Conretx}"/>
							</VBox>
							<VBox>
								<Text text="{Famtx}"/>
								<Text text="{
									path: 'Conddate',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										pattern: 'yyyy.MM.dd'
									}
								}"/>
								<ObjectStatus text="{
									path: 'ZappStxtAl',
									formatter: '.formatNumber'
								}" state="Indication04" />
							</VBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
	</Page>
</mvc:View>