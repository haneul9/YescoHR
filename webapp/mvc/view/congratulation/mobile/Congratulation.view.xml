<mvc:View controllerName="sap.ui.yesco.mvc.controller.congratulation.mobile.Congratulation"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page navButtonPress=".onNavBack">
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" />
      <mobile:ScrollContainer>
        <mobile:List items="{/CongList}">
          <mobile:CustomListItem press=".onSelectRow">
            <mobile:ApprovalRequestListItemBox>              <!-- statusFieldName="ZappStatAl" -->
              <mobile:ListCSSGrid gridTemplateColumns="1fr 1fr">
                <Text text="{Conretx}" class="emphasized" />
                <Text text="{Famtx}" />
                <Text text="{Zname}" />
                <Text text="{ path: 'Conddate', type: 'sap.ui.yesco.mvc.model.type.Date' }" />
              </mobile:ListCSSGrid>
            </mobile:ApprovalRequestListItemBox>
          </mobile:CustomListItem>
        </mobile:List>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <mobile:ApprovalRequestListFooterToolbar pressRequestNew=".onClick" />
    </mobile:footer>
  </mobile:Page>
</mvc:View>