<mvc:View controllerName="sap.ui.yesco.mvc.controller.congratulation.mobile.Congratulation"
	xmlns="sap.m"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:core="sap.ui.core"
	xmlns:custom="sap.ui.yesco.control"
	xmlns:mvc="sap.ui.core.mvc">
	<Page enableScrolling="false" showNavButton="{menuModel>/current/hasPrevious}" title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
		<VBox>
			<core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" />
			<custom:MobileScrollContainer horizontal="false" vertical="true">
				<List items="{path: '/CongList'}" busyIndicatorDelay="0" busy="{/busy}">
					<CustomListItem type="Active" press=".onSelectRow">
						<grid:CSSGrid gridTemplateColumns="2fr 2fr 1fr" gridGap="1px 0">
							<Text text="{Conretx}"/>
							<Text text="{Famtx}"/>
							<core:Icon src="sap-icon://circle-task-2" width="16px" height="16px" class="pr-5-px">
								<core:customData>
									<core:CustomData key="status" value="Z{ZappStatAl}" writeToDom="true" />
								</core:customData>
							</core:Icon>
							<Text text="{Zname}"/>
							<Text text="{
								path: 'Conddate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {
										pattern: 'yyyy.MM.dd'
								}
							}"/>
							<Text text="{
									path: 'ZappStatAl',
									formatter: '.TableUtils.StatusTxt'
								}" class="sapMText">
								<customData>
									<core:CustomData key="status" value="Z{ZappStatAl}" writeToDom="true" />
								</customData>
							</Text>
						</grid:CSSGrid>
					</CustomListItem>
				</List>
			</custom:MobileScrollContainer>
		</VBox>
		<footer>
			<OverflowToolbar>
				<Button text="{i18n>LABEL_00121}" type="Emphasized" width="100%" press=".onClick">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>