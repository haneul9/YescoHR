<mvc:View controllerName="sap.ui.yesco.mvc.controller.congratulation.mobile.CongDetail"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control">
  <Page enableScrolling="false" floatingFooter="true" showNavButton="{menuModel>/current/hasPrevious}" title="{menuModel>/current/currentLocationText}" navButtonPress=".onNavBack">
    <customData>
      <core:CustomData key="form-style" value="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} ? 'request' : 'retrieval' }" writeToDom="true" />
    </customData>
    <VBox class="contents">
      <custom:MobileScrollContainer horizontal="false" vertical="true" excludeBottomSelector=".sapMPageFooter">
        <VBox busyIndicatorDelay="0" busy="{/busy}" class="wrap">
          <Title level="H2" text="경조금 신청서" />
          <grid:CSSGrid gridTemplateColumns="2fr 3fr" gridGap="6px 0" class="form-grid">
            <Label text="{i18n>LABEL_02013}"/>
            <VBox>
              <ComboBox id="BenefitType" items="{/BenefitType}" selectedKey="{/FormData/Concode}" change="onTypeChange" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
                <core:Item text="{Ztext}" key="{Zcode}" />
              </ComboBox>
            </VBox>
            <Label text="{i18n>LABEL_02008}"/>
            <VBox>
              <ComboBox id="BenefitCause" items="{/BenefitCause}" selectedKey="{/FormData/Conresn}" change=".onCauseChange" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
                <core:Item text="{Ztext}" key="{Zcode}" />
              </ComboBox>
            </VBox>
            <Label text="{i18n>LABEL_02015}"/>
            <VBox>
              <ComboBox id="BenefitRelation" change=".onRelationChange" items="{/BenefitRelation}" selectedKey="{/FormData/Kdsvh}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }">
                <core:Item text="{Ztext}" key="{Zcode}" />
              </ComboBox>
            </VBox>
            <Label text="{i18n>LABEL_02017}"/>
            <VBox>
              <Input id="RelationTxt" showValueHelp="true" valueHelpRequest=".onTargetDialog" value="{/FormData/Zname}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
            </VBox>
            <Label text="{i18n>LABEL_02014}"/>
            <VBox>
              <custom:DatePicker id="BirthDatePicker" maxDate="{/BirthMaxDate}" change=".onBirthDate" dateValue="{ path: '/FormData/Zbirthday', type: 'sap.ui.yesco.mvc.model.type.Date' }" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
            </VBox>
            <Label text="{i18n>LABEL_02009}"/>
            <VBox>
              <custom:DatePicker dateValue="{ path: '/FormData/Conddate', type: 'sap.ui.yesco.mvc.model.type.Date' }" change=".onBenefitChangeDate" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
            </VBox>
            <Label text="{i18n>LABEL_02016}"/>
            <VBox>
              <Input value="{/FormData/Zeloc}" editable="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
            </VBox>
            <Label text="{i18n>LABEL_02021}"/>
            <VBox>
              <Text text="{
                  path: '/FormData/Zflower',
                  formatter: '.formatFlowerTxt'
                }"/>
            </VBox>
            <Label text="{i18n>LABEL_02018}"/>
            <VBox>
              <Text text="{/FormData/ZbacBetT}"/>
            </VBox>
            <Label text="{i18n>LABEL_02019}"/>
            <VBox>
              <Text text="{/FormData/PayrtT}"/>
            </VBox>
            <Label text="{i18n>LABEL_02020}"/>
            <VBox>
              <Text text="{/FormData/ZpayBetT}"/>
            </VBox>
          </grid:CSSGrid>
          <core:Fragment fragmentName="sap.ui.yesco.fragment.CommonAttachFile" type="XML" />
        </VBox>
      </custom:MobileScrollContainer>
    </VBox>
    <footer>
      <OverflowToolbar>
        <Button text="{i18n>LABEL_00104}" type="Emphasized" press=".onSaveBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
        <Button text="{i18n>LABEL_00121}" type="Emphasized" press=".onApplyBtn" visible="{= ${/FormData/ZappStatAl} === '10' || !${/FormData/ZappStatAl} }" />
        <Button text="{i18n>LABEL_00118}" type="Default" press=".onCancelBtn" visible="{= ${/FormData/ZappStatAl} === '20' }" class="sapUiTinyMarginEnd" />
        <Button text="{i18n>LABEL_00110}" type="Reject" press=".onDeleteBtn" visible="{= ${/FormData/ZappStatAl} === '10' || ${/FormData/ZappStatAl} === '45' }" />
      </OverflowToolbar>
    </footer>
  </Page>
</mvc:View>