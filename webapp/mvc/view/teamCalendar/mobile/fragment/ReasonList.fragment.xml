  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="section m-0-px px-10-px" busyIndicatorDelay="0" busy="{/busy/Detail}">
    <custom:HeaderTitleCountMessage title="{i18n>LABEL_37004}" infoMessage="{/detail/displayDate}" class="title-bar" />
    <custom:MobileEmployeeList items="{/detail/list}" photo="PicUrl" name="Ename" rank="Zzjikgbtx" department="Orgtx" doubleLine="true" itemPress=".navToIndividualAttendance">
      <CustomListItem>
        <VBox>
          <Text text="{Atext}" class="font-bold" />
          <Text text="{Tmprd}" class="font-bold" />
        </VBox>
      </CustomListItem>
    </custom:MobileEmployeeList>
  </VBox>
</core:FragmentDefinition>