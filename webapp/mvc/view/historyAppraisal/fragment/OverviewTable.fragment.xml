                <table:template>
                    <Text text="{Orgtx}" width="100%" textAlign="Center" wrapping="false" class="tableRow_Text" />
                </table:template>
            </table:Column>
            <table:Column width="auto" filterProperty="Dettx" sortProperty="Appty">
                <Label text="{i18n>LABEL_10006}"/>
