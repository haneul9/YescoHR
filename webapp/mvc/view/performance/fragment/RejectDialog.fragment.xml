<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="rejectDialog" showHeader="false" contentWidth="600px">
        <buttons>
            <Button type="Emphasized" text="{i18n>LABEL_00124}" enabled="{= !!${/buttons/Rjctrin} }" visible="{= ${/buttons/isRejectProcess} }" press=".onPressRejectDialogSave"/>
            <Button text="{i18n>LABEL_00115}" press=".onPressRejectDialogClose"/>
        </buttons>
        <Panel expanded="true" headerText="{i18n>LABEL_00142}">
            <content>
                <VBox>
                    <TextArea width="100%" value="{/buttons/Rjctr}" growing="true" growingMaxLines="35" editable="false" visible="{= !${/buttons/isRejectProcess} }" />
                    <TextArea width="100%" value="{/buttons/Rjctrin}" rows="10" maxLength="{/fieldControl/limit/Rjctrin}" visible="{= ${/buttons/isRejectProcess} }" />
                </VBox>
            </content>
        </Panel>
    </Dialog>
</core:FragmentDefinition>