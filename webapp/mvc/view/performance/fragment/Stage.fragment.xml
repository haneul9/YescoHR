<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Panel expandable="true" expanded="true">
        <layoutData>
            <FlexItemData growFactor="1" />
        </layoutData>
        <headerToolbar>
            <Toolbar width="100%" height="60px">
                <HBox width="100%" items="{/stage/headers}">
                    <VBox width="{width}">
                        <Title level="H4" text="{label}">
                            <customData>
                                <core:CustomData key="color" value="{completed}" writeToDom="true" />
                            </customData>
                        </Title>
                        <core:Icon src="{icon}" size="2rem" width="18%" color="{completed}" />
                    </VBox>
                </HBox>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox width="100%">
                <VBox width="18.9%" />
                <VBox width="21.3%" items="{/stage/rows/10}">
                    <HBox>
                        <core:Icon src="sap-icon://arrow-down" color="{completed}" />
                        <Text text="{label}">
                            <customData>
                                <core:CustomData key="color" value="{completed}" writeToDom="true" />
                            </customData>
                        </Text>
                    </HBox>
                </VBox>
                <VBox width="21.5%" items="{/stage/rows/20}">
                    <HBox>
                        <core:Icon src="sap-icon://arrow-down" color="{completed}" />
                        <Text text="{label}">
                            <customData>
                                <core:CustomData key="color" value="{completed}" writeToDom="true" />
                            </customData>
                        </Text>
                    </HBox>
                </VBox>
                <VBox width="21.4%" items="{/stage/rows/30}">
                    <HBox>
                        <core:Icon src="sap-icon://arrow-down" color="{completed}" />
                        <Text text="{label}">
                            <customData>
                                <core:CustomData key="color" value="{completed}" writeToDom="true" />
                            </customData>
                        </Text>
                    </HBox>
                </VBox>
                <VBox items="{/stage/rows/40}">
                    <HBox>
                        <core:Icon src="sap-icon://arrow-down" color="{completed}" />
                        <Text text="{label}">
                            <customData>
                                <core:CustomData key="color" value="{completed}" writeToDom="true" />
                            </customData>
                        </Text>
                    </HBox>
                </VBox>
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>