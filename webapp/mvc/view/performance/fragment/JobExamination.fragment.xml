<core:FragmentDefinition xmlns="sap.m"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:core="sap.ui.core">
	<Dialog id="examDialog" title="{/year} {i18n>LABEL_10034}" contentWidth="1300px" contentHeight="650px">
		<buttons>
			<Button text="{i18n>LABEL_00103}" type="Emphasized" press=".onExSaveBtn" />
			<Button text="{i18n>LABEL_00117}" type="Emphasized" press=".onExCompleteBtn" />
			<Button text="{i18n>LABEL_00115}" press=".onDialogClose" />
		</buttons>
		<content>
			<VBox class="vCardBox">
				<grid:CSSGrid gridGap="1px" class="form-grid type-job" gridTemplateColumns="1fr 2fr 3fr 4fr" items="{/jobDiagnosis/deep}">
					<VBox>
						<HBox visible="{= !!${bTitle} &amp;&amp; !${bSubTitle} }">
							<Label text="{label}" width="100%" textAlign="Center" />
						</HBox>
						<HBox visible="{= !${bTitle} &amp;&amp; !!${bSubTitle} }">
							<Text text="{label}" width="100%" textAlign="Center">
								<layoutData>
									<grid:GridItemLayoutData gridRow="{spanCount}" />
								</layoutData>
							</Text>
						</HBox>
						<HBox visible="{= !${bTitle} &amp;&amp; !${bSubTitle} }">
							<Text text="{Zzjaitmtx}" width="100%" textAlign="Center" />
							<ComboBox items="{/jobDiagnosis/codeList1}" visible="{= ${Zcode} !== '90' }" selectedKey="{Zzjarst}" class="required">
								<core:Item text="{Ztext}" key="{Zcode}" />
							</ComboBox>
							<Input value="{Zzjarsttx}" visible="{= ${Zcode} === '90' }" showValueHelp="true" valueHelpOnly= "true" valueHelpRequest=".onJobSearch" class="required" />
							<TextArea class="required" value="{Zbigo}" width="100%" maxLength="{/fieldControl/limit/Z131}" />
						</HBox>
					</VBox>
				</grid:CSSGrid>
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>