<core:FragmentDefinition xmlns="sap.m"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:core="sap.ui.core">
	<Dialog id="examDialog" title="{/year} {i18n>LABEL_10034}" contentWidth="1300px" contentHeight="650px">
		<buttons>
			<Button text="{i18n>LABEL_00103}" type="Emphasized" press=".onExSaveBtn" />
			<Button text="{i18n>LABEL_00117}" type="Emphasized" press=".onExCompleteBtn" />
			<Button text="{i18n>LABEL_00115}" press=".onDialogClose" />
		</buttons>
		<content>
			<VBox class="vCardBox">
				<grid:CSSGrid gridGap="1px" class="form-grid type-job" gridTemplateColumns="1fr 2fr 3fr 4fr" items="{/jobDiagnosis/deep}">
					<HBox>
						<Label text="{title}" visible="{= ${type} === 'title' }" width="100%" textAlign="Center" />
						<Text text="{label}" visible="{= ${type} === 'label' }" width="100%" textAlign="Center">
							<layoutData>
								<grid:GridItemLayoutData gridRow="span {spanCount}" />
							</layoutData>
						</Text>
						<Text text="{subLabel}" visible="{= ${type} === 'subLabel' }" width="100%" textAlign="Center" />
						<ComboBox items="{/jobDiagnosis/codeList1}" visible="{= ${Zcode} !== '90' &amp;&amp; ${type} === 'value' }" selectedKey="{value}" class="required">
							<core:Item text="{Ztext}" key="{Zcode}" />
						</ComboBox>
						<Input value="{value}" visible="{= ${Zcode} === '90' &amp;&amp; ${type} === 'value' }" showValueHelp="true" valueHelpOnly= "true" valueHelpRequest=".onJobSearch" class="required" />
						<TextArea class="required" value="{area}" visible="{= ${type} === 'area' }" width="100%" maxLength="{/fieldControl/limit/Z131}" />
					</HBox>
				</grid:CSSGrid>
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>