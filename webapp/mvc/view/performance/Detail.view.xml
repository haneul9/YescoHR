<mvc:View controllerName="sap.ui.yesco.mvc.controller.performance.Detail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:custom="sap.ui.yesco.control">
	<Page showHeader="false">
		<VBox class="contents-header">
			<HBox justifyContent="SpaceBetween" class="breadcrumbs">
				<custom:Breadcrumbs />
				<HBox>
					<Button text="{i18n>LABEL_00146}" class="sapUiTinyMarginEnd" press=".onNavBack" />
					<Button icon="sap-icon://print" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" />
					<Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" />
				</HBox>
			</HBox>
		</VBox>
		<VBox class="contents">
			<core:Fragment fragmentName="sap.ui.yesco.fragment.AppointeeBar" type="XML" />
			<VBox class="vCardBox">
				<HBox>
					<HBox alignItems="Center" class="title">
						<Title level="H2" text="{/year} {i18n>LABEL_10006}" />
					</HBox>
				</HBox>
				<HBox>
					<core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.Stage" type="XML" />
				</HBox>
			</VBox>
			<HBox>
				<IconTabBar class="type-b" selectedKey="{/tab/selectedKey}" expandable="false">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
					<items>
						<IconTabFilter text="{i18n>LABEL_10009}" key="T01">
							<VBox class="vCardBox">
								<HBox>
									<HBox alignItems="Center" class="title">
										<Title level="H2" text="{i18n>LABEL_10007}" class="sapUiMediumMarginEnd"/>
										<Button icon="sap-icon://sys-add" text="{i18n>LABEL_10011}" press=".onPressAddStrategy" />
									</HBox>
								</HBox>
								<VBox items="{/goals/strategy}">
									<core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.GoalItem" type="XML" />
								</VBox>
							</VBox>
							<VBox class="vCardBox sapUiSmallMarginTop">
								<HBox>
									<HBox alignItems="Center" class="title">
										<Title level="H3" text="{i18n>LABEL_10008}" />
										<Button icon="sap-icon://sys-add" text="{i18n>LABEL_10011}" press=".onPressAddDuty" />
									</HBox>
								</HBox>
								<VBox items="{/goals/duty}">
									<core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.GoalItem" type="XML" />
								</VBox>
							</VBox>
							<HBox class="vCardBox sapUiSmallMarginTop">
								<grid:CSSGrid gridGap="1px 0" class="form-grid" gridTemplateColumns="1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr">
									<VBox>
										<Label text="{i18n>LABEL_10012}" visible="{= ${/fieldControl/Zmepoint} !== 'H' }"/>
									</VBox>
									<VBox>
										<Input class="required" value="{ path: '/summary/Zmepoint', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 1 } }" editable="{= ${/fieldControl/Zmepoint} === 'X' }" visible="{= ${/fieldControl/Zmepoint} !== 'H' }"/>
									</VBox>
									<VBox>
										<Label text="{i18n>LABEL_10013}" visible="{= ${/fieldControl/Zmapoint} !== 'H' }"/>
									</VBox>
									<VBox>
										<Input class="required" value="{ path: '/summary/Zmapoint', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 1 } }" editable="{= ${/fieldControl/Zmapoint} === 'X' }" visible="{= ${/fieldControl/Zmapoint} !== 'H' }"/>
									</VBox>
									<VBox>
										<Label text="{i18n>LABEL_10014}" visible="{= ${/fieldControl/Zmbgrade} !== 'H' }"/>
									</VBox>
									<VBox>
										<ComboBox class="required" selectedKey="{/summary/Zmbgrade}" items="{ path: '/entry/grades', templateShareable: true }" editable="{= ${/fieldControl/Zmbgrade} === 'X' }" visible="{= ${/fieldControl/Zmbgrade} !== 'H' }">
											<core:Item key="{code}" text="{value}" />
										</ComboBox>
									</VBox>
									<HBox />
									<HBox />
								</grid:CSSGrid>
							</HBox>
						</IconTabFilter>
						<IconTabFilter text="{i18n>LABEL_10010}" key="T02">
							<VBox class="vCardBox">
								<grid:CSSGrid gridGap="6px" class="form-grid type-b" gridTemplateColumns="1fr 2fr 2fr">
									<Label text="{i18n>LABEL_00147}" width="100%" textAlign="Center" />
									<Label text="{i18n>LABEL_10015}" width="100%" textAlign="Center" />
									<Label text="{i18n>LABEL_10016}" width="100%" textAlign="Center" />
									<Label text="{i18n>LABEL_10017}" width="100%" textAlign="Center" visible="{= ${/fieldControl/Z131} !== 'H' || ${/fieldControl/Z132} !== 'H' }" />
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Z131}" width="100%" editable="{= ${/fieldControl/Z131} === 'X' }" visible="{= ${/fieldControl/Z131} !== 'H' }" />
									</VBox>
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Z132}" width="100%" editable="{= ${/fieldControl/Z132} === 'X' }" visible="{= ${/fieldControl/Z132} !== 'H' }" />
									</VBox>
									<Label text="{i18n>LABEL_10018}" width="100%" textAlign="Center" visible="{= ${/fieldControl/Z136} !== 'H' || ${/fieldControl/Z137} !== 'H' }" />
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Z136}" width="100%" editable="{= ${/fieldControl/Z136} === 'X' }" visible="{= ${/fieldControl/Z136} !== 'H' }" />
									</VBox>
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Z137}" width="100%" editable="{= ${/fieldControl/Z137} === 'X' }" visible="{= ${/fieldControl/Z137} !== 'H' }" />
									</VBox>
									<Label text="{i18n>LABEL_10019}" width="100%" textAlign="Center" />
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo5}" width="100%" />
									</VBox>
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo6}" width="100%" />
									</VBox>
								</grid:CSSGrid>
							</VBox>
							<VBox class="vCardBox sapUiSmallMarginTop" visible="{= ${/fieldControl/Z140} !== 'H' }">
								<HBox alignItems="Center" class="title">
									<layoutData>
										<FlexItemData growFactor="1"/>
									</layoutData>
									<Title level="H2" text="{i18n>LABEL_10010}" />
								</HBox>
								<TextArea width="100%" growing="true" growingMaxLines="10" value="{/manage/Z140}" editable="{= ${/fieldControl/Z140} === 'X' }" />
							</VBox>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</HBox>
		</VBox>
	</Page>
</mvc:View>