<mvc:View controllerName="sap.ui.yesco.mvc.controller.performance.Detail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:custom="sap.ui.yesco.control">
	<Page showHeader="false">
		<VBox class="contents-header">
			<HBox justifyContent="SpaceBetween" class="breadcrumbs">
				<custom:Breadcrumbs />
				<HBox>
					<Button text="{i18n>LABEL_00146}" class="sapUiTinyMarginEnd" press=".onNavBack" />
					<Button icon="sap-icon://print" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" />
					<Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" />
				</HBox>
			</HBox>
		</VBox>
		<VBox class="contents">
			<core:Fragment fragmentName="sap.ui.yesco.fragment.AppointeeBar" type="XML" />
			<VBox class="vCardBox">
				<HBox>
					<HBox alignItems="Center" class="title">
						<Title level="H2" text="{/year} {i18n>LABEL_10006}" />
					</HBox>
				</HBox>
				<HBox>
					<core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.Stage" type="XML" />
				</HBox>
			</VBox>
			<HBox>
				<IconTabBar class="type-b" selectedKey="{/tab/selectedKey}" expandable="false">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
					<items>
						<IconTabFilter text="{i18n>LABEL_10009}" key="T01">
							<VBox class="vCardBox">
								<HBox>
									<HBox alignItems="Center" class="title">
										<Title level="H2" text="{i18n>LABEL_10007}" class="sapUiMediumMarginEnd"/>
										<Button icon="sap-icon://sys-add" text="목표추가" press=".onPressAddStrategy" />
									</HBox>
								</HBox>
								<VBox items="{/strategy}">
									<core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.GoalItem" type="XML" />
								</VBox>
							</VBox>
							<VBox class="vCardBox sapUiSmallMarginTop">
								<HBox>
									<HBox alignItems="Center" class="title">
										<Title level="H3" text="{i18n>LABEL_10008}" />
										<Button icon="sap-icon://sys-add" text="목표추가" press=".onPressAddDuty" />
									</HBox>
								</HBox>
								<VBox items="{/duty}">
									<core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.GoalItem" type="XML" />
								</VBox>
							</VBox>
							<HBox class="vCardBox sapUiSmallMarginTop">
								<grid:CSSGrid gridGap="1px 0" class="form-grid" gridTemplateColumns="1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr">
									<Label text="자기 평가점수" />
									<VBox>
										<Input class="required" value="{/summary/Todo1}" />
									</VBox>
									<Label text="1차 평가점수" />
									<VBox>
										<Input class="required" value="{/summary/Todo2}" />
									</VBox>
									<Label text="최종 평가등급" />
									<VBox>
										<Input class="required" value="{/summary/Todo3}" />
									</VBox>
									<HBox />
									<HBox />
								</grid:CSSGrid>
							</HBox>
						</IconTabFilter>
						<IconTabFilter text="{i18n>LABEL_10010}" key="T02">
							<VBox class="vCardBox">
								<grid:CSSGrid gridGap="6px" class="form-grid type-b" gridTemplateColumns="1fr 2fr 2fr">
									<Label text="구분" width="100%" textAlign="Center" />
									<Label text="평가 대상자" width="100%" textAlign="Center" />
									<Label text="1차 평가자" width="100%" textAlign="Center" />
									<Label text="목표 수립" width="100%" textAlign="Center" />
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo1}" width="100%" />
									</VBox>
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo2}" width="100%" />
									</VBox>
									<Label text="중간 점검" width="100%" textAlign="Center" />
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo3}" width="100%" />
									</VBox>
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo4}" width="100%" />
									</VBox>
									<Label text="성과 평가" width="100%" textAlign="Center" />
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo5}" width="100%" />
									</VBox>
									<VBox>
										<TextArea rows="5" growing="true" value="{/manage/Todo6}" width="100%" />
									</VBox>
								</grid:CSSGrid>
							</VBox>
							<VBox class="vCardBox sapUiSmallMarginTop">
								<HBox alignItems="Center" class="title">
									<layoutData>
										<FlexItemData growFactor="1"/>
									</layoutData>
									<Title level="H2" text="{i18n>LABEL_10010}" />
								</HBox>
								<TextArea width="100%" growing="true" growingMaxLines="10" value="{/manage/Todo7}" />
							</VBox>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</HBox>
		</VBox>
	</Page>
</mvc:View>