<mvc:View controllerName="sap.ui.yesco.mvc.controller.performance.Session"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control"
    xmlns:mvc="sap.ui.core.mvc">
    <Page showHeader="false">
        <VBox class="contents-header">
            <HBox justifyContent="SpaceBetween" class="breadcrumbs">
                <custom:Breadcrumbs />
                <HBox>
                    <Button text="{i18n>LABEL_00103}" class="sapUiTinyMarginEnd" type="Emphasized" visible="{/isActive}" press=".onPressSave" />
                    <Button text="{i18n>LABEL_00117}" class="sapUiTinyMarginEnd" type="Emphasized" visible="{/isActive}" press=".onPressComplete" />
                    <Button icon="sap-icon://print" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" press=".onPagePrint" />
                    <Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" press=".onPressHelp" visible="{= !!${menuModel>/current/showHelp} }" />
                </HBox>
            </HBox>
        </VBox>
        <VBox class="contents" visible="{/busy}">
            <VBox width="100%" justifyContent="Center" class="loadingBox">
                <custom:Placeholder />
            </VBox>
            <VBox width="100%" justifyContent="Center" class="loadingBox">
                <custom:Placeholder />
            </VBox>
        </VBox>
        <VBox class="contents" busyIndicatorDelay="0" busy="{/pageBusy}" visible="{= !${/busy} }">
            <core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.session.Department" type="XML" />
            <IconTabBar class="type-b sapUiSmallMarginTop" expandable="false" selectedKey="{/tab/selectedKey}">
                <items>
                    <IconTabFilter text="{i18n>LABEL_10070}" key="A">
                        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.session.Grid" type="XML" />
                    </IconTabFilter>
                    <IconTabFilter text="{i18n>LABEL_10071}" key="B">
                        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.performance.fragment.session.List" type="XML" />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </VBox>
    </Page>
</mvc:View>