<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox summary-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <HBox class="title" alignItems="End">
        <Title level="H2" text="{i18n>LABEL_27002}" />
        <Text text="{i18n>LABEL_27003}" />
      </HBox>
      <HBox alignItems="Start">
        <core:HTML content='&lt;div id="chart-work-app-dial-container"&gt;&lt;/div&gt;' />
        <VBox alignItems="End" width="100%" class="workTime-summary-box">
          <Label text="today"/>
          <ObjectStatus text="{/MyWork/Timtx}" state="Indication05" />
          <Text text="{/MyWork/Wktim}" />
          <Label text="this week" class="mt-10-px"/>
          <ObjectStatus text="{/MyWork/Reltm} {/MyWork/Reltx}" state="Indication05" />
          <Text text="{/MyWork/Wkrul}" />
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>