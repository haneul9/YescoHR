<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <VBox class="hCardBox summary-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <HBox class="title" alignItems="End">
        <Title level="H2" text="{i18n>LABEL_27002}" />
        <Text text="{i18n>LABEL_27003}" />
      </HBox>
      <HBox class="summary-info" alignItems="Center">
        <core:HTML content='&lt;div id="chart-dial-container"&gt;&lt;/div&gt;' />
        <VBox alignItems="End">
          <Label text="today"/>
          <ObjectStatus text="{/MyWork/Reltm}" state="Indication05" />
          <Text text="{
                path: '/MyWork/Prdtx',
                formatter: '.formatWeek'
            }" />
          <Label text="this week"/>
          <ObjectStatus text="{/MyWork/Reltm}" state="Indication05" />
          <Text text="{i18n>MSG_27002}" />
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>