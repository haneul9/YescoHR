<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="hCardBox overview-box my-work-time-overview" width="33%" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <HBox class="title" alignItems="End">
        <custom:Title text="{i18n>LABEL_27002}" />
        <Text text="{i18n>LABEL_27003}" class="sapUiSmallMarginBegin" />
      </HBox>
      <HBox alignItems="Start">
        <core:HTML content='&lt;div id="chart-work-app-dial-container"&gt;&lt;/div&gt;' />
        <VBox alignItems="End" width="100%" class="workTime-summary-box">
          <Label text="today" class="label-today" />
          <ObjectStatus text="{/MyWork/Timtx}" state="Indication05" />
          <Text text="{/MyWork/Wktim}" />
          <!-- <Label text="this week" class="mt-10-px"/> -->
          <Label text="{/MyWork/Text}" class="label-week mt-10-px" />
          <ObjectStatus text="{/MyWork/Reltm} {/MyWork/Reltx}" state="Indication05" class="font-20-px" />
          <Text text="{/MyWork/Wkrul}" />
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>