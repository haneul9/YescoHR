<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <Panel expanded="{/level/expanded}" expandable="true" width="auto" class="capability-level">
        <customData>
            <core:CustomData key="type" value="{/level/type}" writeToDom="true" />
        </customData>
        <layoutData>
            <FlexItemData growFactor="1"/>
        </layoutData>
        <headerToolbar>
            <OverflowToolbar height="3rem" style="Clear">
                <grid:CSSGrid gridTemplateColumns="1fr repeat({/level/count}, 2fr)" gridGap="6px" items="{/level/headers}">
                    <VBox>
                        <customData>
                            <core:CustomData key="type" value="{type}" writeToDom="true" />
                        </customData>
                        <Label text="{label}" visible="{= !!${label}}" />
                        <Text text="{text}" visible="{= !!${text}}" />
                    </VBox>
                </grid:CSSGrid>
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <grid:CSSGrid gridTemplateColumns="1fr repeat({/level/count}, 2fr)" gridGap="6px" items="{/level/rows}">
                <VBox items="{child}">
                    <customData>
                        <core:CustomData key="type" value="{type}" writeToDom="true" />
                    </customData>
                    <Text text="{text}" />
                </VBox>
            </grid:CSSGrid>
        </content>
    </Panel>
</core:FragmentDefinition>