<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox summary-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
        <VBox>
            <HBox justifyContent="SpaceBetween" class="title">
                <Title level="H2" text="{i18n>LABEL_09002}" />
            </HBox>
            <Text text="{
                path: '/Total/Zyear',
                formatter: '.thisYear'
            }" class="sapUiSmallMarginBottom" />
            <HBox>
                <VBox width="30%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_02003}" />
                    <ObjectStatus text="{
                        path: '/Total/Count',
                        formatter: '.formatNumber'
                    }" state="Indication05" />
                </VBox>
                <VBox width="30%" class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_09009}" />
                    <ObjectStatus text="{
                        path: '/Total/Pybet',
                        formatter: '.formatPay'
                    }" state="Indication05" />
                </VBox>
                <VBox class="summary-info">
                    <Label design="Bold" text="{i18n>LABEL_09003}" />
                    <ObjectStatus text="{
                        path: '/Total/Apbet',
                        formatter: '.formatPay'
                    }" state="Indication05" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>