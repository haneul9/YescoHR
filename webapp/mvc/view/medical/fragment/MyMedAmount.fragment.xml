<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="hCardBox overview-box medical-overview" width="33%" busyIndicatorDelay="0" busy="{/busy}">
    <VBox>
      <custom:HeaderTitleCountMessage titlePath="i18n>LABEL_09002" class="title" />
      <Text text="{ path: '/Total/Zyear', formatter: '.thisYear' }" class="sapUiSmallMarginBottom" />
      <HBox class="mt-50-px medical-overview-content">
        <VBox width="20%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_02003}" />
          <ObjectStatus text="{ path: '/Total/Count', formatter: '.formatNumber' }" state="Indication05" />
        </VBox>
        <VBox width="40%" class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_09009}" />
          <HBox alignItems="Baseline">
            <ObjectStatus text="{ path: '/Total/Pybet', formatter: '.formatPay' }" state="Indication05" class="mr-5-px" />
            <Label design="Bold" text="{i18n>LABEL_00158}" />
          </HBox>
        </VBox>
        <VBox class="overview-info">
          <Label design="Bold" text="{i18n>LABEL_09003}" />
          <HBox alignItems="Baseline">
            <ObjectStatus text="{ path: '/Total/Apbet', formatter: '.formatPay' }" state="Indication04" class="mr-5-px available-amount-text" />
            <Label design="Bold" text="{i18n>LABEL_00158}" />
          </HBox>
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>