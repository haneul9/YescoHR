<mvc:View controllerName="sap.ui.yesco.mvc.controller.medical.mobile.Medical"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page navButtonPress=".onNavBack" showFooter="{= ${/Total/Btnyn} === 'Y' }">
    <VBox class="contents">
      <core:Fragment fragmentName="sap.ui.yesco.fragment.mobile.OverviewListHeader" type="XML" />
      <mobile:ScrollContainer>
        <mobile:List items="{/List}">
          <mobile:CustomListItem press=".onSelectRow">
            <mobile:ApprovalRequestListItemBox statusFieldName="Lnsta">
              <mobile:ListCSSGrid gridTemplateColumns="1fr 1fr">
                <Text text="{Znametx}" class="font-16-px font-bold" />
                <Text text="{Apcnt}{i18n>LABEL_09101}" width="100%" textAlign="Right" />
                <Text text="{ path: 'Appda', type: 'sap.ui.yesco.mvc.model.type.Date' }" />
                <Text text="{ path: 'Apbet', type: 'sap.ui.yesco.mvc.model.type.Currency' }" width="100%" textAlign="Right" />
              </mobile:ListCSSGrid>
            </mobile:ApprovalRequestListItemBox>
          </mobile:CustomListItem>
        </mobile:List>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <mobile:ApprovalRequestListFooterToolbar pressRequestNew=".onClick" />
    </mobile:footer>
  </mobile:Page>
</mvc:View>