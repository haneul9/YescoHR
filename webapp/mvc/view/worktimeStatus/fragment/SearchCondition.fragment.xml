<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox">
        <grid:CSSGrid gridTemplateColumns="1fr 2fr 1fr 2fr 1fr 2fr 1fr 2fr 1fr" gridGap="8px">
            <Label text="{i18n>LABEL_00328}" design="Bold" class="pl-45-px" />
            <DatePicker displayFormat="yyyy.MM" valueFormat="yyyyMM" change=".onSearchDate" value="{/search/Zyymm}" />
            <Label text="{i18n>LABEL_00237}" design="Bold" class="pl-45-px" />
            <ComboBox items="{/AreaList}" selectedKey="{/search/Werks}">
                <core:Item text="{Pbtxt}" key="{Werks}" />
            </ComboBox>
            <Label text="{i18n>LABEL_00227}" design="Bold" class="pl-45-px" />
            <ComboBox items="{/OrgList}" selectedKey="{/search/Orgeh}">
                <core:Item text="{Orgtx}" key="{Orgeh}" />
            </ComboBox>
            <Label text="{i18n>LABEL_32002}" design="Bold" class="pl-45-px" />
            <ComboBox items="{/GubunList}" selectedKey="{/search/Disty}">
                <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
            <Button text="{i18n>LABEL_00100}" press=".onSearch" class="icon-button" />
        </grid:CSSGrid>
    </VBox>
</core:FragmentDefinition>