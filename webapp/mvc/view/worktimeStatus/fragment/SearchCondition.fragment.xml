<core:FragmentDefinition xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <VBox class="hCardBox search-box">
        <grid:CSSGrid gridTemplateColumns="1fr 2fr 1fr 2fr 1fr 2fr 1fr 2fr 1fr" gridGap="8px">
            <Label text="{i18n>LABEL_00328}" design="Bold" />
             <DatePicker displayFormat="yyyy.MM" valueFormat="yyyyMM" change=".onSearchDate" value="{/search/secondDate}" />
            <Label text="{i18n>LABEL_00237}" design="Bold" />
            <ComboBox items="{/EduType}" selectedKey="{/search/Lctyp}">
                <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
            <Label text="{i18n>LABEL_00227}" design="Bold" />
            <ComboBox items="{/EduType}" selectedKey="{/search/Lctyp}">
                <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
            <Label text="{i18n>LABEL_32002}" design="Bold" />
            <ComboBox items="{/EduType}" selectedKey="{/search/Lctyp}">
                <core:Item text="{Ztext}" key="{Zcode}" />
            </ComboBox>
            <Button type="Transparent" press=".onSearch" class="icon-button search" />
        </grid:CSSGrid>
    </VBox>
</core:FragmentDefinition>