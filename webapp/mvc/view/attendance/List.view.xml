<mvc:View controllerName="sap.ui.yesco.mvc.controller.attendance.List"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="sap.ui.yesco.control">
	<Page showHeader="false">
		<VBox class="contents-header">
			<HBox justifyContent="SpaceBetween" class="breadcrumbs">
				<custom:Breadcrumbs />
				<HBox>
					<Button type="Emphasized" class="sapUiTinyMarginEnd" text="{i18n>LABEL_04002}" press=".onPressNewApprovalBtn" busyIndicatorDelay="0" busy="{/busy}" />
					<Button type="Emphasized" class="sapUiTinyMarginEnd" text="{i18n>LABEL_04003}" press=".onPressModApprovalBtn" enabled="{= ${/isVisibleActionButton}}" busyIndicatorDelay="0" busy="{/busy}" />
					<Button type="Emphasized" class="sapUiTinyMarginEnd" text="{i18n>LABEL_04004}" press=".onPressCancApprovalBtn" enabled="{= ${/isVisibleActionButton}}" busyIndicatorDelay="0" busy="{/busy}" />
					<Button icon="sap-icon://print" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" />
					<Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" />
				</HBox>
			</HBox>
		</VBox>
		<VBox class="contents">
			<HBox justifyContent="SpaceAround" class="sapUiMediumMarginBottom">
				<core:Fragment fragmentName="sap.ui.yesco.fragment.AppointeeBox" type="XML" />
				<VBox class="hCardBox sapUiMediumMarginEnd" width="33%">
					<core:Fragment fragmentName="sap.ui.yesco.mvc.view.attendance.fragment.VacationOverview" type="XML" />
				</VBox>
				<VBox class="hCardBox search-condition-box" width="33%" busyIndicatorDelay="0" busy="{/busy}">
					<core:Fragment fragmentName="sap.ui.yesco.mvc.view.attendance.fragment.OverviewSearchCondition" type="XML" />
				</VBox>
			</HBox>
			<VBox class="vCardBox">
				<core:Fragment fragmentName="sap.ui.yesco.fragment.OverviewTableHeader" type="XML" />
				<core:Fragment fragmentName="sap.ui.yesco.mvc.view.attendance.fragment.OverviewTable" type="XML" />
			</VBox>
		</VBox>
	</Page>
</mvc:View>