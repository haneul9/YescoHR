<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:custom="sap.ui.yesco.control">
    <HBox alignItems="End">
        <Title level="H2" text="{i18n>LABEL_04005}" />
        <Text text="현재일 기준, 사용/잔여/발생" />
    </HBox>
    <grid:CSSGrid gridTemplateColumns="1fr 1fr 1fr" gridGap="8px" items="{ path: '/quota' }">
        <VBox alignItems="Start">
            <Label text="{Kotxt}" />
            <custom:VacationIndicator width="8rem" total="{Crecnt}" used="{Usecnt}" showTotal="true" />
        </VBox>
    </grid:CSSGrid>
</core:FragmentDefinition>