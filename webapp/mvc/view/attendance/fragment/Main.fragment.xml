<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control">
    <Page showHeader="false">
        <VBox class="contents-header">
            <HBox justifyContent="SpaceBetween" class="breadcrumbs">
                <custom:Breadcrumbs />
                <HBox>
                    <Button type="Emphasized" class="sapUiTinyMarginEnd" text="{i18n>LABEL_04002}" press=".onPressNewApprovalBtn" busyIndicatorDelay="0" busy="{/busy}" />
                    <Button type="Emphasized" class="sapUiTinyMarginEnd" text="{i18n>LABEL_04003}" press=".onPressModApprovalBtn" busyIndicatorDelay="0" busy="{/busy}" />
                    <Button type="Emphasized" class="sapUiTinyMarginEnd" text="{i18n>LABEL_04004}" press=".onPressCancApprovalBtn" busyIndicatorDelay="0" busy="{/busy}" />
                    <Button icon="sap-icon://print" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" press=".onPagePrint" />
                    <Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" press=".onPressHelp" visible="{= !!${menuModel>/current/showHelp} }" />
                </HBox>
            </HBox>
        </VBox>
        <VBox class="contents">
            <HBox justifyContent="SpaceAround">
                <core:Fragment fragmentName="sap.ui.yesco.fragment.AppointeeBox" type="XML" />
                <core:Fragment fragmentName="sap.ui.yesco.mvc.view.attendance.fragment.VacationOverview" type="XML" />
                <core:Fragment fragmentName="sap.ui.yesco.mvc.view.attendance.fragment.OverviewSearchCondition" type="XML" />
            </HBox>
            <VBox class="vCardBox">
                <core:Fragment fragmentName="sap.ui.yesco.fragment.OverviewTableHeader" type="XML" />
                <core:Fragment fragmentName="sap.ui.yesco.mvc.view.attendance.fragment.OverviewTable" type="XML" />
            </VBox>
        </VBox>
    </Page>
</core:FragmentDefinition>