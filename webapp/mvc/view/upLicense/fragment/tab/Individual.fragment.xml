      </HBox>
    </HBox>
    <table:Table id="indiTable" selectionMode="None" width="100%" columnHeaderHeight="45" rowHeight="44" rows="{/indiList}" visibleRowCount="{/listInfo/rowCount}" noData="{i18n>MSG_00001}">
