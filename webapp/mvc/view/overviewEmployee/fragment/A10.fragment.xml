<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control">
    <VBox class="portlet portlet-box" visible="{/contents/A10/busy}">
        <custom:Placeholder />
    </VBox>
    <VBox class="portlet portlet-box" visible="{= !${/contents/A10/busy} }">
        <HBox class="portlet-header">
            <Title level="H2" text="{i18n>LABEL_28018}" />
            <Image src="asset/image/icon_human_green.svg" width="12px" class="ml-8-px" />
            <Text text="">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Text>
            <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" />
        </HBox>
        <VBox class="portlet-body">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
            <core:HTML content='&lt;div id="employee-a10-chart-container"&gt;&lt;/div&gt;'>
                <core:layoutData>
                    <FlexItemData growFactor="1" />
                </core:layoutData>
            </core:HTML>
        </VBox>
    </VBox>
</core:FragmentDefinition>