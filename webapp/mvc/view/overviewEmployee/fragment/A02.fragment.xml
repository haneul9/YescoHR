<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control">
    <VBox class="portlet portlet-box" visible="{/contents/A02/busy}">
        <custom:Placeholder />
    </VBox>
    <VBox class="portlet portlet-box" visible="{= !${/contents/A02/busy} }">
        <HBox class="portlet-header">
            <Title level="H2" text="{i18n>LABEL_28010}" />
            <Image src="asset/image/icon_human_green.svg" width="12px" class="ml-8-px" />
            <Text text="">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Text>
            <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" />
        </HBox>
        <VBox class="portlet-body">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
            <HBox width="100%" justifyContent="Center">
                <Label text="{/contents/A02/data/Title01}" />
            </HBox>
            <HBox width="100%" justifyContent="SpaceBetween">
                <HBox>
                    <ObjectStatus text="{/contents/A02/data/Title10}" state="Information" />
                    <VBox>
                        <ObjectStatus text="{/contents/A02/data/Cnt11}&#37;" state="Information" />
                        <ObjectStatus text="{/contents/A02/data/Cnt12}명" state="Information" />
                    </VBox>
                </HBox>
                <HBox>
                    <Label text="{/contents/A02/data/Cnt01}명, {/contents/A02/data/Cnt02}&#37;" />
                </HBox>
                <HBox>
                    <VBox>
                        <ObjectStatus text="{/contents/A02/data/Cnt21}&#37;" state="Error" />
                        <ObjectStatus text="{/contents/A02/data/Cnt22}명" state="Error" />
                    </VBox>
                    <ObjectStatus text="{/contents/A02/data/Title20}" state="Error" />
                </HBox>
            </HBox>
            <HBox>
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
                <core:HTML content='&lt;div id="employee-a02-chart-container"&gt;&lt;/div&gt;' />
            </HBox>
            <HBox justifyContent="SpaceBetween">
                <Label text="{i18n>LABEL_28031}" />
                <Label text="{i18n>LABEL_28032}" />
            </HBox>
            <HBox justifyContent="SpaceBetween">
                <Text text="{i18n>MSG_28001}" />
                <Text text="{i18n>MSG_28002}" />
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>