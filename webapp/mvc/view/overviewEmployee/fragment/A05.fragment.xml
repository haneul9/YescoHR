<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="portlet portlet-box" visible="{/contents/A05/busy}">
    <custom:Placeholder />
  </VBox>
  <VBox class="portlet portlet-box" visible="{= !${/contents/A05/busy} }">
    <customData>
      <core:CustomData key="key" value="a05" />
    </customData>
    <HBox class="portlet-header">
      <Title level="H2" text="{i18n>LABEL_28013}" />
      <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_human_green.svg" width="12px" class="ml-8-px" tooltip="{i18n>LABEL_28003}" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{hasLink}" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_window.svg" iconDensityAware="false" type="Transparent" class="icon-button portlet-link-icon" press=".onToggleExpanded" />
    </HBox>
    <HBox class="portlet-body">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <VBox width="25%" height="100%">
        <Label text="{ path: '/contents/A05/data/Cnt01', type: 'sap.ui.yesco.mvc.model.type.Currency' }" class="font-2h-rem color-03 normal letter-spacing-sm overflow-visible"/>
      </VBox>
      <VBox width="75%">
        <core:HTML content='&lt;div id="employee-a05-chart-container" class="column-chart"&gt;&lt;/div&gt;'>
          <core:layoutData>
            <FlexItemData growFactor="1" />
          </core:layoutData>
        </core:HTML>
      </VBox>
    </HBox>
  </VBox>
</core:FragmentDefinition>