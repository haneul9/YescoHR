<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control">
    <VBox class="portlet portlet-box" visible="{/contents/A06/busy}">
        <custom:Placeholder />
    </VBox>
    <VBox class="portlet portlet-box" visible="{= !${/contents/A06/busy} }">
        <HBox class="portlet-header">
            <Title level="H2" text="{i18n>LABEL_28014}" />
            <Image src="asset/image/icon_human_green.svg" width="12px" class="ml-8-px" />
            <Text text="">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Text>
            <Button visible="{hasLink}" icon="sap-icon://add" type="Transparent" class="icon-button portlet-link-icon" />
        </HBox>
        <VBox>
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
            <HBox width="100%" justifyContent="SpaceBetween">
                <HBox>
                    <ObjectStatus icon="sap-icon://person-placeholder" state="Information" />
                    <VBox>
                        <ObjectStatus text="{/contents/A06/Cnt11}&#37;" state="Information" />
                        <ObjectStatus text="{/contents/A06/Cnt12}명" state="Information" />
                    </VBox>
                </HBox>
                <HBox>
                    <VBox>
                        <ObjectStatus text="{/contents/A06/Cnt21}&#37;" state="Error" />
                        <ObjectStatus text="{/contents/A06/Cnt22}명" state="Error" />
                    </VBox>
                    <ObjectStatus icon="sap-icon://person-placeholder" state="Error" />
                </HBox>
            </HBox>
            <HBox>
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
                <core:HTML content='&lt;div id="employee-a06-chart-container"&gt;&lt;/div&gt;' />
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>