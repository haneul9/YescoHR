<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="portlet portlet-box" visible="{/contents/A06/busy}">
    <custom:Placeholder />
  </VBox>
  <VBox class="portlet portlet-box" visible="{= !${/contents/A06/busy} }">
    <customData>
      <core:CustomData key="key" value="a06" />
    </customData>
    <HBox class="portlet-header">
      <Title level="H2" text="{i18n>LABEL_28014}" />
      <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_human_green.svg" width="12px" class="ml-8-px" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{hasLink}" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_window.svg" iconDensityAware="false" type="Transparent" class="icon-button portlet-link-icon" press=".onToggleExpanded" />
    </HBox>
    <VBox class="portlet-body">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <HBox width="100%" justifyContent="SpaceBetween" class="mt-30-px">
        <custom:HBox class="active-link" click=".onPressCount">
          <custom:customData>
            <core:CustomData key="Headty" value="{/contents/A06/Headty}" />
            <core:CustomData key="Discod" value="{/contents/A06/data/Cod01}" />
          </custom:customData>
          <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_male.svg" />
          <VBox>
            <Text text="{/contents/A06/data/Cnt11}&#37;" class="color-01 font-20-px" />
            <Text text="{/contents/A06/data/Cnt12}{i18n>LABEL_00159}" class="color-01" />
          </VBox>
        </custom:HBox>
        <custom:HBox class="active-link" click=".onPressCount">
          <custom:customData>
            <core:CustomData key="Headty" value="{/contents/A06/Headty}" />
            <core:CustomData key="Discod" value="{/contents/A06/data/Cod02}" />
          </custom:customData>
          <VBox alignItems="End">
            <Text text="{/contents/A06/data/Cnt21}&#37;" class="color-02 font-20-px" />
            <Text text="{/contents/A06/data/Cnt22}{i18n>LABEL_00159}" class="color-02" />
          </VBox>
          <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_female.svg" />
        </custom:HBox>
      </HBox>
      <HBox>
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
        <core:HTML content='&lt;div id="employee-a06-chart-container"&gt;&lt;/div&gt;' />
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>