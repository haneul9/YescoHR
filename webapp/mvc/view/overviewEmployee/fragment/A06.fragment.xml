<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.yesco.control">
    <VBox class="portlet portlet-box" visible="{/contents/A06/busy}">
        <custom:Placeholder />
    </VBox>
    <VBox class="portlet portlet-box" visible="{= !${/contents/A06/busy} }">
        <HBox class="portlet-header">
            <Title level="H2" text="{i18n>LABEL_28014}" />
            <Image src="asset/image/icon_human_green.svg" width="12px" class="ml-8-px" />
            <Text text="">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Text>
            <Button visible="{hasLink}" icon="asset/image/icon_window.svg" type="Transparent" class="icon-button portlet-link-icon" />
        </HBox>
        <VBox class="portlet-body">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
            <HBox width="100%" justifyContent="SpaceBetween" class="mt-30-px">
                <HBox>
                    <Image src="asset/image/icon_male.svg" />
                    <VBox>
                        <Text text="{/contents/A06/data/Cnt11}&#37;" class="color-01 font-20-px" />
                        <Text text="{/contents/A06/data/Cnt12}명" class="color-01" />
                    </VBox>
                </HBox>
                <HBox>
                    <VBox alignItems="End">
                        <Text text="{/contents/A06/data/Cnt21}&#37;" class="color-02 font-20-px" />
                        <Text text="{/contents/A06/data/Cnt22}명" class="color-02" />
                    </VBox>
                    <Image src="asset/image/icon_female.svg" />
                </HBox>
            </HBox>
            <HBox>
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
                <core:HTML content='&lt;div id="employee-a06-chart-container"&gt;&lt;/div&gt;' />
            </HBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>