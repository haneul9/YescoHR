<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="portlet portlet-box" visible="{/contents/A03/busy}">
    <custom:Placeholder />
  </VBox>
  <VBox class="portlet portlet-box" visible="{= !${/contents/A03/busy} }">
    <customData>
      <core:CustomData key="key" value="a03" />
    </customData>
    <HBox class="portlet-header">
      <Title level="H2" text="{i18n>LABEL_28011}" />
      <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_human_green.svg" width="12px" class="ml-8-px" tooltip="{i18n>LABEL_28003}" />
      <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_human_orange.svg" width="12px" class="ml-3-px" tooltip="{i18n>LABEL_28004}" />
      <Text text="">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </Text>
      <Button visible="{hasLink}" icon="/sap/public/bc/ui2/zui5_yescohr/images/icon_window.svg" iconDensityAware="false" type="Transparent" class="icon-button portlet-link-icon" press=".onToggleExpanded" />
    </HBox>
    <VBox class="portlet-body" justifyContent="SpaceBetween">
      <layoutData>
        <FlexItemData growFactor="1" />
      </layoutData>
      <core:HTML content='&lt;div id="employee-a03-chart-container" class="doughnut-chart"&gt;&lt;/div&gt;'>
        <core:layoutData>
          <FlexItemData minHeight="70%" />
        </core:layoutData>
      </core:HTML>
      <!-- 범례 항목의 갯수가 적은 경우 하단으로 붙고 항목이 많아지면 점점 높이가 증가하다가 30% 이상이되면 scroll이 생성되는 구조 : HBox > ScrollContainer > HBox -->
      <HBox width="100%">
        <layoutData>
          <FlexItemData maxHeight="30%" />
        </layoutData>
        <ScrollContainer horizontal="false" vertical="true" width="100%">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
          <HBox width="100%" items="{ path: '/contents/A03/data', templateShareable: false }" wrap="Wrap" justifyContent="SpaceBetween" alignContent="End" class="legend-wrap">
            <custom:HBox justifyContent="SpaceBetween" class="active-link" press=".onPressCount" width="40%">
              <custom:customData>
                <core:CustomData key="OData" value="H" />
                <core:CustomData key="Headty" value="{/contents/A03/Headty}" />
                <core:CustomData key="Discod" value="{Cod01}" />
              </custom:customData>
              <Label text="{Ttltxt} :" class="statistic-text legend">
                <customData>
                  <core:CustomData key="legend" value="{Type}" writeToDom="true" />
                </customData>
              </Label>
              <Text text=" { path: 'Cnt01', type: 'sap.ui.yesco.mvc.model.type.Currency' }" class="statistic-text" />
            </custom:HBox>
          </HBox>
        </ScrollContainer>
      </HBox>
    </VBox>
  </VBox>
</core:FragmentDefinition>