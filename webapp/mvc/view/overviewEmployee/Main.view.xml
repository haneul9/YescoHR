<mvc:View controllerName="sap.ui.yesco.mvc.controller.overviewEmployee.Main"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control">
  <Page showHeader="false">
    <VBox class="contents-header">
      <HBox justifyContent="SpaceBetween" class="breadcrumbs">
        <custom:Breadcrumbs />
        <HBox>
          <Button icon="sap-icon://print" text="{i18n>LABEL_00131}" class="sapUiTinyMarginEnd" press=".onPagePrint" />
          <Button icon="sap-icon://sys-help" text="{i18n>LABEL_00132}" press=".onPressHelp" visible="{= !!${menuModel>/current/showHelp} }" />
        </HBox>
      </HBox>
    </VBox>
    <VBox class="contents">
      <HBox class="vCardBox" justifyContent="SpaceBetween">
        <HBox class="form-bar" alignItems="Center">
          <Label text="{i18n>LABEL_28001}" />
          <custom:DatePicker dateValue="{ path: '/searchConditions/Begda', type: 'sap.ui.yesco.mvc.model.type.Date' }" width="250px" />
          <Label text="{i18n>LABEL_00237}" />
          <ComboBox items="{/searchConditions/entryPersa}" selectedKey="{/searchConditions/Persa}">
            <core:Item text="{Pertx}" key="{Persa}" />
          </ComboBox>
          <Label text="{i18n>LABEL_00224}" />
          <ComboBox items="{/searchConditions/entryOrgeh}" selectedKey="{/searchConditions/Orgeh}">
            <core:Item text="{Orgtx}" key="{Orgeh}" />
          </ComboBox>
          <Button text="{i18n>LABEL_00100}" icon="asset/image/icon_search03.png" press=".onPressSearch"/>
        </HBox>
        <VBox>
          <Image src="asset/image/avatar-unknown.svg" width="1.2rem" />
          <Image src="asset/image/avatar-unknown.svg" width="1.2rem" />
        </VBox>
      </HBox>
      <grid:CSSGrid gridGap="8px" gridTemplateRows="repeat(3, 1fr)" gridTemplateColumns="repeat(4, 1fr)" class=" sapUiSmallMarginTop">
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A01" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A02" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A03" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A04" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A05" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A06" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A07" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A08" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A09" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A10" type="XML" />
        <core:Fragment fragmentName="sap.ui.yesco.mvc.view.overviewEmployee.fragment.A11" type="XML" />
      </grid:CSSGrid>
    </VBox>
  </Page>
</mvc:View>