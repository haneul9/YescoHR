<core:FragmentDefinition xmlns="sap.m"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:custom="sap.ui.yesco.control">
  <VBox class="vCardBox" visible="{/result/busy}">
    <custom:Placeholder />
  </VBox>
  <VBox class="vCardBox" visible="{= !${/result/busy} }">
    <HBox class="table-toolbar" justifyContent="SpaceBetween">
      <HBox class="title">
        <Title text="{i18n>LABEL_00204}" level="H4" />
        <Text class="sapUiSmallMarginBegin total-txt" text="total {/result/totalCount}" />
      </HBox>
      <HBox class="status-wrap">
        <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_YH.svg" height="15px" class="pr-3-px"/>
        <Text text="{i18n>LABEL_WERKS_1000}" class="sapUiSmallMarginEnd"/>
        <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_YS.svg" height="15px" class="pr-3-px"/>
        <Text text="{i18n>LABEL_WERKS_2000}" class="sapUiSmallMarginEnd"/>
        <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_HS.svg" height="15px" class="pr-3-px"/>
        <Text text="{i18n>LABEL_WERKS_3000}" class="sapUiSmallMarginEnd"/>
        <Image src="/sap/public/bc/ui2/zui5_yescohr/images/icon_YI.svg" height="15px" class="pr-3-px"/>
        <Text text="{i18n>LABEL_WERKS_4000}" class="sapUiSmallMarginEnd"/>
        <ObjectStatus text="{i18n>LABEL_35010}" class="sapUiSmallMarginEnd" icon="sap-icon://circle-task-2" state="Indication03" />
        <ObjectStatus text="{i18n>LABEL_35011}" class="sapUiSmallMarginEnd" icon="sap-icon://circle-task-2" state="Indication04" />
        <ObjectStatus text="{i18n>LABEL_35012}" icon="sap-icon://circle-task-2" state="Indication05" />
      </HBox>
    </HBox>
    <f:GridList id="talentList" mode="MultiSelect" items="{ path: '/result/list' }" class="talent-list sapUiResponsiveContentPadding" visible="{= ${/result/totalCount} !== 0 }">
      <f:customLayout>
        <!-- <grid:GridBasicLayout gridTemplateColumns="repeat(auto-fit, minmax(17rem, 1fr))" gridGap="20px" /> -->
        <grid:GridBasicLayout gridTemplateColumns="repeat(5, 1fr)" gridGap="20px" />
      </f:customLayout>
      <f:GridListItem highlight="{ColtyState}">
        <VBox height="100%">
          <HBox height="100%" class="sapUiTinyMargin" alignItems="Center">
            <Image src="{PicUrl}" width="3rem" class="sapUiSmallMarginEnd talent-list-PicUrl" press=".onPressPic" />
            <VBox>
              <FlexBox width="166px" alignContent="SpaceBetween" justifyContent="SpaceBetween" class="talent-list-emp-name">
                <items>
                  <Title text="{Linetx1}" wrapping="true"/>
                  <Image src="{Icon}" height="15px" class="pr-10-px" />
                </items>
              </FlexBox>
              <Text text="{= ${Linetx2} === '' ? '\n' : ${Linetx2}}" />
              <Text text="{= ${Linetx3} === '' ? '\n' : ${Linetx3}}" />
              <Text text="{= ${Linetx4} === '' ? '\n' : ${Linetx4}}" />
              <Text text="{= ${Linetx5} === '' ? '\n' : ${Linetx5}}" />
            </VBox>
          </HBox>
        </VBox>
      </f:GridListItem>
    </f:GridList>
  </VBox>
</core:FragmentDefinition>