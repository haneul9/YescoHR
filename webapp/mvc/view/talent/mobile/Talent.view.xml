<mvc:View controllerName="sap.ui.yesco.mvc.controller.talent.mobile.Talent"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:custom="sap.ui.yesco.control"
  xmlns:mobile="sap.ui.yesco.control.mobile">
  <mobile:Page navButtonPress=".onNavBack">
    <VBox class="contents mobile-mss-talent-list">
      <mobile:SearchAreaCSSGrid gridTemplateColumns="2fr 1fr" rowCount="3">
        <custom:SingleComboBox width="100%" selectedKey="{/search/Werks}" items="{/entry/Werks}">
          <core:Item key="{Werks}" text="{Pbtxt}" />
        </custom:SingleComboBox>
        <Button width="100%" icon="/sap/public/bc/ui2/zui5_yescohr/images/btn_DetailSearch.svg" iconDensityAware="false" text="{i18n>LABEL_35004}" press=".onPressDetailConditionsDialog" />
        <custom:SingleComboBox width="100%" selectedKey="{/saved/selectedCondition}" items="{/saved/entry}" enabled="{= !${/result/busy} }" selectionChange=".onChangeSearchCondition">
          <core:Item key="{Zcode}" text="{Ztext}" />
        </custom:SingleComboBox>
        <Button width="100%" text="{i18n>LABEL_35005}" icon="/sap/public/bc/ui2/zui5_yescohr/images/btn_Reflesh.svg" iconDensityAware="false" enabled="{= !${/result/busy} }" press=".onPressConditionReset" />
        <SearchField id="talentSearchField" maxLength="{/fieldLimit/Freetx}" value="{/search/Freetx}" placeholder="{i18n>MSG_35012}" search=".onPressSearch" />
        <ComboBox width="100%" selectedKey="{/search/Command}">
          <items>
            <core:Item text="AND" key="AND" />
            <core:Item text="OR" key="OR" />
          </items>
        </ComboBox>
      </mobile:SearchAreaCSSGrid>
      <mobile:HeaderTitleCountStatus titlePath="i18n>LABEL_35003" countPath="/result/totalCount" pressInfoIcon=".onPressLegend" />
      <mobile:ScrollContainer>
        <f:GridList id="talentList" mode="MultiSelect" items="{/result/list}" class="talent-list sapUiResponsiveContentPadding" visible="{= ${/result/totalCount} !== 0 }">
          <f:customLayout>
            <grid:GridBasicLayout gridTemplateColumns="1fr" gridGap="10px" />
          </f:customLayout>
          <f:GridListItem highlight="{ColtyState}">
            <VBox height="100%">
              <HBox height="100%" class="sapUiTinyMargin" alignItems="Center">
                <Image src="{PicUrl}" width="3rem" class="sapUiSmallMarginEnd talent-list-PicUrl" press=".onPressPic" />
                <VBox width="100%">
                  <FlexBox width="calc(100% - 27px)" alignContent="SpaceBetween" justifyContent="SpaceBetween" class="talent-list-emp-name">
                    <items>
                      <Title text="{ path: 'Linetx1', type: 'sap.ui.yesco.mvc.model.type.ShortPosition' }" wrapping="true"/>
                      <Image src="{Icon}" height="15px" class="pr-10-px" />
                    </items>
                  </FlexBox>
                  <Text text="{= ${Linetx2} === '' ? '\n' : ${Linetx2}}" />
                  <Text text="{= ${Linetx3} === '' ? '\n' : ${Linetx3}}" />
                  <Text text="{= ${Linetx4} === '' ? '\n' : ${Linetx4}}" />
                  <Text text="{= ${Linetx5} === '' ? '\n' : ${Linetx5}}" />
                </VBox>
              </HBox>
            </VBox>
          </f:GridListItem>
        </f:GridList>
      </mobile:ScrollContainer>
    </VBox>
    <mobile:footer>
      <OverflowToolbar>
        <HBox class="button-group button-1">
          <Button text="{i18n>LABEL_35002}" press=".onPressCompare" />
        </HBox>
      </OverflowToolbar>
    </mobile:footer>
  </mobile:Page>
</mvc:View>